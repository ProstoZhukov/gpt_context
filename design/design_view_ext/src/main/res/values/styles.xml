<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ButtonWithStateViewStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/text_color_black_2</item>
        <item name="android:textSize">@dimen/size_Body_2_scale_off</item>
        <item name="android:minHeight">@dimen/design_view_ext_button_with_state_view_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/design_view_ext_button_with_state_view_default_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/design_view_ext_button_with_state_view_default_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/design_view_ext_button_with_state_view_default_vertical_padding</item>
        <item name="android:paddingRight">@dimen/design_view_ext_button_with_state_view_default_vertical_padding</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <!-- Floating buttons panel -->
    <style name="FloatingButtonsPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SbisProgressBarGlobal">
        <item name="progressColor">?primaryIconColor</item>
    </style>

    <style name="BarcodeNumber" parent="RegularStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:freezesText">true</item>
        <item name="android:textColor">@color/text_color_black_1</item>
        <item name="android:textSize">@dimen/design_view_ext_barcode_text_size_20</item>
    </style>
</resources>