<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Атрибуты для определения темы компонента в составе темы приложения -->
    <attr name="listHeaderDateTheme" format="reference"/>
    <attr name="listItemDateTheme" format="reference"/>

    <!-- Задаёт набор атрибутов для ItemDateView -->
    <declare-styleable name="ItemDateView">
        <!-- Цвет текста в выделенном состоянии -->
        <attr name="ItemDateView_highlightTextColor" format="color|reference"/>
        <!--
            Режим отображения даты и времени во view. Позволяет определить для view, какой
            именно аспект данных FormattedDateTime нужно отображать
            см. DateViewMode
        -->
        <attr name="ItemDateView_dateViewMode" format="enum">
            <enum name="dateAndTime" value="0"/>
            <enum name="dateOnly" value="1"/>
            <enum name="timeOnly" value="2"/>
        </attr>
    </declare-styleable>

    <!-- Задаёт набор атрибутов для HeaderDateView -->
    <declare-styleable name="HeaderDateView">
        <!--
            Режим отображения даты и времени во view. Позволяет определить для view, какой
            именно аспект данных FormattedDateTime нужно отображать
            см. DateViewMode
        -->
        <attr name="HeaderDateView_dateViewMode" format="enum">
            <enum name="dateAndTime" value="0"/>
            <enum name="dateOnly" value="1"/>
            <enum name="timeOnly" value="2"/>
        </attr>
    </declare-styleable>

</resources>