<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="sbisTopNavigationTheme" format="reference"/>

    <!-- Атрибуты компонента шапки. -->
    <declare-styleable name="SbisTopNavigation">

        <!-- region Атрибуты настроек. -->
        <!-- Показывать ли стрелочку "Назад" -->
        <attr name="SbisTopNavigation_showBackButton" format="reference|boolean"/>

        <!-- Включено ли редактирование текста в шапке. -->
        <attr name="SbisTopNavigation_isEditingEnabled" format="reference|boolean"/>

        <!-- Максимальное количество строк в маленьком заголовке -->
        <attr name="SbisTopNavigation_smallTitleMaxLines" format="reference|integer"/>

        <!-- Размер иконки перед заголовком-->
        <attr name="SbisTopNavigation_leftIconSize" format="reference|dimension"/>
        <!-- endregion -->

        <!-- region Атрибуты цветов. -->
        <!-- Цвет фона шапки -->
        <attr name="SbisTopNavigation_backgroundColor" format="reference|color"/>

        <!-- Цвет заголовка шапки. -->
        <attr name="SbisTopNavigation_titleColor" format="reference|color"/>

        <!-- Цвет подзаголовка шапки. -->
        <attr name="SbisTopNavigation_subtitleColor" format="reference|color"/>

        <!-- Цвет кнопки-стрелочки назад. -->
        <attr name="SbisTopNavigation_backBtnColor" format="reference|color"/>
        <!-- endregion -->

        <!-- Дизайн старой шапки (синий фон, белая стрелка назад). -->
        <attr name="SbisTopNavigation_isOldToolbarDesign" format="reference|boolean"/>

        <!-- Стиль нижнего разделителя. -->
        <attr name="SbisTopNavigation_dividerStyle" format="reference|color"/>
        <!-- Состояние видимости нижнего разделителя. -->
        <attr name="SbisTopNavigation_isDividerVisible" format="boolean"/>
    </declare-styleable>
</resources>