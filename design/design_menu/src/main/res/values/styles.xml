<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SbisMenu">
        <item name="android:background">@drawable/menu_background</item>
    </style>

    <style name="SbisMenuPanel">
        <item name="android:background">?backgroundColorStack</item>
    </style>

    <style name="MenuMainTitle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?labelTextColor</item>
        <item name="android:textSize">?fontSize_m_scaleOn</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MenuItemText">
        <item name="android:maxLines">2</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:textSize">?fontSize_xl_scaleOn</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuDividerText">
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?labelTextColor</item>
        <item name="android:textSize">?fontSize_xs_scaleOn</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuItemComment">
        <item name="android:maxLines">2</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?unaccentedTextColor</item>
        <item name="android:textSize">?fontSize_xs_scaleOn</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ContainerTheme">
        <item name="ContainerBackground">?backgroundColorSticky</item>
    </style>

</resources>