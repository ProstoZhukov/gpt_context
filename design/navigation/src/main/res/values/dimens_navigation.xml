<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Navigation header -->
    <dimen name="navigation_menu_header_image_height">36dp</dimen>

    <!-- Navigation item -->
    <dimen name="standard_navigation_menu_width">278dp</dimen>
    <!-- Ширина аккордеона. Для экранов до w360dp используется нестандартная ширина -->
    <dimen name="navigation_menu_width">263dp</dimen>
    <!-- Внутренний отступ в аккордеоне. Должен применяться непосредственно на элементы
    (шапку, элементы меню, подвал) аккордеона т.к. их заливка/выделение не должны быть с отступом
    от края -->
    <dimen name="navigation_menu_counter_margin_end">16dp</dimen>
    <dimen name="navigation_menu_item_fade_size">32dp</dimen>
    <dimen name="navigation_menu_divider_height">12dp</dimen>
    <dimen name="navigation_menu_selection_border_width">4dp</dimen>
    <!--По спецификации отступ от края 11pd. 11dp - navigation_menu_padding_end = 3pd-->
    <dimen name="navigation_menu_widget_icon_padding_default">11dp</dimen>
    <dimen name="navigation_menu_widget_icon_min_size">42dp</dimen>

    <!-- Floating action button (FAB) -->
    <dimen name="fab_bottom_spacing" tools:ignore="UnusedResources">64dp</dimen>
    <dimen name="fab_elevation" tools:ignore="UnusedResources">6dp</dimen>

    <dimen name="navigation_menu_start_icon_margin">17dp</dimen>
</resources>