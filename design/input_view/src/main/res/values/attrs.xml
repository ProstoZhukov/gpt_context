<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="baseInputViewTheme" format="reference"/>
    <attr name="textInputViewTheme" format="reference"/>
    <attr name="multilineInputViewTheme" format="reference"/>
    <attr name="numberInputViewTheme" format="reference"/>
    <attr name="moneyInputViewTheme" format="reference"/>
    <attr name="maskInputViewTheme" format="reference"/>
    <attr name="dateInputViewTheme" format="reference"/>
    <attr name="phoneInputViewTheme" format="reference"/>
    <attr name="accessCodeInputViewTheme" format="reference"/>
    <attr name="passwordInputViewTheme" format="reference"/>
    <attr name="valueSelectionInputViewTheme" format="reference"/>

    <attr name="inputView_minValue" format="string"/>
    <attr name="inputView_maxValue" format="string"/>
    <attr name="inputView_isShownZeroValue" format="boolean"/>

    <declare-styleable name="BaseInputView">
        <!-- Стилизация со значениями по-умолчанию -->
        <attr name="inputView_isAccent" format="boolean"/>
        <attr name="inputView_placeholderTextColor" format="color"/>
        <attr name="inputView_titleTextColor" format="color"/>
        <attr name="inputView_titleTextColorAccent" format="color"/>
        <attr name="inputView_titleTextSize" format="dimension"/>
        <attr name="inputView_titleTextSizeAccent" format="dimension"/>
        <attr name="inputView_valueColor" format="color"/>
        <attr name="inputView_valueColorHighlight" format="color"/>
        <attr name="inputView_valueSize" format="dimension"/>
        <attr name="inputView_validationUnderlineSize" format="dimension"/>
        <attr name="inputView_validationUnderlineSizeFocus" format="dimension"/>
        <attr name="inputView_validationTextSize" format="dimension"/>
        <attr name="inputView_validationTextSizeAccent" format="dimension"/>
        <attr name="inputView_validationDefaultColor" format="color"/>
        <attr name="inputView_validationDefaultColorReadOnly" format="color"/>
        <attr name="inputView_validationTextDefaultColor" format="color"/>
        <attr name="inputView_validationErrorColor" format="color"/>
        <attr name="inputView_validationTextErrorColor" format="color"/>
        <attr name="inputView_validationWarningColor" format="color"/>
        <attr name="inputView_validationTextWarningColor" format="color"/>
        <attr name="inputView_validationSuccessColor" format="color"/>
        <attr name="inputView_validationTextSuccessColor" format="color"/>
        <attr name="inputView_iconColor" format="color"/>
        <attr name="inputView_iconColorAccent" format="color"/>
        <attr name="inputView_clearColor" format="color"/>
        <attr name="inputView_progressColor" format="color"/>
        <attr name="inputView_bottomOffsetUnderline" format="dimension"/>
        <!-- Стиль текста. -->
        <attr name="android:textStyle"/>
        <!-- Шрифт текста. -->
        <attr name="android:fontFamily"/>
        <!-- Свойства -->
        <attr name="inputView_placeholder" format="string"/>
        <attr name="inputView_value" format="string"/>
        <attr name="inputView_minEms" format="integer"/>
        <attr name="inputView_maxLength" format="integer"/>
        <attr name="inputView_validation_maxLines" format="integer"/>
        <attr name="inputView_readOnly" format="boolean"/>
        <attr name="inputView_title" format="string"/>
        <attr name="inputView_isRequiredField" format="boolean"/>
        <attr name="inputView_showPlaceholderAsTitle" format="boolean"/>
        <attr name="inputView_isClearVisible" format="boolean"/>
        <attr name="inputView_isProgressVisible" format="boolean"/>
        <attr name="inputView_onHideKeyboard" format="boolean"/>
        <attr name="inputView_showSoftInputOnFocus" format="boolean"/>
        <attr name="inputView_type" format="string"/>
        <attr name="inputView_clearFocusOnBackPressed" format="boolean"/>
        <attr name="inputView_isSelectAllOnBeginEditing" format="boolean"/>
        <attr name="android:gravity"/>
        <attr name="android:imeOptions"/>
        <attr name="android:digits"/>
        <attr name="android:nextClusterForward"/>
        <attr name="android:nextFocusForward"/>
        <attr name="android:nextFocusDown"/>
        <attr name="android:nextFocusLeft"/>
        <attr name="android:nextFocusUp"/>
        <attr name="android:nextFocusRight"/>
    </declare-styleable>

    <declare-styleable name="TextInputView">
        <!-- Стилизация со значениями по-умолчанию -->
        <attr name="inputView_linkTextColor" format="color"/>
        <attr name="inputView_linkTextSize" format="dimension"/>
        <attr name="inputView_linkIconSize" format="dimension"/>
        <!-- Свойства -->
        <attr name="inputView_linkText" format="string"/>
        <attr name="inputView_fontIcon" format="boolean"/>
        <attr name="android:importantForAutofill"/>
        <attr name="android:autofillHints"/>
    </declare-styleable>

    <declare-styleable name="MultilineInputView">
        <!-- Свойства -->
        <attr name="inputView_minLines" format="integer"/>
        <attr name="inputView_maxLines" format="integer"/>
        <attr name="inputView_rightIconText" format="string"/>
        <attr name="inputView_rightIconColor" format="color"/>

    </declare-styleable>

    <declare-styleable name="NumberInputView">
        <attr name="inputView_fraction" format="integer"/>
        <attr name="inputView_minValue"/>
        <attr name="inputView_maxValue"/>
        <attr name="inputView_isShownZeroValue"/>
    </declare-styleable>

    <declare-styleable name="MoneyInputView">
        <!-- Стилизация со значениями по-умолчанию -->
        <attr name="inputView_moneyColor" format="color"/>
        <attr name="inputView_fractionColor" format="color"/>
        <attr name="inputView_moneySize" format="dimension"/>
        <attr name="inputView_fractionSize" format="dimension"/>
        <!-- Свойства -->
        <attr name="inputView_isDecorated" format="boolean"/>
        <attr name="inputView_moneyFraction" format="enum">
            <enum name="on" value="0"/>
            <enum name="off" value="1"/>
            <enum name="only_tens" value="2"/>
        </attr>
        <attr name="inputView_minValue"/>
        <attr name="inputView_maxValue"/>
        <attr name="inputView_isShownZeroValue"/>
    </declare-styleable>

    <declare-styleable name="MaskInputView">
        <!-- Свойства -->
        <attr name="inputView_mask" format="string"/>
    </declare-styleable>

    <declare-styleable name="DateInputView">
        <!-- Свойства -->
        <attr name="inputView_format" format="enum">
            <enum name="date" value="0"/>
            <enum name="time" value="1"/>
            <enum name="both" value="2"/>
            <enum name="date_full_year" value="3"/>
            <enum name="date_without_year" value="4"/>
            <enum name="date_only_year" value="5"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PhoneInputView">
        <!-- Формат ввода номера телефона. -->
        <attr name="inputView_phoneFormat" format="enum">
            <!-- Формат для ввода мобильных номеров телефона. По умолчанию. -->
            <enum name="mobile" value="0"/>
            <!-- Формат для ввода любых номеров телефона. -->
            <enum name="mixed" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ValueSelectionInputView">
        <!-- Текст иконки поля ввода выбора. По умолчанию иконка гамбургера. -->
        <attr name="inputView_iconText" format="string"/>
        <!-- Видимость иконки. При readOnly=true скрывается вне зависимости от флага. -->
        <attr name="inputView_isIconVisible" format="boolean"/>
    </declare-styleable>
</resources>