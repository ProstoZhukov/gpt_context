<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SbisPopupNotificationInfoBaseTheme" tools:ignore="ResourceName">
        <item name="sbisPopupNotificationTextColor">?contrastTextColor</item>
        <item name="sbisPopupNotificationIconColor">?contrastIconColor</item>
        <item name="sbisPopupNotificationCloseIconAlpha">0.5</item>
        <item name="sbisPopupNotificationCloseIconColor">?contrastIconColor</item>
        <item name="sbisPopupNotificationDividerColor">@color/palette_color_transparent</item>
    </style>

    <style name="SbisPopupNotificationInfoTheme" parent="SbisPopupNotificationInfoBaseTheme" tools:ignore="ResourceName">
        <item name="sbisPopupNotificationBackground">?primaryColor</item>
    </style>

    <style name="SbisPopupNotificationSuccessTheme" parent="SbisPopupNotificationInfoBaseTheme" tools:ignore="ResourceName">
        <item name="sbisPopupNotificationBackground">?successColor</item>
    </style>

    <style name="SbisPopupNotificationWarningTheme" parent="SbisPopupNotificationInfoBaseTheme" tools:ignore="ResourceName">
        <item name="sbisPopupNotificationBackground">?warningColor</item>
    </style>

    <style name="SbisPopupNotificationErrorTheme" parent="SbisPopupNotificationInfoBaseTheme" tools:ignore="ResourceName">
        <item name="sbisPopupNotificationBackground">?dangerColor</item>
    </style>

    <style name="SbisPopupNotificationNotificationTheme" parent="SbisPopupNotificationInfoBaseTheme" tools:ignore="ResourceName">
        <item name="sbisPopupNotificationBackground">?secondarySameBackgroundColor</item>
        <item name="sbisPopupNotificationTextColor">?textColor</item>
        <item name="sbisPopupNotificationIconColor">?iconColor</item>
        <item name="sbisPopupNotificationCloseIconAlpha">0.4</item>
        <item name="sbisPopupNotificationCloseIconColor">?iconColor</item>
        <item name="sbisPopupNotificationDividerColor">?unaccentedBorderColor</item>
    </style>
</resources>