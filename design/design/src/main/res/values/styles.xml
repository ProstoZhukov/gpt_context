<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="SbisToolbar" parent="SbisToolbarCommon">
        <item name="android:background">?backgroundColor</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="SbisToolbarCommon" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>

        <!-- ATTENTION! THIS ATTRIBUTE MAY PRODUCE UNEXPECTED THEME BEHAVIOUR! -->
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- Toolbar Text Size -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">?fontSize_xs_scaleOn</item>
    </style>

    <style name="SbisPopup" parent="Base.Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/spinner_popup_bg</item>
    </style>

    <style name="SbisPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/text_default_color</item>
    </style>

    <style name="SbisPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/text_default_color</item>
    </style>

    <!-- Text field styles -->
    <style name="SbisTextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_default_color</item>
    </style>

    <style name="SbisTextView.Small.Gray" parent="SbisTextView">
        <item name="android:textColor">@color/date_header_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SbisTextView.Small.Black" parent="SbisTextView.Small.Gray">
        <item name="android:textColor">@color/sbis_black</item>
    </style>

    <style name="SbisTextView.Normal.Black" parent="SbisTextView.Small.Gray">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/sbis_black</item>
    </style>

    <style name="SbisTextView.Normal.Gray" parent="SbisTextView.Normal.Black">
        <item name="android:textColor">@color/sbis_gray</item>
    </style>

    <style name="SbisTextView.Normal.DarkGray" parent="SbisTextView.Normal.Black">
        <item name="android:textColor">@color/control_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <!-- Button styles -->
    <style name="SbisButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <!-- Цвет button_text_color используется только в этом стиле -->
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="SbisButton.Orange" parent="SbisButton">
        <item name="android:background">@drawable/sbis_orange_round_button_drawable</item>
        <!-- Цвет button_orange_text_color используется только в этом стиле -->
        <item name="android:textColor">@color/button_orange_text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SbisButton.Standard" parent="SbisButton">
        <item name="android:background">@drawable/button_default_bg</item>
        <item name="android:textColor">@color/blue_to_white_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Input field styles -->
    <style name="SbisInputFieldLayout" parent="AppTheme">
        <item name="android:textSize">@dimen/size_body1_scaleOff</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/text_input_layout_internal_margin_inverse
        </item>
        <item name="android:layout_marginRight">@dimen/text_input_layout_internal_margin_inverse
        </item>
        <item name="android:theme">@style/SbisInputFieldLayoutTheme</item>
    </style>

    <style name="SbisInputFieldLayoutTheme" parent="SbisTheme.GrayAccent">
        <item name="colorControlActivated">@color/color_primary</item>
    </style>

    <style name="SbisInputFieldEditText">
        <item name="android:textColor">@color/text_color_black_1</item>
        <item name="android:textColorHighlight">@color/palette_colorMessage</item>
        <item name="android:textCursorDrawable">@drawable/search_field_edit_text_cursor_drawable
        </item>
    </style>

    <style name="SbisInputFieldLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/sbis_gray</item>
    </style>

    <!-- Font styles -->
    <style name="LightStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="RegularStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="MediumStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="IconStyle">
        <item name="android:fontFamily">@font/cbuc_icons</item>
    </style>

    <style name="BoldStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="MobileFontStyle">
        <item name="android:fontFamily">@font/sbis_mobile_icons</item>
    </style>

    <style name="NavigationFontStyle">
        <item name="android:fontFamily">@font/sbis_navigation_icons</item>
    </style>

    <style name="NavigationHeaderTextStyle">
        <item name="android:fontFamily">@font/maison_neue_extended_book</item>
    </style>

    <style name="SbisTextView.BoldStyle" parent="BoldStyle"/>

    <style name="SbisButton.MediumStyle" parent="MediumStyle"/>

    <!-- Messages Lists Styles -->
    <style name="MessagesListItem.HeaderText" parent="RegularStyle">
        <item name="android:textSize">?fontSize_xl_scaleOn</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MessagesListItem.RegularText" parent="RegularStyle">
        <item name="android:textSize">?fontSize_m_scaleOn</item>
    </style>

    <style name="SbisActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/ActionModeTitle</item>
    </style>

    <style name="ActionModeTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FileItemNameStyle" parent="RegularStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SbisSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SbisSpinnerPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>
    <!-- end region -->

    <!-- Dialog Title View -->
    <style name="StandardTitle" parent="@style/RegularStyle">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="StandardTitle.Large">
        <item name="android:textColor">?textColor</item>
        <item name="android:textSize" tools:ignore="SpUsage">?fontSize_m_scaleOff</item>
    </style>

    <style name="StandardTitle.Dark">
        <item name="android:textColor">?textColor</item>
    </style>

    <style name="DocumentTitle" parent="@style/ToolbarTitle">
        <item name="android:textColor">?textColor</item>
        <item name="maxLines">1</item>
    </style>

    <style name="DocumentSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">?unaccentedTextColor</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="FloatingBtnStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/floating_btn_text_color</item>
        <item name="android:textSize">@dimen/size_title2_scaleOff</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="FloatingBtnStyle.Primary">
        <item name="android:background">@drawable/primary_floating_btn_bg</item>
    </style>

    <style name="FloatingBtnStyle.Standard">
        <item name="android:background">@drawable/standard_floating_btn_bg</item>
    </style>


    <!-- Moved from Communicator -->
    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SbisProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/default_progress_bar_size</item>
        <item name="android:layout_height">@dimen/default_progress_bar_size</item>
    </style>

    <style name="CircledButton">
        <item name="android:textSize">@dimen/size_title2_scaleOff</item>
        <item name="android:textColor">@color/circled_button_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:minWidth">@dimen/circled_button_min_width</item>
        <item name="android:paddingStart">@dimen/circled_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/circled_button_horizontal_padding</item>
        <item name="android:background">@drawable/circled_button_bg</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ProgressCircledButton" parent="CircledButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!-- Preferences -->
    <style name="ListViewPreferenceStyle" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.TextInputLayout">
        <item name="android:textColorHint">@color/text_color_black_4</item>
        <item name="colorControlActivated">@color/text_color_black_4</item>
        <item name="colorControlNormal">@color/text_color_black_4</item>
    </style>

    <style name="AppTheme.TextInputLayoutStyle">
        <item name="errorTextAppearance">@style/TextAppearance.TextInputLayout.Error</item>
    </style>

    <style name="TextAppearance.TextInputLayout.Error" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_body2_scaleOn</item>
        <item name="android:textColor">@color/text_color_error</item>
    </style>

    <style name="EditText" parent="@style/HighlightControlsColor">
        <item name="android:textAppearance">@style/TextAppearance.EditText</item>
    </style>

    <style name="TextAppearance.EditText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_body1_scaleOn</item>
    </style>

    <style name="BaseGraySmallDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/palette_color_gray3</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/design_splash</item>
        <item name="android:statusBarColor">?navigationBackgroundColor</item>
        <item name="android:navigationBarColor">?navigationBackgroundColor</item>
    </style>

    <style name="SplashThemeDark" parent="AppTheme">
        <item name="splashScreenBackgroundColor">@color/splash_screen_background_color_dark</item>
        <item name="splashScreenGradient">@drawable/splash_gradient_dark</item>
        <item name="splashScreenLogo">@drawable/ic_sbis_artboard_default</item>

        <item name="android:windowBackground">@drawable/design_splash</item>
        <item name="android:statusBarColor">?splashScreenBackgroundColor</item>
        <item name="android:navigationBarColor">?splashScreenBackgroundColor</item>
    </style>

</resources>