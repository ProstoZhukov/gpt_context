<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <item
        android:drawable="?splashScreenBackgroundColor"
        android:gravity="fill"/>

    <item
        android:gravity="center"
        android:top="400dp">
        <bitmap
            android:gravity="center"
            android:src="?splashScreenGradient"/>
    </item>

    <item
        android:gravity="center">
        <bitmap
            android:gravity="center"
            android:src="?splashScreenLogo"/>
    </item>


</layer-list>