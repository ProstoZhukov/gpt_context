<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Атрибуты компонента отображения телефона -->
    <declare-styleable name="PhoneEditText">
        <!-- Флаг декорирования телефона -->
        <attr name="PhoneEditText_decoration">
            <!-- Значение по умолчанию: декорирование отображения номеров в общем формате, не завсимо от конкретной страны -->
            <flag name="common_format"
                value="0" />
            <!-- Ограниченивать ввод российских номеров, применяется по умолчанию для обратной совместимости -->
            <flag name="ru_len"
                value="1" />
            <!-- Декорирование отображения российских номеров -->
            <flag name="ru_format"
                value="2" />
            <!-- Декорирование отображения российских номеров и ограничение ввода -->
            <flag name="ru"
                value="3" />
        </attr>
    </declare-styleable>
</resources>