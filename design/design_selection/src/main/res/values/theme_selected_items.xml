<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SelectedItemsTheme">
        <item name="SelectedItem_containerStyle">@style/SelectedItemContainerStyle</item>
        <item name="SelectedItem_itemTheme">@style/SelectedItemTheme</item>
        <item name="SelectedItem_personTheme">@style/SelectedItemTheme.Person</item>
        <item name="SelectedItem_folderTheme">@style/SelectedItemTheme.Folder</item>
    </style>

    <style name="SelectedItemTheme">
        <item name="SelectedItem_titleStyle">@style/SelectedItemTitleStyle</item>
        <item name="SelectedItem_unselectIconStyle">@style/SelectedItemUnselectIconStyle</item>
    </style>

    <style name="SelectedItemTheme.Person">
        <item name="SelectedItem_photoStyle">@style/SelectedItemPhotoStyle</item>
        <item name="SelectedItem_subtitleStyle">@style/SelectedItemSubtitleStyle</item>
    </style>

    <style name="SelectedItemTheme.Folder">
        <item name="SelectedItem_itemIconStyle">@style/SelectedItemIconStyle.Folder</item>
    </style>

    <style name="SelectedItemContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/selection_selected_item_height</item>
        <item name="android:background">@drawable/selection_rounded_item_background</item>
        <item name="android:layout_marginEnd">?offset_s</item>
        <item name="android:layout_marginTop">@dimen/selection_selected_item_margin_top</item>
        <item name="SelectedItemView_maxWidth">@dimen/selection_selected_item_default_max_width</item>
    </style>

    <style name="SelectedItemPhotoStyle">
        <item name="android:layout_width">@dimen/selection_selected_item_height</item>
        <item name="android:layout_height">@dimen/selection_selected_item_height</item>
    </style>

    <style name="SelectedItemIconStyle" parent="MobileFontStyle">
        <item name="android:textSize">?iconSize_2xl</item>
        <item name="android:textColor">?unaccentedIconColor</item>
    </style>

    <style name="SelectedItemTitleStyle" parent="RegularStyle">
        <item name="android:textColor">?textColor</item>
        <item name="android:textSize">?fontSize_xs_scaleOff</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SelectedItemSubtitleStyle" parent="SelectedItemTitleStyle"/>

    <style name="SelectedItemUnselectIconStyle" parent="MobileFontStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/design_mobile_icon_toolbar_close</item>
        <item name="android:textSize">?iconSize_s</item>
        <item name="android:textColor">?unaccentedIconColor</item>
        <item name="android:paddingStart">?offset_st</item>
        <item name="android:paddingEnd">?offset_st</item>
    </style>

    <style name="SelectedItemIconStyle.Folder">
        <item name="android:text">@string/design_mobile_icon_folder_solid</item>
    </style>

</resources>