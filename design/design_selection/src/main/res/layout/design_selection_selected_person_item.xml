<?xml version="1.0" encoding="utf-8"?>
<ru.tensor.sbis.design_selection.contract.customization.selected.SelectedItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?SelectedItem_containerStyle"
    android:theme="?SelectedItem_personTheme">

    <ru.tensor.sbis.design.profile.person.PersonView
        android:id="@+id/selected_person_photo"
        style="?SelectedItem_photoStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ru.tensor.sbis.common_views.HighlightedTextView
        android:id="@+id/selected_person_last_name"
        style="?SelectedItem_titleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="?offset_xs"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/selected_person_first_name"
        app:layout_constraintEnd_toStartOf="@id/selected_person_close_icon"
        app:layout_constraintStart_toEndOf="@id/selected_person_photo"
        tools:text="Голубенец"/>

    <ru.tensor.sbis.common_views.HighlightedTextView
        android:id="@+id/selected_person_first_name"
        style="?SelectedItem_subtitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/selected_person_last_name"
        app:layout_constraintTop_toBottomOf="@id/selected_person_last_name"
        app:layout_constraintEnd_toStartOf="@id/selected_person_close_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Евгения"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selected_person_close_icon"
        style="?SelectedItem_unselectIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</ru.tensor.sbis.design_selection.contract.customization.selected.SelectedItemView>