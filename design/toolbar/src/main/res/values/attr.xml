<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BaseAppBarLayoutBehavior">
        <attr name="scrollview_id" format="integer"/>
    </declare-styleable>

    <declare-styleable name="AppBarLayoutWithDynamicElevationBehavior">
        <!-- Идентификатор закреплённого под шапкой View, у которого должна отображаться тень при возможности прокрутки содержимого -->
        <attr name="pinned_view_id" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SbisButtonToolbarView">
        <attr name="closeButtonVisible" format="boolean"/>
        <attr name="height" format="dimension"/>
        <attr name="panelTheme" format="enum">
            <enum name="light" value="1"/>
            <enum name="dark" value="2"/>
        </attr>
        <attr name="hideTextForTablet" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SbisBottomButtonsView">
        <attr name="showTextForTablet" format="boolean"/>
        <attr name="viewColorScheme" format="enum">
            <enum name="light" value="1"/>
            <enum name="dark" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ToolbarTabLayout">
        <!-- Стилевой атрибут компонента ToolbarTabLayout -->
        <attr name="ToolbarTabLayout_theme" format="reference"/>
        <!-- Стиль шрифтовой иконки во вкладке -->
        <attr name="ToolbarTabLayout_iconStyle" format="reference"/>
        <!-- Стиль заголовка вкладки -->
        <attr name="ToolbarTabLayout_titleStyle" format="reference"/>
        <!-- Стиль счётчика -->
        <attr name="ToolbarTabLayout_counterStyle" format="reference"/>
        <!-- Стиль счётчика непрочитанных событий -->
        <attr name="ToolbarTabLayout_unreadCounterStyle" format="reference"/>
        <!-- Стиль маркера выделенного элемента -->
        <attr name="ToolbarTabLayout_indicatorStyle" format="reference"/>
        <!-- Стиль затенения. Отображается, если вкладки не видны полностью -->
        <attr name="ToolbarTabLayout_fadingEdgeColor" format="color"/>
        <!-- Размер отступа между вкладками -->
        <attr name="ToolbarTabLayout_tabSpacing" format="dimension|reference"/>
    </declare-styleable>


    <declare-styleable name="Toolbar">
        <!--Start Visibility section-->
        <attr name="toolbarContainerVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="tabLayoutVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <attr name="leftPanelVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="extraLeftPanelVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="leftIconVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <attr name="leftTextVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="customViewContainerVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <attr name="rightPanel1Visibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="rightIcon1Visibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <attr name="rightTextVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <attr name="rightPanel2Visibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="rightIcon2Visibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <attr name="spinnerVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="centerTextVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="toolbarDivider">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="toolbarShadow">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <!--End Visibility section-->

        <!--Start Text/Icon section-->
        <attr name="leftIconText" format="reference|string"/>
        <attr name="leftCounterNumber" format="reference|integer"/>
        <attr name="extraLeftIconText" format="reference|string"/>
        <attr name="leftTextText" format="reference|string"/>
        <attr name="leftTextGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>

        <attr name="rightIcon1Text" format="reference|string"/>
        <attr name="rightTextText" format="reference|string"/>

        <attr name="rightIcon2Text" format="reference|string"/>

        <attr name="centerTextText" format="reference|string"/>
        <!--End Text/Icon section-->

        <attr name="Toolbar_theme" format="reference"/>
        <attr name="Toolbar_iconStyle" format="reference"/>
        <attr name="Toolbar_titleStyle" format="reference"/>
        <attr name="Toolbar_dividerColor" format="color"/>
        <attr name="Toolbar_shadowColor" format="color"/>
    </declare-styleable>
</resources>
