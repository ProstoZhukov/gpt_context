<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стиль графической шапки -->
    <attr name="appBarStyle" format="reference"/>

    <!-- Стиль CollapsingToolbarLayout в графической шапке -->
    <attr name="collapsingToolbarStyle" format="reference"/>

    <!-- Стиль ImageView в графической шапке -->
    <attr name="imageViewStyle" format="reference"/>

    <!-- Аттрибут для указания темы графической шапки -->
    <attr name="SbisAppBarLayoutTheme" format="reference"/>

    <declare-styleable name="SbisAppBarLayout">
        <!-- Идентификатор дочерней ImageView, которая выступает в роли фона -->
        <attr name="SbisAppBarLayout_image" format="reference"/>
        <!-- Идентификатор дочерней View, которой будет задан градиент. Если её контейнер не является FrameLayout или унаследованным от него, необходимо явно расположить View снизу контейнера -->
        <attr name="SbisAppBarLayout_gradient_holder" format="reference"/>
        <!-- Строка с идентификаторами вложенных view, для которых нужно применять ColorUpdateFunction -->
        <attr name="SbisAppBarLayout_color_dependent_views" format="string"/>
        <!-- Идентификатор типовых компановок графической шапки. См. варианты в документации  -->
        <attr name="SbisAppBarLayout_layoutId" format="reference"/>
        <!-- Должен ли заголовок отображаться на непрозрачном фоне - при значении true текст с фоном располагается под фото, высота градиента фиксирована. По умолчанию false -->
        <attr name="SbisAppBarLayout_titleWithBackground" format="boolean"/>
        <!-- Идентификатор SbisTitleView -->
        <attr name="SbisAppBarLayout_titleView" format="reference"/>
    </declare-styleable>

</resources>