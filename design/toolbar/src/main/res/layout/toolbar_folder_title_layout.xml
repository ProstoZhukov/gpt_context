<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/palette_color_white1"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/folder_title_height"
            android:orientation="horizontal">

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                style="@style/ToolbarIconStyle"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/folder_title_padding_left"
                android:layout_marginEnd="@dimen/folder_title_icon_margin_right"
                android:text="@string/design_mobile_icon_btn_back"
                android:textColor="@color/text_color_link_1"/>

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                android:id="@+id/toolbar_folder_title"
                style="@style/MediumStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/folder_title_padding_right"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_color_accent_4"
                android:textSize="@dimen/folder_title_text_size"
                tools:ignore="SpUsage"
                tools:text="Папка номер 1"/>

        </LinearLayout>

        <View
            android:id="@+id/toolbar_horizontal_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tiny_delimiter_height"
            android:background="@color/divider_color"/>

    </LinearLayout>

</layout>