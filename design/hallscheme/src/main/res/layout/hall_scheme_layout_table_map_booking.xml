<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hall_scheme_booking"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/hall_scheme_table_booking_height"
    android:gravity="center_vertical"
    android:paddingHorizontal="6dp"
    android:paddingVertical="2dp"
    tools:background="@drawable/hall_scheme_bg_table_ellipse_reservation_confirmed"
    tools:ignore="SpUsage">

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/hall_scheme_booking_icon"
        style="@style/MobileFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="@string/design_mobile_icon_time"
        android:textColor="@color/hall_scheme_booking_text_color"
        android:textSize="@dimen/hall_scheme_text_tiny"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/hall_scheme_booking_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/hall_scheme_booking_text_color"
        android:textSize="@dimen/hall_scheme_text_small"
        tools:text="19:00"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/hall_scheme_booking_guest_icon"
        style="@style/MobileFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/hall_scheme_spacing_normal"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="0.5dp"
        android:text="@string/design_mobile_icon_profile"
        android:textColor="@color/hall_scheme_booking_text_color"
        android:textSize="@dimen/hall_scheme_text_tiny"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/hall_scheme_guests_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/hall_scheme_booking_text_color"
        android:textSize="@dimen/hall_scheme_text_small"
        tools:text="2"/>

</LinearLayout>