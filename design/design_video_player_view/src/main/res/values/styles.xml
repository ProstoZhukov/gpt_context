<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="VideoMessagePlayIcon" parent="MobileFontStyle">
        <item name="android:text">@string/design_mobile_icon_video_message_play</item>
        <item name="android:textColor">?contrastIconColor</item>
        <item name="android:textSize">?inlineHeight_xs</item>
    </style>

    <style name="VideoMessageRecognizeIcon" parent="MobileFontStyle">
        <item name="android:text">@string/design_mobile_icon_alignment_left</item>
        <item name="android:textColor">?secondaryIconColor</item>
        <item name="android:textSize">?iconSize_2xl</item>
    </style>

    <style name="VideoMessageRecognizedText">
        <item name="android:textColor">?textColor</item>
        <item name="android:textSize">?fontSize_m_scaleOn</item>
        <item name="android:paddingStart">?offset_st</item>
        <item name="android:paddingBottom">?offset_xs</item>
        <item name="android:paddingTop">?offset_xs</item>
    </style>

    <style name="VideoMessageCollapseIcon" parent="MobileFontStyle">
        <item name="android:text">@string/design_mobile_icon_arrow_small_up</item>
        <item name="android:textColor">?secondaryIconColor</item>
        <item name="android:textSize">?iconSize_xl</item>
        <item name="android:paddingTop">?offset_st</item>
        <item name="android:paddingEnd">?offset_st</item>
        <item name="android:paddingStart">?offset_st</item>
        <item name="android:paddingBottom">?offset_2xs</item>
    </style>

    <style name="VideoMessageDeleteButtonStyle">
        <item name="android:fontFamily">@font/sbis_mobile_icons</item>
        <item name="android:text">@string/design_mobile_icon_close_for_nav_panel</item>
        <item name="android:textColor">?unaccentedIconColor</item>
        <item name="android:textSize">?iconSize_s</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">?offset_s</item>
    </style>

</resources>