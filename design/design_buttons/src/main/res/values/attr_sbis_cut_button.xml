<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SbisCutButton">

        <!-- Режим отображения иконки -->
        <attr name="SbisCutButton_mode" format="enum">
            <!-- Стрелка вверх (свернуть) -->
            <enum name="arrow_up" value="1"/>
            <!-- Стрелка вниз (развернуть) -->
            <enum name="arrow_down" value="2"/>
            <!-- Троеточие (развернуть) -->
            <enum name="more" value="3"/>
        </attr>

        <!-- Тип кнопки. -->
        <attr name="SbisCutButton_type" format="enum">
            <!-- Акцентная (по умолчанию). -->
            <enum name="accented" value="1"/>
            <!-- Неакцентная. -->
            <enum name="unaccented" value="2"/>
            <!-- Активная. -->
            <enum name="active" value="3"/>
        </attr>

        <!-- Цвет фона кнопки -->
        <attr name="SbisCutButton_backgroundColor" format="reference|color"/>
        <attr name="SbisCutButton_backgroundColorPressed" format="reference|color"/>
        <!-- Цвет иконки -->
        <attr name="SbisCutButton_iconColor" format="reference|color"/>
        <attr name="SbisCutButton_iconColorPressed" format="reference|color"/>

    </declare-styleable>
</resources>