<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SbisRoundButton">

        <!-- Стандартный стиль кнопки -->
        <attr name="SbisRoundButton_style" format="enum">
            <!-- Акцентная кнопка -->
            <enum name="primary" value="1"/>
            <!-- Второстепенная кнопка -->
            <enum name="secondary" value="2"/>
            <!-- Кнопка подтверждения -->
            <enum name="success" value="3"/>
            <!-- Неакцентная кнопка -->
            <enum name="unaccented" value="4"/>
            <!-- Бонусная кнопка -->
            <enum name="bonus" value="5"/>
            <!-- Кнопка опасности -->
            <enum name="danger" value="6"/>
            <!-- Кнопка предупреждения -->
            <enum name="warning" value="7"/>
            <!-- Информационная кнопка -->
            <enum name="info" value="8"/>
            <!-- Кнопка по умолчанию -->
            <enum name="def" value="9"/>
            <!-- Кнопка навигации -->
            <enum name="navigation" value="10"/>
            <!-- Полупрозрачная кнопка -->
            <enum name="pale" value="11"/>
            <!-- Брендовая кнопка -->
            <enum name="brand" value="12"/>
            <!-- Стиль Link -->
            <enum name="link" value="13"/>
            <!-- Стиль Label -->
            <enum name="label" value="14"/>
        </attr>

        <!-- Размер кнопки -->
        <attr name="SbisRoundButton_size" format="enum">
            <!-- Кнопка особо малого размера -->
            <enum name="xs" value="1"/>
            <!-- Кнопка малого размера -->
            <enum name="s" value="2"/>
            <!-- Кнопка среднего размера -->
            <enum name="m" value="3"/>
            <!-- Кнопка большого размера (значение по умолчанию) -->
            <enum name="l" value="4"/>
            <!-- Кнопка особо большого размера -->
            <enum name="xl" value="5"/>
        </attr>

        <!-- Состояние кнопки -->
        <attr name="SbisRoundButton_state" format="enum">
            <!-- Кнопка включена (значение по умочланию) -->
            <enum name="enabled" value="1"/>
            <!-- Кнопка выключена -->
            <enum name="disabled" value="2"/>
            <!-- Кнопка выключена, ожидает выполнения операции -->
            <enum name="in_progress" value="3"/>
        </attr>

        <!-- Вариант фона кнопки -->
        <attr name="SbisRoundButton_type" format="enum">
            <!-- Непрозрачный фон, обводка, не используется -->
            <enum name="common" value="1"/>
            <!-- С заливкой  -->
            <enum name="contrast" value="2"/>
            <!-- Прозрачный фон, обводка, не используется -->
            <enum name="border_only" value="3"/>
            <!-- Без заливки -->
            <enum name="transparent" value="4"/>
            <!-- Градиент слева направо -->
            <enum name="gradient_left_to_right" value="5"/>
            <!-- Градиент справа налево -->
            <enum name="gradient_right_to_left" value="6"/>
            <!-- Градиент сверху вниз -->
            <enum name="gradient_top_to_bottom" value="7"/>
            <!-- Градиент снизу вверх -->
            <enum name="gradient_bottom_to_top" value="8"/>
        </attr>

        <!-- Шрифтовая иконка -->
        <attr name="SbisRoundButton_icon" format="string|reference"/>

        <!-- Размер иконки -->
        <attr name="SbisRoundButton_iconSize" format="enum">
            <!-- Размер в глобальной теме 12dp -->
            <enum name="xs" value="1"/>
            <!-- Размер в глобальной теме 14dp -->
            <enum name="s" value="2"/>
            <!-- Размер в глобальной теме 18dp -->
            <enum name="xl" value="3"/>
            <!-- Размер в глобальной теме 20dp -->
            <enum name="x2l" value="4"/>
            <!-- Размер в глобальной теме 24dp -->
            <enum name="x3l" value="5"/>
            <!-- Размер в глобальной теме 26dp -->
            <enum name="x4l" value="6"/>
            <!-- Размер в глобальной теме 28dp -->
            <enum name="x5l" value="7"/>
            <!-- Размер в глобальной теме 32dp -->
            <enum name="x7l" value="8"/>
        </attr>

        <!--region Набор цветов фона -->
        <!-- Цвет фона кнопки для состояния по умолчанию -->
        <attr name="SbisRoundButton_backgroundColor" format="reference|color"/>
        <!-- Цвет фона кнопки для состояния нажата -->
        <attr name="SbisRoundButton_backgroundColorPressed" format="reference|color"/>
        <!-- Цвет фона кнопки для состояния выключена -->
        <attr name="SbisRoundButton_backgroundColorDisabled" format="reference|color"/>
        <!--endregion-->

        <!--region Набор цветов иконки -->
        <!-- Цвет иконки кнопки для состояния по умолчанию -->
        <attr name="SbisRoundButton_iconColor" format="reference|color"/>
        <!-- Цвет иконки кнопки для выключенного состояния-->
        <attr name="SbisRoundButton_iconDisabledColor" format="reference|color"/>
        <!-- Прозрачность цвета иконки кнопки для выключенного состояния-->
        <attr name="SbisRoundButton_iconDisabledColorAlpha" format="reference|color"/>
        <!-- Цвет иконки кнопки c прозрачным фоном -->
        <attr name="SbisRoundButton_iconTransparentColor" format="reference|color"/>
        <!--endregion-->

        <!-- Цвет индикатора прогресса -->
        <attr name="SbisRoundButton_progressColor" format="reference|color"/>
        <!-- Цвет индикатора прогресса для кнопки с контрастным фоном -->
        <attr name="SbisRoundButton_progressContrastColor" format="reference|color"/>

        <!-- "Стартовый" и "финишный" цвета фона градиентной кнопки -->
        <attr name="SbisRoundButton_startGradientBackgroundColor" format="reference|color"/>
        <attr name="SbisRoundButton_endGradientBackgroundColor" format="reference|color"/>

        <!-- Скругление краев кнопки -->
        <attr name="SbisRoundButton_cornerRadius" format="reference|dimension"/>

        <!-- Высота кнопки -->
        <attr name="SbisRoundButton_elevation" format="reference|dimension"/>

        <!-- Толщина обводки кнопки для состояния выключена -->
        <attr name="SbisRoundButton_borderWidthDisabled" format="reference|dimension"/>
    </declare-styleable>
</resources>