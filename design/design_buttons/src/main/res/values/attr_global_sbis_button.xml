<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--region Стилевые атрибуты компонента SbisButton -->
    <!-- Атрибут для определения темы акцентной кнопки -->
    <attr name="primarySbisButtonTheme" format="reference"/>
    <!-- Атрибут для определения темы второстепенной кнопки. Тема по умолчанию -->
    <attr name="secondarySbisButtonTheme" format="reference"/>
    <!-- Атрибут для определения темы кнопки подтверждения -->
    <attr name="successSbisButtonTheme" format="reference"/>
    <!-- Атрибут для определения темы неакцентной кнопки -->
    <attr name="unaccentedSbisButtonTheme" format="reference"/>
    <!-- Атрибут для определения темы бонусной кнопки -->
    <attr name="bonusSbisButtonTheme" format="reference"/>
    <!-- Атрибут для определения темы кнопки опасности -->
    <attr name="dangerSbisButtonTheme" format="reference"/>
    <!-- Атрибут для определения темы кнопки предупреждения -->
    <attr name="warningSbisButtonTheme" format="reference"/>
    <!-- Атрибут для определения темы информационной кнопки -->
    <attr name="infoSbisButtonTheme" format="reference"/>
    <!-- Атрибут для определения темы кнопки по умолчанию -->
    <attr name="defaultSbisButtonTheme" format="reference"/>
    <!-- Атрибут для определения темы кнопки навигации -->
    <attr name="navigationSbisButtonTheme" format="reference"/>
    <!-- Атрибут для определения темы полупрозрачной кнопки -->
    <attr name="paleSbisButtonTheme" format="reference"/>
    <!-- Атрибут для определения темы брендовой кнопки -->
    <attr name="brandSbisButtonTheme" format="reference"/>
    <!--endregion-->

    <attr name="sbisButtonUnaccentedButtonTextColor" format="color|reference"/>
    <attr name="sbisButtonUnaccentedProgressColor" format="color|reference"/>
    <attr name="sbisButtonUnaccentedProgressContrastColor" format="color|reference"/>
    <attr name="sbisButtonContrastBackgroundColorDisabled" format="color|reference"/>
    <attr name="sbisButtonTitleDisabledColorAlpha" format="float|reference"/>

    <!-- Скругление кнопки. Глобально для SbisButton и SbisRoundButton -->
    <attr name="sbisButtonCornerRadius" format="reference|dimension"/>

    <!-- Вариант фона кнопки -->
    <attr name="sbisButtonBackgroundType" format="enum">
        <!-- Непрозрачный фон, обводка (значение по умолчанию) -->
        <enum name="common" value="1"/>
        <!-- Непрозрачный фон без обводки -->
        <enum name="contrast" value="2"/>
        <!-- Прозрачный фон, обводка -->
        <enum name="border_only" value="3"/>
        <!-- Прозрачный фон без обводки -->
        <enum name="transparent" value="4"/>
        <!-- Градиент слева направо -->
        <enum name="gradient_left_to_right" value="5"/>
        <!-- Градиент справа налево -->
        <enum name="gradient_right_to_left" value="6"/>
        <!-- Градиент сверху вниз -->
        <enum name="gradient_top_to_bottom" value="7"/>
        <!-- Градиент снизу вверх -->
        <enum name="gradient_bottom_to_top" value="8"/>
    </attr>

</resources>