<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SbisButton">

        <!-- Стандартный стиль кнопки -->
        <attr name="SbisButton_style" format="enum">
            <!-- Акцентная кнопка -->
            <enum name="primary" value="1"/>
            <!-- Второстепенная кнопка -->
            <enum name="secondary" value="2"/>
            <!-- Кнопка подтверждения -->
            <enum name="success" value="3"/>
            <!-- Неакцентная кнопка -->
            <enum name="unaccented" value="4"/>
            <!-- Бонусная кнопка -->
            <enum name="bonus" value="5"/>
            <!-- Кнопка опасности -->
            <enum name="danger" value="6"/>
            <!-- Кнопка предупреждения -->
            <enum name="warning" value="7"/>
            <!-- Информационная кнопка -->
            <enum name="info" value="8"/>
            <!-- Кнопка по умолчанию -->
            <enum name="def" value="9"/>
            <!-- Кнопка навигации -->
            <enum name="navigation" value="10"/>
            <!-- Полупрозрачная кнопка -->
            <enum name="pale" value="11"/>
            <!-- Брендовая кнопка -->
            <enum name="brand" value="12"/>
        </attr>

        <!-- Размер кнопки -->
        <attr name="SbisButton_size" format="enum">
            <!-- Кнопка сосбо малого размера -->
            <enum name="xs" value="1"/>
            <!-- Кнопка малого размера -->
            <enum name="s" value="2"/>
            <!-- Кнопка среднего размера (значение по умолчанию) -->
            <enum name="m" value="3"/>
            <!-- Кнопка большого размера -->
            <enum name="l" value="4"/>
            <!-- Кнопка особо большого размера -->
            <enum name="xl" value="5"/>
        </attr>

        <!-- Состояние кнопки -->
        <attr name="SbisButton_state" format="enum">
            <!-- Кнопка включена (значение по умочланию) -->
            <enum name="enabled" value="1"/>
            <!-- Кнопка выключена -->
            <enum name="disabled" value="2"/>
            <!-- Кнопка выключена, ожидает выполнения операции -->
            <enum name="in_progress" value="3"/>
        </attr>

        <!-- Вариант фона кнопки -->
        <attr name="SbisButton_backgroundType" format="enum">
            <!-- Непрозрачный фон, обводка (значение по умолчанию) -->
            <enum name="common" value="1"/>
            <!-- Непрозрачный фон без обводки -->
            <enum name="contrast" value="2"/>
            <!-- Прозрачный фон, обводка -->
            <enum name="border_only" value="3"/>
            <!-- Прозрачный фон без обводки -->
            <enum name="transparent" value="4"/>
            <!-- Градиент слева направо -->
            <enum name="gradient_left_to_right" value="5"/>
            <!-- Градиент справа налево -->
            <enum name="gradient_right_to_left" value="6"/>
            <!-- Градиент сверху вниз -->
            <enum name="gradient_top_to_bottom" value="7"/>
            <!-- Градиент снизу вверх -->
            <enum name="gradient_bottom_to_top" value="8"/>
        </attr>

        <!-- Шрифтовая иконка -->
        <attr name="SbisButton_icon" format="string|reference"/>

        <!-- Размер иконки -->
        <attr name="SbisButton_iconSize" format="enum">
            <!-- Размер в глобальной теме 12dp -->
            <enum name="xs" value="1"/>
            <!-- Размер в глобальной теме 14dp -->
            <enum name="s" value="2"/>
            <!-- Размер в глобальной теме 18dp -->
            <enum name="xl" value="3"/>
            <!-- Размер в глобальной теме 20dp -->
            <enum name="x2l" value="4"/>
            <!-- Размер в глобальной теме 24dp -->
            <enum name="x3l" value="5"/>
            <!-- Размер в глобальной теме 26dp -->
            <enum name="x4l" value="6"/>
            <!-- Размер в глобальной теме 28dp -->
            <enum name="x5l" value="7"/>
            <!-- Размер в глобальной теме 32dp -->
            <enum name="x7l" value="8"/>
        </attr>

        <!-- Текст в кнопке -->
        <attr name="SbisButton_title" format="string|reference"/>

        <!-- Размер текста -->
        <attr name="SbisButton_titleSize" format="enum">
            <!-- Размер в глобальной теме 10dp -->
            <enum name="xs" value="1"/>
            <!-- Размер в глобальной теме 14dp -->
            <enum name="m" value="2"/>
            <!-- Размер в глобальной теме 17dp -->
            <enum name="xl" value="3"/>
            <!-- Размер в глобальной теме 18dp -->
            <enum name="x2l" value="4"/>
            <!-- Размер в глобальной теме 20dp -->
            <enum name="x3l" value="5"/>
        </attr>

        <!-- Положение текста в кнопке -->
        <attr name="SbisButton_titlePosition" format="enum">
            <!-- Текст слева от иконки -->
            <enum name="left" value="1"/>
            <!-- Текст справа от иконки (значение по умолчанию) -->
            <enum name="right" value="2"/>
        </attr>

        <!--region Набор цветов фона -->
        <!-- Цвет фона кнопки для состояния по умолчанию -->
        <attr name="SbisButton_backgroundColor" format="reference|color"/>
        <!-- Цвет фона кнопки для состояния нажата -->
        <attr name="SbisButton_backgroundColorPressed" format="reference|color"/>
        <!-- Цвет фона кнопки для состояния выключена -->
        <attr name="SbisButton_backgroundColorDisabled" format="reference|color"/>

        <!-- Цвет фона контрастной кнопки для состояния по умолчанию -->
        <attr name="SbisButton_contrastBackgroundColor" format="reference|color"/>
        <!-- Цвет фона контрастной кнопки для состояния нажата -->
        <attr name="SbisButton_contrastBackgroundColorPressed" format="reference|color"/>
        <!-- Цвет фона контрастной кнопки для состояния выключена -->
        <attr name="SbisButton_contrastBackgroundColorDisabled" format="reference|color"/>

        <!-- "Стартовый" и "финишный" цвета фона градиентной кнопки -->
        <attr name="SbisButton_startGradientBackgroundColor" format="reference|color"/>
        <attr name="SbisButton_endGradientBackgroundColor" format="reference|color"/>

        <!-- Для нажатого состояния кнопок без фона используется контрастный цвет -->
        <!--endregion-->

        <!--region Набор параметров обводки кнопки -->
        <!-- Цвет обводки кнопки для состояния по умолчанию -->
        <attr name="SbisButton_borderColor" format="reference|color"/>
        <!-- Цвет обводки кнопки для состояния нажата -->
        <attr name="SbisButton_borderColorPressed" format="reference|color"/>
        <!-- Цвет обводки кнопки для состояния выключена -->
        <attr name="SbisButton_borderColorDisabled" format="reference|color"/>

        <!-- Толщина обводки кнопки -->
        <attr name="SbisButton_borderWidth" format="reference|dimension"/>

        <!-- Скругление краев кнопки -->
        <attr name="SbisButton_cornerRadius" format="reference|dimension"/>
        <!--endregion-->

        <!--region Набор цветов текста -->
        <!-- Цвет текста кнопки для состояния по умолчанию -->
        <attr name="SbisButton_titleColor" format="reference|color"/>
        <!-- Цвет текста кнопки для выключенного состояния-->
        <attr name="SbisButton_titleDisabledColor" format="reference|color"/>
        <!-- Прозрачность цвета текста кнопки для выключенного состояния-->
        <attr name="SbisButton_titleDisabledColorAlpha" format="reference|float"/>
        <!-- Цвет текста для кнопки c контрастным фоном -->
        <attr name="SbisButton_titleContrastColor" format="reference|color"/>
        <!-- Цвет текста для кнопки c прозрачным фоном -->
        <attr name="SbisButton_titleTransparentColor" format="reference|color"/>
        <!--endregion-->

        <!--region Набор цветов иконки -->
        <!-- Цвет иконки кнопки для состояния по умолчанию -->
        <attr name="SbisButton_iconColor" format="reference|color"/>
        <!-- Цвет иконки кнопки для выключенного состояния-->
        <attr name="SbisButton_iconDisabledColor" format="reference|color"/>
        <!-- Цвет иконки для кнопки c контрастным фоном -->
        <attr name="SbisButton_iconContrastColor" format="reference|color"/>
        <!-- Цвет иконки для кнопки c прозрачным фоном -->
        <attr name="SbisButton_iconTransparentColor" format="reference|color"/>
        <!--endregion-->

        <!-- Цвет индикатора прогресса -->
        <attr name="SbisButton_progressColor" format="reference|color"/>
        <!-- Цвет индикатора прогресса для кнопки с контрастным фоном -->
        <attr name="SbisButton_progressContrastColor" format="reference|color"/>
        <!-- Высота кнопки -->
        <attr name="SbisButton_elevation" format="reference|dimension"/>
        <!-- Флаг скалируемости иконки и заголовка кнопки -->
        <attr name="SbisButton_scale_on" format="reference|boolean"/>
        <!-- Флаг наличия стандартного отступа от края кнопки. -->
        <attr name="SbisButton_hasHorizontalPadding" format="reference|boolean"/>

    </declare-styleable>
</resources>