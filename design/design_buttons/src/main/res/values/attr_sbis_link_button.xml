<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SbisLinkButton">

        <!-- Стандартный стиль кнопки -->
        <attr name="SbisLinkButton_style" format="enum">
            <!-- Акцентная кнопка -->
            <enum name="primary" value="1"/>
            <!-- Второстепенная кнопка -->
            <enum name="secondary" value="2"/>
            <!-- Кнопка подтверждения -->
            <enum name="success" value="3"/>
            <!-- Неакцентная кнопка -->
            <enum name="unaccented" value="4"/>
            <!-- Бонусная кнопка -->
            <enum name="bonus" value="5"/>
            <!-- Кнопка опасности -->
            <enum name="danger" value="6"/>
            <!-- Кнопка предупреждения -->
            <enum name="warning" value="7"/>
            <!-- Информационная кнопка -->
            <enum name="info" value="8"/>
            <!-- Кнопка по умолчанию -->
            <enum name="def" value="9"/>
            <!-- Стиль Link -->
            <enum name="link" value="13"/>
            <!-- Стиль Label -->
            <enum name="label" value="14"/>
        </attr>

        <!-- Размер кнопки -->
        <attr name="SbisLinkButton_size" format="enum">
            <!-- Кнопка особо малого размера -->
            <enum name="xs" value="1"/>
            <!-- Кнопка малого размера (значение по умолчанию) -->
            <enum name="s" value="2"/>
            <!-- Кнопка среднего размера -->
            <enum name="m" value="3"/>
            <!-- Кнопка большого размера -->
            <enum name="l" value="4"/>
            <!-- Кнопка особо большого размера -->
            <enum name="xl" value="5"/>
        </attr>

        <!-- Состояние кнопки -->
        <attr name="SbisLinkButton_state" format="enum">
            <!-- Кнопка включена (значение по умолчанию) -->
            <enum name="enabled" value="1"/>
            <!-- Кнопка выключена -->
            <enum name="disabled" value="2"/>
        </attr>

        <!-- Шрифтовая иконка -->
        <attr name="SbisLinkButton_icon" format="string|reference"/>

        <!-- Размер иконки -->
        <attr name="SbisLinkButton_iconSize" format="enum">
            <!-- Размер в глобальной теме 12dp -->
            <enum name="xs" value="1"/>
            <!-- Размер в глобальной теме 14dp -->
            <enum name="s" value="2"/>
            <!-- Размер в глобальной теме 18dp -->
            <enum name="xl" value="3"/>
            <!-- Размер в глобальной теме 20dp -->
            <enum name="x2l" value="4"/>
            <!-- Размер в глобальной теме 24dp -->
            <enum name="x3l" value="5"/>
            <!-- Размер в глобальной теме 26dp -->
            <enum name="x4l" value="6"/>
            <!-- Размер в глобальной теме 28dp -->
            <enum name="x5l" value="7"/>
            <!-- Размер в глобальной теме 32dp -->
            <enum name="x7l" value="8"/>
        </attr>

        <!-- Текст в кнопке -->
        <attr name="SbisLinkButton_title" format="string|reference"/>

        <!-- Размер текста -->
        <attr name="SbisLinkButton_titleSize" format="enum">
            <!-- Размер в глобальной теме 10dp -->
            <enum name="xs" value="1"/>
            <!-- Размер в глобальной теме 14dp -->
            <enum name="m" value="2"/>
            <!-- Размер в глобальной теме 17dp -->
            <enum name="xl" value="3"/>
            <!-- Размер в глобальной теме 18dp -->
            <enum name="x2l" value="4"/>
            <!-- Размер в глобальной теме 20dp -->
            <enum name="x3l" value="5"/>
        </attr>

        <!-- Положение текста в кнопке -->
        <attr name="SbisLinkButton_titlePosition" format="enum">
            <!-- Текст слева от иконки -->
            <enum name="left" value="1"/>
            <!-- Текст справа от иконки (значение по умолчанию) -->
            <enum name="right" value="2"/>
        </attr>

        <!--region Набор цветов текста -->
        <!-- Цвет текста кнопки для состояния по умолчанию -->
        <attr name="SbisLinkButton_titleColor" format="reference|color"/>
        <!-- Цвет текста кнопки для выключенного состояния-->
        <attr name="SbisLinkButton_titleDisabledColor" format="reference|color"/>
        <!-- Прозрачность цвета текста кнопки для выключенного состояния-->
        <attr name="SbisLinkButton_titleDisabledColorAlpha" format="reference|float"/>
        <!--endregion-->

        <!--region Набор цветов иконки -->
        <!-- Цвет иконки кнопки для состояния по умолчанию -->
        <attr name="SbisLinkButton_iconColor" format="reference|color"/>
        <!-- Цвет иконки кнопки для выключенного состояния-->
        <attr name="SbisLinkButton_iconDisabledColor" format="reference|color"/>
        <!--endregion-->

    </declare-styleable>
</resources>