<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Атрибут для определения темы компонента заглушки в составе темы приложения -->
    <attr name="stubViewTheme" format="reference"/>

    <!-- Атрибуты компонента заглушки -->
    <declare-styleable name="StubView">

        <!-- Режим отображения заглушки -->
        <attr name="StubView_mode" format="enum">
            <!-- Стандартный режим отображения. Отступ сверху ревен 10% высоты контейнера -->
            <enum name="base" value="0"/>
            <!-- Отображение в блоке. Отступ сверху фиксирован и равен 12dp -->
            <enum name="block" value="1"/>
            <!-- Плотное отображение заглушки. Отступ сверху отсутсвует -->
            <enum name="dens" value="2"/>
        </attr>

        <!-- Цвет фона заглушки, переопределяет стандартный -->
        <attr name="StubView_backgroundColor" format="color"/>
        <!-- Цвет текста заголовка заглушки, переопределяет стандартный -->
        <attr name="StubView_messageColor" format="color"/>
        <!-- Цвет текста описания заглушки, переопределяет стандартный -->
        <attr name="StubView_detailsColor" format="color"/>
        <!-- Цвет ссылок в тексте описания заглушки, переопределяет стандартный -->
        <attr name="StubView_detailsLinkColor" format="color"/>
        <!-- Ресурс иконки заглушки-->
        <attr name="StubView_caseNoMessages" format="reference"/>
        <attr name="StubView_caseNoContacts" format="reference"/>
        <attr name="StubView_caseNoNews" format="reference"/>
        <attr name="StubView_caseNoEvents" format="reference"/>
        <attr name="StubView_caseNoTasks" format="reference"/>
        <attr name="StubView_caseNoFiles" format="reference"/>
        <attr name="StubView_caseNoNotifications" format="reference"/>
        <attr name="StubView_caseNoSalaryData" format="reference"/>
        <attr name="StubView_casePageNotFound" format="reference"/>
        <attr name="StubView_caseNoConnection" format="reference"/>
        <attr name="StubView_caseServiceUnavailable" format="reference"/>
        <attr name="StubView_caseSbisError" format="reference"/>
        <attr name="StubView_caseNoSearchResults" format="reference"/>
        <attr name="StubView_caseNoFilterResults" format="reference"/>
        <attr name="StubView_caseNoEmployees" format="reference"/>
        <attr name="StubView_caseNoPermissions" format="reference"/>
        <attr name="StubView_caseNoData" format="reference"/>
        <attr name="StubView_caseTechnicalSupportChats" format="reference"/>
        <attr name="StubView_caseScanning" format="reference"/>
        <attr name="StubView_caseNoGeodata" format="reference"/>
        <attr name="StubView_caseEmpty" format="reference"/>
        <attr name="StubView_caseNoReservation" format="reference"/>
        <attr name="StubView_caseEmptyList" format="reference"/>
        <attr name="StubView_caseAllDone" format="reference"/>
        <attr name="StubView_caseNoReadyMeals" format="reference"/>
        <attr name="StubView_caseRestartApp" format="reference"/>
        <attr name="StubView_caseNoGalleryMedia" format="reference"/>

        <!-- Ссылка на drawable иконку, переоределяет иконку из "StubView_case".
        Перед применением нужно убедиться, что нет подходящей ситуации в стандартном
        наборе "StubView_case" -->
        <attr name="android:icon"/>
        <!-- Ссылка на строку заголовка, переоределяет заголовок из "StubView_case" -->
        <attr name="android:title"/>
        <!-- Ссылка на строку развёрнутым описанием причины, переоределяет описание из "StubView_case" -->
        <attr name="android:description"/>
        <!-- Размер текста комментария заглушки -->
        <attr name="StubView_commentTextSize" format="enum">
            <enum name="normal" value="1"/>
            <enum name="large" value="2"/>
        </attr>
    </declare-styleable>

</resources>