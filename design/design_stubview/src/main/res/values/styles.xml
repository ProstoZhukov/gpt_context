<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- StubView -->
    <style name="StubViewText" parent="RegularStyle">
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StubViewText.Title">
        <item name="android:textSize">?fontSize_4xl_scaleOn</item>
    </style>

    <style name="StubViewText.Description">
        <item name="android:textSize">?fontSize_m_scaleOn</item>
        <item name="android:textColorLink">?linkTextColor</item>
    </style>

    <!-- DataLoadingErrorStubView -->
    <style name="DataLoadingErrorStubViewDefaultStyle">
        <item name="DataLoadingErrorStubView_messageStyle">@style/DataLoadingErrorContentMessage</item>
        <item name="DataLoadingErrorStubView_iconStyle">@style/DataLoadingErrorContentIcon</item>
    </style>

    <style name="DataLoadingErrorContentMessage">
        <item name="android:textSize">?attr/fontSize_xs_scaleOff</item>
        <item name="android:textColor">?unaccentedTextColor</item>
        <item name="android:paddingEnd">?offset_m</item>
        <item name="android:paddingTop">?offset_l</item>
        <item name="android:paddingBottom">?offset_l</item>
        <item name="android:text">@string/design_stub_view_data_loading_error_message</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="DataLoadingErrorContentIcon" parent="MobileFontStyle">
        <item name="android:textSize">?iconSize_3xl</item>
        <item name="android:textColor">?unaccentedTextColor</item>
        <item name="android:text">@string/design_mobile_icon_alert</item>
        <item name="android:paddingStart">?offset_m</item>
        <item name="android:paddingEnd">?offset_xs</item>
    </style>

</resources>