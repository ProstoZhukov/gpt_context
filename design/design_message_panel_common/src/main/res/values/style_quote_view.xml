<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Quote panel -->
    <style name="QuiteViewDefaultStyle">
        <item name="MessagePanelQuoteView_titleStyle">@style/QuoteText.Title</item>
        <item name="MessagePanelQuoteView_subtitleStyle">@style/QuoteText.Subtitle</item>
        <item name="MessagePanelQuoteView_closeButtonStyle">@style/QuoteCloseButton</item>
        <item name="MessagePanelQuoteView_dividerColor">?secondaryIconColor</item>
    </style>

    <style name="QuoteText" parent="RegularStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="QuoteText.Title">
        <item name="android:textSize">?fontSize_xs_scaleOff</item>
        <item name="android:textColor">?secondaryTextColor</item>
        <item name="android:paddingStart">?offset_xs</item>
        <item name="android:paddingTop">?offset_2xs</item>
    </style>

    <style name="QuoteText.Subtitle">
        <item name="android:textSize">?fontSize_3xs_scaleOff</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:paddingStart">?offset_xs</item>
        <item name="android:paddingBottom">?offset_2xs</item>
    </style>

    <style name="QuoteCloseButton" parent="MobileFontStyle">
        <item name="android:layout_width">@dimen/design_message_panel_common_quote_close_button_width</item>
        <item name="android:text">@string/design_mobile_icon_close_for_nav_panel</item>
        <item name="android:textSize">?iconSize_s</item>
        <item name="android:textColor">?unaccentedIconColor</item>
        <item name="android:gravity">center</item>
    </style>

</resources>