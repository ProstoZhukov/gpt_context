<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RecipientsViewDefaultStyle">
        <item name="MessagePanelRecipientsView_addButtonStyle">@style/RecipientsButton.AddButton</item>
        <item name="MessagePanelRecipientsView_recipientsStyle">@style/RecipientsText.Recipients</item>
        <item name="MessagePanelRecipientsView_hintStyle">@style/RecipientsText.Hint</item>
        <item name="MessagePanelRecipientsView_moreCounterStyle">@style/RecipientsText.MoreCounter</item>
        <item name="MessagePanelRecipientsView_clearButtonStyle">@style/RecipientsButton.ClearButton</item>
        <item name="MessagePanelRecipientsView_allChosenText">@string/design_message_panel_recipients_for_all_members</item>
        <item name="MessagePanelRecipientsView_hintText">@string/design_message_panel_recipients_add_new_for_conversations</item>
    </style>

    <style name="RecipientsText" parent="RegularStyle">
        <item name="android:textSize">?fontSize_xs_scaleOff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RecipientsButton" parent="MobileFontStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="RecipientsText.Recipients">
        <item name="android:textColor">?secondaryTextColor</item>
        <item name="android:textSize">?fontSize_xs_scaleOff</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">@dimen/design_message_panel_recipients_text_padding_top</item>
    </style>

    <style name="RecipientsText.Hint">
        <item name="android:textColor">?unaccentedTextColor</item>
        <item name="android:textSize">?fontSize_3xs_scaleOff</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">?offset_st</item>
    </style>

    <style name="RecipientsText.MoreCounter">
        <item name="android:textColor">?secondaryTextColor</item>
        <item name="android:paddingStart">?offset_2xs</item>
    </style>

    <style name="RecipientsButton.ClearButton">
        <item name="android:text">@string/design_mobile_icon_close_for_nav_panel</item>
        <item name="android:textColor">?unaccentedIconColor</item>
        <item name="android:textSize">?iconSize_s</item>
        <item name="android:layout_width">@dimen/design_message_panel_recipients_clear_button_width</item>
    </style>

    <style name="RecipientsButton.AddButton">
        <item name="android:text">@string/design_mobile_icon_add_member_2</item>
        <item name="android:textColor">?secondaryIconColor</item>
        <item name="android:textSize">?iconSize_l</item>
        <item name="android:paddingStart">?offset_m</item>
        <item name="android:paddingEnd">?offset_2xl</item>
        <item name="android:paddingTop">@dimen/design_message_panel_recipients_add_button_padding_top</item>
    </style>

</resources>