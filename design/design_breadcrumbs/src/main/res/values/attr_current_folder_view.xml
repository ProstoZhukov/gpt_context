<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стиль разделителя-заголовка "Назад" -->
    <attr name="currentFolderViewTheme" format="reference"/>

    <declare-styleable name="CurrentFolderView">
        <!-- Стиль иконки стрелки -->
        <attr name="CurrentFolderView_iconStyle" format="reference"/>
        <!-- Стиль текста заголовка -->
        <attr name="CurrentFolderView_titleStyle" format="reference"/>
        <!-- Цвет фона заголовка (распространяется на FolderPathView) -->
        <attr name="CurrentFolderView_backgroundColor" format="reference"/>
        <!-- Цвет разделителя (распространяется на FolderPathView) -->
        <attr name="CurrentFolderView_dividerColor" format="reference"/>
        <!-- Текст заголовка -->
        <attr name="CurrentFolderView_title" format="string"/>
        <!-- Должен ли отображаться разделитель (распространяется на FolderPathView). По умолчанию true -->
        <attr name="CurrentFolderView_showDivider" format="string"/>
    </declare-styleable>

</resources>