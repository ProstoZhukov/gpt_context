<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/change_theme_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?offset_2xl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/preview_default"/>

    <ru.tensor.sbis.design.buttons.SbisRoundButton
        android:id="@+id/change_theme_current_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?offset_m"
        app:SbisRoundButton_icon="@string/design_mobile_icon_checked"
        app:SbisRoundButton_iconSize="xl"
        app:SbisRoundButton_size="s"
        app:SbisRoundButton_style="success"
        app:SbisRoundButton_type="contrast"
        app:layout_constraintEnd_toEndOf="@id/change_theme_preview"
        app:layout_constraintHorizontal_bias="1.1"
        app:layout_constraintStart_toStartOf="@id/change_theme_preview"
        app:layout_constraintTop_toTopOf="@id/change_theme_preview"/>

</androidx.constraintlayout.widget.ConstraintLayout>