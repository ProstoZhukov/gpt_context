<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="sbisTileContentViewTheme" format="reference" tools:ignore="ResourceName"/>

    <declare-styleable name="SbisTileContentView" tools:ignore="ResourceName">
        <!-- Стиль текста заголовка -->
        <attr name="SbisTileContentView_titleAppearance" format="reference"/>
        <!-- Стиль текста описания -->
        <attr name="SbisTileContentView_descriptionAppearance" format="reference"/>
        <!-- Максимальное число строк заголовка (по умолчанию без ограничения) -->
        <attr name="SbisTileContentView_titleMaxLines" format="integer"/>
        <!-- Максимальное число строк описания (по умолчанию без ограничения) -->
        <attr name="SbisTileContentView_descriptionMaxLines" format="integer"/>
    </declare-styleable>

</resources>