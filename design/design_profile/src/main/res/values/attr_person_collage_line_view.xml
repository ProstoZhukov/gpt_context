<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="PersonCollageLineView" tools:ignore="ResourceName">
        <!--
       Размер фото в коллаже (один из предустановленных, либо определяемый в layout_params).
       По умолчанию unspecified. В этом случае нужно явно указать значение `layout_height`
       -->
        <attr name="PersonCollageLineView_size" format="enum">
            <!-- Стандартный размер size_2xs_image -->
            <enum name="x2s" value="0"/>
            <!-- Стандартный размер size_xs_image -->
            <enum name="xs" value="1"/>
            <!-- Стандартный размер size_s_image -->
            <enum name="s" value="2"/>
            <!-- Стандартный размер size_m_image -->
            <enum name="m" value="3"/>
            <!-- Стандартный размер size_l_image -->
            <enum name="l" value="4"/>
            <!-- Стандартный размер size_xl_image -->
            <enum name="xl" value="5"/>
            <!-- Стандартный размер size_2xl_image -->
            <enum name="size_2xl" value="6"/>
            <!--
            Прикладной размер. Определяется исходя из layout_height, с учётом внутренних отступов
            -->
            <enum name="unspecified" value="7"/>
        </attr>

        <!--
        Максимальное число отображаемых фото. По умолчанию число ограничено шириной доступной
        области
        -->
        <attr name="PersonCollageLineView_maxVisibleCount" format="integer"/>

        <!-- Цвет инициалов -->
        <attr name="PersonCollageLineView_initialsColor" format="color|reference"/>

        <!-- Форма фото в коллаже (по умолчанию суперэллипс) -->
        <attr name="PersonCollageLineView_shape" format="enum">
            <enum name="super_ellipse" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
    </declare-styleable>

</resources>