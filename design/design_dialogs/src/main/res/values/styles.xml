<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetAnimationNoEnter" parent="Animation.Design.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@null</item>
    </style>

    <style name="SbisAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorAlertDialogListItem">@color/sbis_black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/sbis_black</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:colorAccent">@color/color_primary</item>
        <item name="android:colorControlNormal">@color/color_primary</item>
        <item name="android:colorControlActivated">@color/color_primary</item>
    </style>

    <style name="MultiPicker.Item" parent="RegularStyle">
        <item name="android:textSize">@dimen/multi_picker_item_text_size</item>
        <item name="android:editTextColor">@color/text_color_black_1</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- Bottom sheet popup dialog -->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:borderlessButtonStyle">@style/AlertDialog.Button</item>
        <item name="android:windowTitleStyle">@style/AlertDialog.Title</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="AlertDialog.Title" parent="RtlOverlay.DialogWindowTitle.AppCompat">
        <item name="android:textAppearance">@style/TextAppearance.AlertDialog.Title</item>
    </style>

    <style name="TextAppearance.AlertDialog.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/sbis_black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AlertDialog.Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/TextAppearance.AlertDialog.Button</item>
    </style>

    <style name="TextAppearance.AlertDialog.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/alert_dialog_btn_text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PopupMenuAppearance">
        <item name="android:windowEnterAnimation">@anim/popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/popup_fade_out</item>
    </style>
</resources>