<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/design_dialogs_root_of_element"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_list_item_height"
    android:background="@drawable/selectable_popup_menu_item_bg"
    tools:viewBindingIgnore="true">

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/design_dialogs_menu_icon"
        style="@style/MobileFontStyle"
        android:layout_width="@dimen/bottom_list_icon_width"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/text_color_accent_2"
        android:textSize="@dimen/text_size_icon_bottom_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage"
        tools:text="k"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/design_dialogs_menu_item_text"
        style="@style/RegularStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginEnd="@dimen/text_margin_right"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/blue_text_color"
        android:textSize="@dimen/size_title1_scaleOff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/design_dialogs_menu_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="@dimen/text_margin_left"
        tools:ignore="SpUsage"
        tools:text="asfdafdsa"/>

    <View
        android:id="@+id/design_dialogs_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_separator_size"
        android:background="@color/separator_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>