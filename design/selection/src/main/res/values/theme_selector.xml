<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SelectionDefaultTheme">
        <item name="Selector_headerContainerStyle">@style/SelectionHeader</item>
        <item name="Selector_searchPanelStyle">@style/SelectionSearchPanel</item>
        <item name="Selector_listTheme">@style/SelectorDefaultListTheme</item>
        <item name="Selector_chooseAllTheme">@style/SelectorChooseAll</item>
        <item name="Selector_headerIconPadding">@dimen/selection_header_search_panel_horizontal_end</item>
    </style>

    <!-- Тема не используется, атрибуты частично вынесены на верхний уровень -->
    <style name="SelectionDefaultHeaderTheme"/>

    <!-- Тема по умолчанию для списка компонента выбора -->
    <style name="SelectorDefaultListTheme">
        <!--region Стили для самого списка (применяются и ко вложенным элементам) -->
        <item name="android:scrollbars">vertical</item>
        <!--endregion-->

        <!--region Темы элементов списка -->
        <item name="Selector_regionMultiItemTheme">@style/SelectionRegionItemTheme.Multi.Region</item>
        <item name="Selector_regionSingleItemTheme">@style/SelectionRegionItemTheme.Single</item>
        <item name="Selector_personMultiItemTheme">@style/SelectionRecipientItemTheme.Multi.Person</item>
        <item name="Selector_groupMultiItemTheme">@style/SelectionRecipientItemTheme.Multi.Group</item>
        <item name="Selector_departmentMultiItemTheme">@style/SelectionRecipientItemTheme.Multi.Department</item>
        <!--endregion-->
    </style>

</resources>