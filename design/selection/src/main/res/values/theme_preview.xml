<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SelectionPreviewView">
        <item name="SelectionPreviewView_itemBodyStyle">@style/SelectionPreviewItem.Body</item>
        <item name="SelectionPreviewView_itemTitleStyle">@style/SelectionPreviewItem.Title</item>
        <item name="SelectionPreviewView_removeIconStyle">@style/SelectionPreviewItem.RemoveIcon</item>
        <item name="SelectionPreviewView_markIconStyle">@style/SelectionPreviewItem.MarkIcon</item>
        <item name="SelectionPreviewView_itemDividerStyle">@style/SelectionPreviewItem.Divider</item>
        <item name="SelectionPreviewView_totalCountStyle">@style/SelectionPreviewItem.TotalCount</item>
        <item name="SelectionPreviewView_suggestionHeaderTitleStyle">@style/SelectionPreviewItem.HeaderTitle</item>
        <item name="SelectionPreviewView_suggestionArrowIconStyle">@style/SelectionPreviewItem.HeaderArrow</item>
        <item name="SelectionPreviewView_counterStyle">@style/SelectionPreviewItem.Counter</item>
        <item name="SelectionPreviewView_moreTextStyle">@style/SelectionPreviewItem.More</item>
    </style>

    <style name="SelectionPreviewItem"/>

    <style name="SelectionPreviewItem.Body" parent="SelectionDefaultMultiItemBody.Region">
        <item name="android:background">@drawable/selectable_item_background</item>
        <item name="android:paddingEnd">@dimen/selection_item_horizontal_spacing</item>
    </style>

    <style name="BaseSelectionPreviewTitle" parent="SelectionDefaultItemTitle.Region">
        <item name="android:textSize">@dimen/size_title3_scaleOn</item>
    </style>

    <style name="SelectionPreviewItem.Title" parent="BaseSelectionPreviewTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SelectionPreviewItem.Icon" parent="MobileFontStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SelectionPreviewItem.HeaderTitle" parent="BaseSelectionPreviewTitle">
        <item name="android:textSize">@dimen/size_title1_scaleOff</item>
        <item name="android:textColor">@color/text_color_accent_4</item>
    </style>

    <style name="SelectionPreviewItem.More" parent="SelectionPreviewItem.Title">
        <item name="android:textColor">@color/palette_color_gray4</item>
    </style>

    <style name="SelectionPreviewItem.TotalCount" parent="SelectionPreviewItem.Title">
        <item name="android:textColor">@color/palette_color_gray4</item>
    </style>

    <style name="SelectionPreviewItem.Counter" parent="BaseSelectionPreviewTitle">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="SelectionPreviewItem.HeaderArrow" parent="SelectionPreviewItem.Icon">
        <item name="android:textSize">@dimen/size_caption1_scaleOff</item>
        <item name="android:text">@string/design_mobile_icon_arrow_narrow_right</item>
        <item name="android:textColor">@color/text_color_accent_1</item>
        <item name="android:layout_width">@dimen/selection_preview_arrow_size</item>
        <item name="android:layout_height">@dimen/selection_preview_arrow_size</item>
    </style>

    <style name="SelectionPreviewItem.RemoveIcon" parent="SelectionPreviewItem.Icon">
        <item name="android:textSize">@dimen/size_body1_scaleOff</item>
        <item name="android:text">@string/design_mobile_icon_toolbar_close</item>
        <item name="android:textColor">@color/text_color_black_4</item>
        <item name="android:layout_width">@dimen/selection_preview_remove_icon_size</item>
        <item name="android:layout_height">@dimen/selection_preview_remove_icon_size</item>
    </style>

    <style name="SelectionPreviewItem.MarkIcon" parent="SelectionPreviewItem.Icon">
        <item name="android:textSize">@dimen/size_caption1_scaleOff</item>
        <item name="android:text">@string/design_mobile_icon_check</item>
        <item name="android:textColor">@color/text_color_accent_4</item>
        <item name="android:layout_width">@dimen/selection_preview_mark_icon_size</item>
        <item name="android:layout_height">@dimen/selection_preview_mark_icon_size</item>
    </style>

    <style name="SelectionPreviewItem.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/selection_preview_divider_height</item>
        <item name="android:background">@color/palette_color_black5</item>
    </style>

</resources>