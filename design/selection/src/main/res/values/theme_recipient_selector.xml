        <item name="Selector_searchPanelStyle">@style/SelectionHeader.SearchPanel</item>
        <item name="Selector_headerIconPadding">@dimen/toolbar_left_panel_right_padding</item>
    </style>

    <!-- Тема для встраивания в split view на планшете (высота шапки соответствует высоте тулбара) -->
