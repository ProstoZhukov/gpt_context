        <item name="Selector_headerContainerStyle">@style/SelectionHeaderRecipientEmbeddedOnTablet</item>
    </style>

    <!-- Тема неактуальна -->
    <style name="SelectionDefaultHeaderTheme.Recipient"/>

    <style name="SelectionHeader.Recipient">
        <item name="leftIconText">@string/design_mobile_icon_arrow_back</item>
    </style>

    <style name="SelectionHeader.SearchPanel">
        <item name="searchInput_color">additional</item>
        <item name="additionalColor">@color/palette_color_white1</item>
        <item name="searchInput_size">small</item>
        <item name="searchInput_cornerRadius">@dimen/selection_search_corner_radius</item>
    </style>

    <style name="SelectionHeaderRecipientEmbeddedOnTablet" parent="SelectionHeader.Recipient">
        <item name="android:minHeight">?attr/actionBarSize</item>
