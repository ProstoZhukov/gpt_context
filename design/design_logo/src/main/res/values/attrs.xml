<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SbisLogo">
        <!-- Тип логотипа -->
        <attr name="SbisLogo_type" format="enum">
            <enum name="textIcon" value="1"/>
            <enum name="iconText" value="2"/>
            <enum name="icon" value="3"/>
            <enum name="textIconAppName" value="4"/>
        </attr>

        <!-- Cтиль логотипа -->
        <attr name="SbisLogo_style" format="enum">
            <enum name="page" value="1"/>
            <enum name="navigation" value="2"/>
            <enum name="terminal" value="3"/>
            <enum name="terminal_reversed" value="4"/>
        </attr>

        <!--region Атрибуты, предназначенные для логотипа типа "textIconAppName" -->
        <attr name="SbisLogo_brandName" format="string|reference"/>
        <attr name="SbisLogo_appName" format="string|reference"/>
        <attr name="SbisLogo_logo" format="reference"/>
        <attr name="SbisLogo_iconHorizontalPosition" format="enum">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <!-- endregion -->
    </declare-styleable>


    <!--    region атрибуты стилей логотипа   -->
    <!--    атрибут для определения цветов стандартного стиля логотипа (нас странице)  -->
    <attr name="sbisLogoPageStyle" format="reference"/>

    <!--    атрибут для определения цветов навигационного стиля логотипа (в аккордеоне)  -->
    <attr name="sbisLogoNavigationStyle" format="reference"/>

    <!--    атрибут для определения цветов стиля логотипа "Терминал"   -->
    <attr name="sbisLogoTerminalStyle" format="reference"/>

    <!--    атрибут для определения цветов стиля логотипа "Терминал обратные цвета"   -->
    <attr name="sbisLogoTerminalReversedStyle" format="reference"/>
    <!--    endregion    -->

    <!--    region Цвета логотипа    -->
    <!--    атрибут цвета иконки (работает только со стандартной птицей)-->
    <attr name="sbisLogoIconColor" format="reference|color"/>

    <!--    атрибут цвета названия бренда в составном названии-->
    <attr name="sbisLogoBrandNameColor" format="reference|color"/>

    <!--    атрибут цвета названия приложения в составном названии-->
    <attr name="sbisLogoAppNameColor" format="reference|color"/>

    <!--    атрибут цвета названия приложения, если название не составное (SABY/СБИС)-->
    <attr name="sbisLogoSingleNameColor" format="reference|color"/>
    <!--    endregion    -->

</resources>