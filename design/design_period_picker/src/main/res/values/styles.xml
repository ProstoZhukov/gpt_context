<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShortPeriodPickerSbisTextView" parent="RegularStyle">
        <item name="android:textColor">?textColor</item>
        <item name="android:textSize">?fontSize_5xl_scaleOn</item>
    </style>

    <style name="ShortPeriodPickerFirstColumnSbisTextView" parent="ShortPeriodPickerSbisTextView">
        <item name="android:layout_width">@dimen/period_picker_zero_dimen</item>
        <item name="android:layout_height">?inlineHeight_2xl</item>
        <item name="android:layout_marginStart">?offset_xl</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ShortPeriodPickerNextColumnSbisTextView" parent="ShortPeriodPickerSbisTextView">
        <item name="android:layout_width">?inlineHeight_2xl</item>
        <item name="android:layout_height">@dimen/period_picker_zero_dimen</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ShortPeriodPickerFirstColumnHalfYearSbisTextView" parent="ShortPeriodPickerFirstColumnSbisTextView">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ShortPeriodPickerNextColumnHalfYearSbisTextView" parent="ShortPeriodPickerSbisTextView">
        <item name="android:layout_width">@dimen/period_picker_zero_dimen</item>
        <item name="android:layout_height">@dimen/period_picker_zero_dimen</item>
        <item name="android:layout_marginEnd">?offset_xl</item>
        <item name="android:paddingStart">?offset_st</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ShortPeriodPickerSelectionView">
        <item name="android:layout_width">@dimen/period_picker_zero_dimen</item>
        <item name="android:layout_height">@dimen/period_picker_zero_dimen</item>
        <item name="android:layout_marginStart">?offset_2xs</item>
        <item name="android:layout_marginEnd">?offset_2xs</item>
        <item name="android:layout_marginTop">?attr/SelectionView_margin</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ShortPeriodPickerDividerView">
        <item name="android:layout_width">@dimen/period_picker_divider_width</item>
        <item name="android:layout_height">@dimen/period_picker_zero_dimen</item>
        <item name="android:layout_marginTop">@dimen/short_period_picker_divider_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/short_period_picker_divider_vertical_margin</item>
        <item name="android:background">@drawable/period_picker_quantum_divider</item>
    </style>

    <style name="PeriodPickerSbisTextView" parent="MediumStyle">
        <item name="android:textColor">?textColor</item>
        <item name="android:textSize">?HeaderLabel_textSize</item>
    </style>

    <style name="PeriodPickerSbisRegularTextView" parent="RegularStyle">
        <item name="android:textColor">?textColor</item>
        <item name="android:textSize">?HeaderLabel_textSize</item>
    </style>

    <style name="PeriodPickerQuarterSbisTextView" parent="PeriodPickerSbisTextView">
        <item name="android:layout_width">@dimen/period_picker_quantum_width</item>
        <item name="android:layout_height">?QuantumLabel_quarterHeight</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PeriodPickerMonthSbisTextView" parent="PeriodPickerSbisRegularTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?QuantumLabel_quarterHeight</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PeriodPickerHalfYearSbisTextView" parent="PeriodPickerSbisTextView">
        <item name="android:layout_width">@dimen/period_picker_quantum_width</item>
        <item name="android:layout_height">?QuantumLabel_halfYearHeight</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PeriodPickerDividerView">
        <item name="android:layout_width">@dimen/period_picker_divider_width</item>
        <item name="android:layout_height">@dimen/period_picker_zero_dimen</item>
        <item name="android:layout_marginTop">?QuantumLabel_margin</item>
        <item name="android:layout_marginBottom">?QuantumLabel_margin</item>
        <item name="android:background">@drawable/period_picker_quantum_divider</item>
    </style>
</resources>