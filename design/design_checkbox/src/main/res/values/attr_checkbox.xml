<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="sbisCheckboxDefaultsTheme" format="reference"/>

    <attr name="sbisCheckboxValidationTopMargin" format="dimension|reference"/>
    <attr name="sbisCheckboxContentStartMargin" format="dimension|reference"/>

    <attr name="sbisCheckboxBackgroundColor" format="string|reference"/>
    <attr name="sbisCheckboxMarkerColor" format="reference|color"/>
    <attr name="sbisCheckboxAccentMarkerColor" format="reference|color"/>
    <attr name="sbisCheckboxReadOnlyMarkerColor" format="reference|color"/>
    <attr name="sbisCheckboxBorderColor" format="reference|color"/>
    <attr name="sbisCheckboxReadOnlyBorderColor" format="reference|color"/>
    <attr name="sbisCheckboxPresetBackgroundColor" format="reference|color"/>
    <attr name="sbisCheckboxPresetOffBackgroundColor" format="reference|color"/>
    <attr name="sbisCheckboxValidationBorderColorError" format="reference|color"/>

    <declare-styleable name="SbisCheckbox">
        <!-- Размер чекбокса -->
        <attr name="SbisCheckbox_size" format="enum">
            <!-- Размер в глобальной теме 20dp -->
            <enum name="s" value="1"/>
            <!-- Размер в глобальной теме 32dp -->
            <enum name="l" value="2"/>
        </attr>

        <!-- Вид чекбокса -->
        <attr name="SbisCheckbox_mode" format="enum">
            <!-- По умолчанию -->
            <enum name="standard" value="1"/>
            <!-- Акцентный -->
            <enum name="accent" value="2"/>
        </attr>

        <!-- Текстовая метка -->
        <attr name="SbisCheckbox_text" format="string|reference"/>
        <!-- Включение максимального количества строк для текстового поля -->
        <attr name="SbisCheckbox_isMaxLines" format="boolean|reference"/>

        <!-- Цвет текстовой метки -->
        <attr name="SbisCheckbox_textColor" format="string|reference"/>

        <!-- Метка-иконка -->
        <attr name="SbisCheckbox_icon" format="string|reference"/>

        <!-- Цвет метки-иконки -->
        <attr name="SbisCheckbox_iconColor" format="string|reference"/>

        <!-- Положение чекбокса относительно иконки -->
        <attr name="SbisCheckbox_contentPosition" format="enum">
            <!-- Чекбокс слева, метка справа (по умолчанию) -->
            <enum name="right" value="1"/>
            <!-- Чекбокс справа, метка слева -->
            <enum name="left" value="2"/>
        </attr>

        <attr name="SbisCheckbox_useVerticalOffset" format="boolean"/>

        <!-- Фон чекбокса -->
        <attr name="SbisCheckbox_backgroundType" format="enum">
            <!-- С заливкой (по умолчанию) -->
            <enum name="filled" value="1"/>
            <!-- Без заливки -->
            <enum name="outlined" value="2"/>
        </attr>

        <attr name="android:enabled"/>
        <attr name="android:clickable"/>
    </declare-styleable>
</resources>