<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="sbisLoadingIndicatorTheme" format="reference"/>
    <attr name="sbisPullToRefreshTheme" format="reference"/>

    <declare-styleable name="SbisLoadingIndicator">
        <!-- Цвет прогресса -->
        <attr name="SbisLoadingIndicator_progressColor" format="color"/>
        <!-- Отложенное отображение прогресса -->
        <attr name="SbisLoadingIndicator_delayedShowing" format="boolean"/>
        <!-- Время для ожидания перед отображением прогресса -->
        <attr name="SbisLoadingIndicator_appearanceDelay" format="integer"/>
        <!-- Использование стандартного drawable -->
        <attr name="SbisLoadingIndicator_strictlyUseProgressDrawable" format="boolean"/>
        <!-- Размер прогресса -->
        <attr name="SbisLoadingIndicator_progressSize" format="enum">
            <enum name="x8s" value="1"/>
            <enum name="x7s" value="2"/>
            <enum name="x6s" value="3"/>
            <enum name="x5s" value="4"/>
            <enum name="x4s" value="5"/>
            <enum name="x3s" value="6"/>
            <enum name="x2s" value="7"/>
            <enum name="xs" value="8"/>
            <enum name="s" value="9"/>
            <enum name="m" value="10"/>
            <enum name="l" value="11"/>
            <enum name="xl" value="12"/>
            <enum name="x2l" value="13"/>
            <enum name="x3l" value="14"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SbisPullToRefresh">
        <!-- Цвет индикатора прогресса -->
        <attr name="SbisPullToRefresh_progressColor" format="color|reference"/>
        <!-- Цвет подложки индикатора -->
        <attr name="SbisPullToRefresh_progressBackground" format="color|reference"/>
    </declare-styleable>

</resources>