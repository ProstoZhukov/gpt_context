        <item name="SbisLoadingIndicator_progressColor">?primaryIconColor</item>
        <item name="SbisLoadingIndicator_delayedShowing">false</item>
        <item name="SbisLoadingIndicator_appearanceDelay">@integer/progressShowingDefaultDelay</item>
        <item name="SbisLoadingIndicator_strictlyUseProgressDrawable">false</item>
