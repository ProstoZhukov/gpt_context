<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BadgeTextViewStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BadgeTextViewStyle.FoldersPanel">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BadgeTextViewStyle.FoldersPanel.Orange">
        <item name="android:textColor">@color/sbis_orange_dark</item>
    </style>

    <style name="BadgeTextViewStyle.Small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BadgeTextViewStyle.Orange">
        <item name="android:textColor">@color/text_color_accent_5</item>
    </style>

    <style name="BadgeTextViewStyle.Orange.WithSizeInDp">
        <item name="android:textSize">@dimen/size_title2_scaleOff</item>
    </style>

    <style name="BadgeTextViewStyle.Small.Orange">
        <item name="android:textColor">@color/sbis_orange_dark</item>
    </style>

    <style name="BadgeTextViewStyle.Small.Orange.WithSizeInDp">
        <item name="android:textSize">@dimen/toolbar_badge_view_text_size_small_dp</item>
    </style>

    <style name="BadgeTextViewStyle.Blue">
        <item name="android:textColor">@color/text_color_link_1</item>
    </style>

    <style name="BadgeTextViewStyle.Blue.WithSizeInDp">
        <item name="android:textSize">@dimen/size_title2_scaleOff</item>
    </style>

    <style name="BadgeTextViewStyle.Small.Blue">
        <item name="android:textColor">@color/badge_blue_color</item>
    </style>

    <style name="BadgeTextViewStyle.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="UnreadCounterBadge" parent="BadgeTextViewStyle.White">
        <item name="android:background">@drawable/orange_badge_counter_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">@dimen/unread_counter_badge_padding</item>
        <item name="android:paddingRight">@dimen/unread_counter_badge_padding</item>
        <item name="android:textSize">@dimen/unread_counter_badge_text_size</item>
    </style>

    <!--region SbisTextCounter -->
    <style name="SbisTextCounterStyle" parent="AppGlobalTheme">
        <item name="SbisTextCounter_accentedTextColor">?primaryTextColor</item>
        <item name="SbisTextCounter_unaccentedTextColor">?labelTextColor</item>
        <item name="SbisTextCounter_dividerColor">?unaccentedSeparatorColor</item>
        <item name="SbisTextCounter_textSize">?fontSize_l_scaleOff</item>
    </style>
    <!--endregion-->
</resources>