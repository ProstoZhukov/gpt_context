<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--region Стили счётчика -->
    <attr name="SbisTextCounterStyle" format="reference"/>
    <!--endregion-->

    <declare-styleable name="SbisTextCounter">

        <!--region Набор цветов текста -->
        <!-- Цвет текста счётчика -->
        <attr name="SbisTextCounter_accentedTextColor" format="color|reference"/>
        <!-- Цвет текста неактивного счётчика -->
        <attr name="SbisTextCounter_unaccentedTextColor" format="color|reference"/>
        <!-- Цвет разделителя -->
        <attr name="SbisTextCounter_dividerColor" format="color|reference"/>
        <!--endregion-->

        <!-- Размер текста счетчика -->
        <attr name="SbisTextCounter_textSize" format="dimension|reference"/>

        <!-- Форматирование счётчика -->
        <attr name="SbisTextCounter_formatter" format="enum">
            <!-- deprecated -->
            <enum name="thousands" value="0"/>
            <!-- Форматирование с пределом 99+ -->
            <enum name="hundred" value="1"/>
            <!-- Форматирование по международными стандартам -->
            <enum name="international" value="2"/>
            <!-- Форматирование по международными стандартам c 0 на конце -->
            <enum name="internationalWithZero" value="3"/>
        </attr>



    </declare-styleable>

</resources>