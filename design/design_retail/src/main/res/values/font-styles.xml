<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedResources">

    <!-- http://axure.tensor.ru/themes2/%D1%88%D1%80%D0%B8%D1%84%D1%82%D1%8B.html -->

    <style name="RetailExtraLargeFont">
        <item name="android:textSize">@dimen/retail_extra_large_font_size</item>
    </style>

    <style name="RetailLargeFont">
        <item name="android:textSize">@dimen/retail_large_font_size</item>
    </style>

    <style name="RetailMediumFont">
        <item name="android:textSize">@dimen/retail_medium_font_size</item>
    </style>

    <style name="RetailSmallFont">
        <item name="android:textSize">@dimen/retail_small_font_size</item>
    </style>

    <style name="RetailExtraSmallFont">
        <item name="android:textSize">@dimen/retail_extra_small_font_size</item>
    </style>

    <!-- =============================================================== -->

    <style name="RetailExtraLargeTextStyle.Toolbar" parent="RetailExtraLargeFont">
        <item name="android:textColor">?attr/retail_main_toolbar_text_color</item>
    </style>

    <style name="RetailExtraLargeTextStyle.Link" parent="RetailExtraLargeFont">
        <item name="android:textColor">?attr/retail_main_background_button_link_text_color</item>
    </style>

    <style name="RetailLargeTextStyle" parent="RetailLargeFont">
        <item name="android:textColor">?attr/retail_main_background_text_color</item>
    </style>

    <style name="RetailLargeTextStyle.Link" parent="RetailLargeFont">
        <item name="android:textColor">?attr/retail_main_background_button_link_text_color</item>
    </style>

    <style name="RetailLargeTextStyle.Hint" parent="RetailLargeFont">
        <item name="android:textColor">?attr/retail_fragment_title_text_color</item>
    </style>

    <style name="RetailLargeTextStyle.Fade" parent="RetailLargeTextStyle">
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:fadingEdgeLength">@dimen/retail_toolbar_title_fading_edge_length</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="RetailLargeTextStyle.Disabled" parent="RetailLargeFont">
        <item name="android:textColor">?attr/retail_main_background_disabled_text_color</item>
    </style>

    <style name="RetailAccentTextStyle.Large" parent="RetailLargeFont">
        <item name="android:textColor">?attr/retail_main_background_accent_text_color</item>
    </style>

    <style name="RetailMediumTextStyle" parent="RetailMediumFont">
        <item name="android:textColor">?attr/retail_main_background_text_color</item>
    </style>

    <style name="RetailSecondaryTextStyle.Medium" parent="RetailMediumFont">
        <item name="android:textColor">?attr/retail_main_background_secondary_text_color</item>
    </style>

    <style name="RetailMediumTextStyle.Hint" parent="RetailMediumFont">
        <item name="android:textColor">?attr/retail_fragment_title_text_color</item>
    </style>

    <style name="RetailMediumTextStyle.Error" parent="RetailMediumFont">
        <item name="android:textColor">?attr/retail_error_text_color</item>
    </style>

    <style name="RetailMediumTextStyle.Disabled" parent="RetailMediumFont">
        <item name="android:textColor">?attr/retail_main_background_disabled_text_color</item>
    </style>

    <style name="RetailMediumTextStyle.Link" parent="RetailMediumFont">
        <item name="android:textColor">?attr/retail_main_background_button_link_text_color</item>
    </style>

    <style name="RetailSmallTextStyle" parent="RetailSmallFont">
        <item name="android:textColor">?attr/retail_main_background_text_color</item>
    </style>

    <style name="RetailSmallTextStyle.Hint" parent="RetailSmallFont">
        <item name="android:textColor">?attr/retail_fragment_title_text_color</item>
    </style>

    <style name="RetailSmallTextStyle.Link" parent="RetailSmallFont">
        <item name="android:textColor">?attr/retail_main_background_button_link_text_color</item>
    </style>

</resources>