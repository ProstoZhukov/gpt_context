<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Цвета базовой Android темы после определения через цепочку атрибутов.
        На данный момент это Theme.AppCompat.Light.NoActionBar и для ее иерархии цвета задаются в Theme.Material.Light.
    -->
    <color name="textColorAndroidBase">@color/secondary_text_default_material_light</color> <!-- textColorTertiary -->
    <color name="textColorHintAndroidBase">#80000000</color> <!-- 50% foreground_material_light (черный) -->
    <color name="textColorHighlightAndroidBase">#66FF7033</color> <!-- 40% colorAccent -->

    <color name="textColorButtonAndroidBase">@color/primary_text_default_material_light</color>
</resources>
