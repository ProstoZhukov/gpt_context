<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RetailCheckbox" parent="RetailMediumFont">
        <item name="android:button">@drawable/retail_checkbox_selector</item>
        <item name="android:checked">false</item>
        <item name="android:paddingLeft">@dimen/retail_small_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/retail_main_background_text_color</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RetailSbisCheckbox" parent="RetailMediumFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/retail_small_padding</item>
        <item name="android:layout_marginTop">@dimen/retail_small_padding</item>
        <item name="android:layout_marginEnd">@dimen/retail_small_padding</item>
        <item name="android:paddingEnd">@dimen/retail_small_padding</item>
        <item name="android:paddingLeft">@dimen/retail_small_padding</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>