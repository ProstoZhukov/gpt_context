<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThreadTitleStyle" parent="RegularStyle">
        <item name="android:textSize">?fontSize_l_scaleOn</item>
        <item name="android:textColor">?secondaryTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ThreadIconStyle" parent="MobileFontStyle">
        <item name="android:textSize">?iconSize_2xl</item>
        <item name="android:textColor">?unaccentedTextColor</item>
    </style>

    <style name="ThreadMessageStyle" parent="RegularStyle">
        <item name="android:textSize">?fontSize_l_scaleOn</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ThreadMessagesIconStyle" parent="MobileFontStyle">
        <item name="android:textSize">?iconSize_xl</item>
        <item name="android:textColor">?unaccentedTextColor</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ThreadMessageCountStyle" parent="RegularStyle">
        <item name="android:textSize">?fontSize_m_scaleOff</item>
        <item name="android:textColor">?unaccentedTextColor</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ThreadDocumentIconStyle" parent="MobileFontStyle">
        <item name="android:textSize">?iconSize_s</item>
        <item name="android:textColor">@color/palette_color_blue11</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ThreadCreationServiceIconStyle" parent="MobileFontStyle">
        <item name="android:textSize">?iconSize_xl</item>
        <item name="android:textColor">?unaccentedTextColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">?offset_s</item>
        <item name="android:paddingEnd">?offset_xs</item>
    </style>

    <style name="ThreadCreationServiceTextStyle" parent="RegularStyle">
        <item name="android:textSize">?fontSize_m_scaleOn</item>
        <item name="android:textColor">?unaccentedTextColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">?offset_s</item>
        <item name="android:paddingEnd">?offset_xl</item>
    </style>

    <style name="ThreadCreationServiceDateStyle" parent="RegularStyle">
        <item name="android:textSize">?fontSize_xs_scaleOff</item>
        <item name="android:textColor">?unaccentedTextColor</item>
        <item name="android:paddingEnd">?offset_st</item>
    </style>

</resources>