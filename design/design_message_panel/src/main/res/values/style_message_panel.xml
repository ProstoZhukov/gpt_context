<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MessagePanelInputStyle" parent="SbisInputFieldEditText">
        <item name="android:textColor">?textColor</item>
        <item name="android:textColorHint">?placeholderColorInputText</item>
        <item name="android:textSize">?fontSize_m_scaleOn</item>
        <item name="android:hint">@string/design_message_panel_enter_message_hint</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textCursorDrawable">@drawable/design_message_panel_cursor_drawable</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?inlineHeight_2xs</item>
        <item name="android:importantForAutofill" tools:targetApi="o">noExcludeDescendants</item>
        <item name="android:background">@color/palette_color_transparent</item>
        <item name="android:paddingTop">?offset_2xs</item>
        <item name="colorAccent">@color/text_color_link_2</item>
    </style>

    <style name="MessagePanelSendButtonStyle" parent="SbisRoundButtonDefaultPrimaryTheme">
        <item name="SbisRoundButton_backgroundColorDisabled">?contrastBackgroundColor</item>
    </style>

</resources>