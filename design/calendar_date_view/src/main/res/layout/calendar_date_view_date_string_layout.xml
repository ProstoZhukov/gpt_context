<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collapsedPicker"
    android:layout_width="match_parent"
    android:layout_height="@dimen/legend_preference_item_height"
    android:background="@drawable/selectable_item_bg_white">

    <TextView
        android:id="@+id/simple_event_period_icon"
        style="@style/MobileFontStyle"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/design_mobile_icon_calendar_meeting"
        android:textColor="?secondaryIconColor"
        android:textSize="?iconSize_3xl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/event_date_start_to_date_finish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/event_additionalTimeString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/legend_standard_padding"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="?textColor"
        android:textSize="?fontSize_xl_scaleOn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2:00"/>

    <TextView
        android:id="@+id/event_date_start_to_date_finish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/design_month_picker_text_start_margin"
        android:layout_marginEnd="@dimen/legend_standard_padding"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="?textColor"
        android:textSize="?fontSize_xl_scaleOn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/event_additionalTimeString"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="21 сентября`18, Вторник"/>
</androidx.constraintlayout.widget.ConstraintLayout>