<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="is_current" format="boolean"/>
    <attr name="dateTextSize" format="dimension"/>
    <attr name="maxTextSize" format="dimension"/>
    <attr name="showHint" format="boolean"/>

    <declare-styleable name="DayView">
        <attr name="dateTextSize"/>

        <attr name="date_text" format="integer"/>
        <attr name="date_text_font" format="reference"/>
        <attr name="events_text" format="integer"/>

        <attr name="showHint"/>
        <attr name="hintTextSize" format="dimension"/>
        <attr name="busy_day" format="integer"/>
        <attr name="is_current"/>
    </declare-styleable>

    <declare-styleable name="DateView">
        <attr name="is_current"/>
    </declare-styleable>

    <declare-styleable name="LegendDayView">
        <!-- Размер текста даты -->
        <attr name="dateTextSize"/>
        <!-- Размер текста подписи -->
        <attr name="labelTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LegendView">
        <!-- Вариант отрисовки дня недели -->
        <attr name="showHintMode" format="enum">
            <!-- Количество событий в дне -->
            <enum name="busyLevel" value="0"/>
            <!-- Уровень занятости в дне -->
            <enum name="eventsCount" value="1"/>
        </attr>
        <!-- Позиция рисования счетчика событий в дне -->
        <attr name="eventsCountPosition" format="enum">
            <!-- Сверху -->
            <enum name="top" value="0"/>
            <!-- Снизу -->
            <enum name="bottom" value="1"/>
        </attr>
        <!-- Видимость стрелки перехода назад -->
        <attr name="backIconVisibility" format="boolean"/>
        <!-- Видимость стрелки перехода назад -->
        <attr name="backIconVisible" format="integer"/>
        <!-- Ограничение скролла слева текущей датой -->
        <attr name="currentDateScrollLimit" format="boolean"/>
        <!-- Стиль с большой датой -->
        <attr name="bigDateStyle" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="YearPicker">
        <!-- Аттрибут отвечает за видимость тени вверху над календарем, но ниже бара с днями недели -->
        <attr name="isTabletMode" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="HidableMonthPicker">
        <attr name="maxTextSize"/>
    </declare-styleable>

    <declare-styleable name="MonthCaption">
        <attr name="maxTextSize"/>
    </declare-styleable>

    <declare-styleable name="LegendViewFirstDay">
    </declare-styleable>

    <!-- Calendar Date View Style -->
    <attr name="CalendarDateViewStyle" format="reference"/>

    <attr name="calendar_date_view_color_workday_text" format="color|reference"/>
    <attr name="calendar_date_view_color_holiday_text" format="color|reference"/>
    <attr name="calendar_date_view_color_date_text" format="color|reference"/>
    <attr name="calendar_date_view_color_date_text_selected" format="color|reference"/>
    <attr name="calendar_date_view_color_events_count_text" format="color|reference"/>
    <attr name="calendar_date_view_color_first_day_background" format="color|reference"/>
    <attr name="calendar_date_view_color_first_day_workday_text" format="color|reference"/>
    <attr name="calendar_date_view_color_first_day_holiday_text" format="color|reference"/>
    <attr name="calendar_date_view_color_first_day_text" format="reference|color"/>
    <attr name="calendar_date_view_color_busy_level_default" format="color|reference"/>
    <attr name="calendar_date_view_color_busy_level_report" format="color|reference"/>

    <attr name="calendar_date_view_color_workday_background" format="color|reference"/>
    <attr name="calendar_date_view_color_cross_vacation_holiday_background" format="color|reference"/>
    <attr name="calendar_date_view_color_day_off_background" format="color|reference"/>
    <attr name="calendar_date_view_color_time_off_background" format="color|reference"/>
    <attr name="calendar_date_view_color_truancy_background" format="color|reference"/>
    <attr name="calendar_date_view_color_business_trip_background" format="color|reference"/>
    <attr name="calendar_date_view_color_plan_vacation_background" format="color|reference"/>
    <attr name="calendar_date_view_color_plan_vacation_on_agreement_background" format="color|reference"/>
    <attr name="calendar_date_view_color_plan_vacation_on_deletion_background" format="color|reference"/>
    <attr name="calendar_date_view_color_fact_vacation_background" format="color|reference"/>
    <attr name="calendar_date_view_color_crossed_vacation_hatch" format="color|reference"/>
    <attr name="calendar_date_view_color_sick_leave_background" format="color|reference"/>
    <attr name="calendar_date_view_color_report" format="color|reference"/>
    <attr name="calendar_date_view_color_downtime_background" format="color|reference"/>
    <attr name="calendar_date_view_color_birthday_background" format="color|reference"/>
    <attr name="calendar_date_view_not_hired_background" format="color|reference"/>

    <attr name="calendar_date_view_color_current_day_border" format="color|reference"/>
    <attr name="calendar_date_view_color_current_day_circle" format="color|reference"/>
    <attr name="calendar_date_view_color_arrow_back" format="color|reference"/>
    <attr name="calendar_date_view_color_divider" format="color|reference"/>

    <attr name="calendar_date_view_color_cross_vacation_holiday" format="color|reference"/>

    <attr name="calendar_date_view_events_count_text_size" format="dimension|reference"/>

    <attr name="calendar_date_view_legend_offset" format="dimension|reference"/>
    <attr name="calendar_date_view_corner_radius" format="dimension|reference"/>
</resources>