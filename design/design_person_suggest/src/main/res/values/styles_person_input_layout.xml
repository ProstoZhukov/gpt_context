<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PersonInputLayoutDefaultStyle">
        <item name="PersonInputLayout_personPhotoStyle">@style/PersonInputDefaultPhotoStyle</item>
        <item name="PersonInputLayout_personNameStyle">@style/PersonInputDefaultNameStyle</item>
        <item name="PersonInputLayout_clearButtonStyle">@style/PersonInputDefaultClearButtonStyle</item>
        <item name="PersonInputLayout_verticalDividerColor">@color/palette_alpha_color_black1</item>
        <item name="PersonInputLayout_hintText">@string/design_person_suggest_find_by_text_hint</item>
        <item name="android:background">@drawable/default_search_filter_background</item>
    </style>

    <style name="PersonInputDefaultPhotoStyle" parent="DesignProfilePersonViewDefaultStyle">
        <item name="PersonView_size">xs</item>
        <item name="android:paddingStart">@dimen/design_person_suggest_photo_padding</item>
    </style>

    <style name="PersonInputDefaultNameStyle">
        <item name="android:textSize">@dimen/design_person_suggest_name_text_size</item>
        <item name="android:textColor">@color/palette_color_black1</item>
        <item name="android:paddingStart">@dimen/design_person_suggest_name_padding_start</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PersonInputDefaultClearButtonStyle">
        <item name="android:fontFamily">@font/sbis_mobile_icons</item>
        <item name="android:textSize">@dimen/design_person_suggest_clear_button_icon_size</item>
        <item name="android:textColor">@color/search_panel_text_secondary</item>
        <item name="android:text">@string/design_person_suggest_person_input_close_button_icon</item>
        <item name="android:padding">@dimen/design_person_suggest_clear_button_padding</item>
    </style>

</resources>