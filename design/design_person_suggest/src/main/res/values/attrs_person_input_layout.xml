<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Атрибут для определения темы контейнера поисковой строки с фильтром по персоне. -->
    <attr name="personInputLayoutTheme" format="reference"/>

    <declare-styleable name="PersonInputLayout">
        <!-- Стиль фотографии персоны в фильтре. -->
        <attr name="PersonInputLayout_personPhotoStyle" format="reference"/>
        <!-- Стиль разметки имени персоны в фильтре. -->
        <attr name="PersonInputLayout_personNameStyle" format="reference"/>
        <!-- Стиль кнопки очистки фильтра по персоне. -->
        <attr name="PersonInputLayout_clearButtonStyle" format="reference"/>
        <!-- Цвет вертикального разделителя между областью фильтра персоны и поисковой строкой. -->
        <attr name="PersonInputLayout_verticalDividerColor" format="color|reference"/>
        <!-- Текст подсказки, который будет отображается, когда выбран фильтр по персоне и поисковая строка пустая. -->
        <attr name="PersonInputLayout_hintText" format="string|reference"/>
    </declare-styleable>

</resources>