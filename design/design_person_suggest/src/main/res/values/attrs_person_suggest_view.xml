<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Атрибут для определения темы панели выбора персоны -->
    <attr name="personSuggestViewTheme" format="reference"/>

    <declare-styleable name="PersonSuggestView">
        <!-- Цвет фона панели выбора персон -->
        <attr name="PersonSuggestView_backgroundColor" format="color"/>
        <!-- Размер горизонтальных отступов списка персон -->
        <attr name="PersonSuggestView_listHorizontalPadding" format="dimension"/>
        <!-- Размер горизонтальных отступов фотографий персон -->
        <attr name="PersonSuggestView_personHorizontalPadding" format="dimension"/>
        <!-- Размер вертикальных отступов фотографий персон -->
        <attr name="PersonSuggestView_personVerticalPadding" format="dimension"/>
        <!-- Размер фотографии персоны -->
        <attr name="PersonSuggestView_photoSize" format="enum">
            <!-- Соответствует размеру xs компонента фото персоны -->
            <enum name="xs" value="0"/>
            <!-- Соответствует размеру s компонента фото персоны -->
            <enum name="s" value="1"/>
            <!-- Соответствует размеру m компонента фото персоны -->
            <enum name="m" value="2"/>
            <!-- Соответствует размеру l компонента фото персоны -->
            <enum name="l" value="3"/>
            <!-- Соответствует размеру xl компонента фото персоны -->
            <enum name="xl" value="4"/>
        </attr>
    </declare-styleable>

</resources>