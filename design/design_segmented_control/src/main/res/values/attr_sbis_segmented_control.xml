<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SbisSegmentedControl">

        <!-- Размер сегмент-контрола -->
        <attr name="SbisSegmentedControl_size" format="enum">
            <!-- Сегмент-контрол особо малого размера -->
            <enum name="xs" value="1"/>
            <!-- Сегмент-контрол малого размера (по умолчанию) -->
            <enum name="s" value="2"/>
        </attr>

        <!-- Размер иконки -->
        <attr name="SbisSegmentedControl_iconSize" format="enum">
            <!-- Размер иконки по умолчанию -->
            <enum name="m" value="1"/>
            <!-- Размер иконки средний -->
            <enum name="xl" value="2"/>
        </attr>

        <!-- Компоновка сегментов -->
        <attr name="SbisSegmentedControl_distribution" format="enum">
            <!-- Равное распределение пространства между сегментами -->
            <enum name="equal" value="1"/>
            <!-- Размер сегментов устанавливается по размеру контента -->
            <enum name="fitContent" value="2"/>
        </attr>

        <!-- Контрастный режим сегмент-контрола -->
        <attr name="SbisSegmentedControl_contrast" format="boolean"/>

        <!--region Набор цветов фона -->
        <!-- Цвет фона сегмент-контрола для состояния по умолчанию -->
        <attr name="SbisSegmentedControl_backgroundColor" format="color"/>
        <!-- Цвет контрастного фона сегмент-контрола для состояния по умолчанию -->
        <attr name="SbisSegmentedControl_backgroundColorContrast" format="color"/>
        <!-- Цвет фона сегмент-контрола для состояния выключен -->
        <attr name="SbisSegmentedControl_backgroundColorDisabled" format="color"/>
        <!-- Цвет контрастного фона сегмент-контрола для состояния выключен -->
        <attr name="SbisSegmentedControl_backgroundColorContrastDisabled" format="color"/>
        <!--endregion-->

        <!-- Цвет фона сегмента для состояния по умолчанию -->
        <attr name="SbisSegmentedControl_itemBackgroundColor" format="color"/>
        <!-- Цвет контрастного фона сегмента для состояния по умолчанию -->
        <attr name="SbisSegmentedControl_itemBackgroundColorContrast" format="color"/>

        <!--endregion-->

        <!-- Толщина обводки сегмент-контрола -->
        <attr name="SbisSegmentedControl_borderWidth" format="dimension"/>
        <!-- Радиус скругления сегмент-контрола -->
        <attr name="SbisSegmentedControl_cornerRadius" format="dimension"/>

        <!--region Набор цветов текста -->
        <!-- Цвет текста сегмента для состояния по умолчанию -->
        <attr name="SbisSegmentedControl_itemTextColor" format="color"/>
        <!-- Цвет контрастного текста сегмента для состояния по умолчанию -->
        <attr name="SbisSegmentedControl_itemTextColorContrast" format="color"/>
        <!-- Цвет текста сегмента для выбранного состояния -->
        <attr name="SbisSegmentedControl_itemTextColorSelected" format="color"/>
        <!-- Цвет контрастного текста сегмента для выбранного состояния -->
        <attr name="SbisSegmentedControl_itemTextColorContrastSelected" format="color"/>
        <!-- Цвет текста сегмента для выключенного состояния-->
        <attr name="SbisSegmentedControl_itemTextColorDisabled" format="color"/>
        <!-- Цвет контрастного текста сегмента для выключенного состояния-->
        <attr name="SbisSegmentedControl_itemTextColorContrastDisabled" format="color"/>
        <!--endregion-->

        <!--region Набор цветов иконки -->
        <!-- Цвет иконки сегмента для состояния по умолчанию -->
        <attr name="SbisSegmentedControl_itemIconColor" format="color"/>
        <!-- Цвет контрастной иконки сегмента для состояния по умолчанию -->
        <attr name="SbisSegmentedControl_itemIconColorContrast" format="color"/>
        <!-- Цвет иконки сегмента для выбранного состояния -->
        <attr name="SbisSegmentedControl_itemIconColorSelected" format="color"/>
        <!-- Цвет контрастной иконки сегмента для выбранного состояния -->
        <attr name="SbisSegmentedControl_itemIconColorContrastSelected" format="color"/>
        <!-- Цвет иконки сегмента для выключенного состояния-->
        <attr name="SbisSegmentedControl_itemIconColorDisabled" format="color"/>
        <!-- Цвет контрастной иконки сегмента для выключенного состояния-->
        <attr name="SbisSegmentedControl_itemIconColorContrastDisabled" format="color"/>
        <!--endregion-->

        <!-- Наличие тени у сегмент-контрола -->
        <attr name="SbisSegmentedControl_hasShadow" format="boolean"/>
        <!-- Индекс выбранного по умолчанию сегмента -->
        <attr name="SbisSegmentedControl_selectedIndex" format="integer"/>

    </declare-styleable>
</resources>