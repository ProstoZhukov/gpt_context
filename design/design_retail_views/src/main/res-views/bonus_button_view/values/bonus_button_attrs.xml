<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Атрибуты компонента [BonusButtonView] -->
    <declare-styleable name="RetailViewsBonusButtonAttrs">
        <!-- Тема компонента. -->
        <attr name="retail_views_bonus_button_theme" format="reference"/>

        <!-- Радус кнопки целиком. -->
        <attr name="retail_views_bonus_button_radius_main" format="reference|dimension"/>
        <!-- Радиус кнопки бонусов справа сверху и снизу. -->
        <attr name="retail_views_bonus_button_radius_secondary" format="reference|dimension"/>

        <!-- Фон кнопки целиком. -->
        <attr name="retail_views_bonus_button_background" format="reference|color"/>
        <!-- Фон кнопки бонусов поумолчанию. -->
        <attr name="retail_views_bonus_button_background_btn_default" format="reference|color"/>
        <!-- Фон кнопки бонусов активный. -->
        <attr name="retail_views_bonus_button_background_btn_accent_start" format="reference|color"/>
        <!-- Фон кнопки бонусов активный. -->
        <attr name="retail_views_bonus_button_background_btn_accent_end" format="reference|color"/>
        <!-- Фон поля ввода поумолчанию. -->
        <attr name="retail_views_bonus_button_background_edit_default" format="reference|color"/>
        <!-- Фон поля ввода активный. -->
        <attr name="retail_views_bonus_button_background_edit_accent_start" format="reference|color"/>
        <attr name="retail_views_bonus_button_background_edit_accent_end" format="reference|color"/>

        <!-- Цвет текста активный. -->
        <attr name="retail_views_bonus_button_accented_text" format="reference|color"/>
        <!-- Цвет текста поумолчанию. -->
        <attr name="retail_views_bonus_button_unaccented_text" format="reference|color"/>

        <!-- Цвет иконки активный. -->
        <attr name="retail_views_bonus_button_accented_icon" format="reference|color"/>
        <!-- Цвет иконки поумолчанию. -->
        <attr name="retail_views_bonus_button_unaccented_icon" format="reference|color"/>
    </declare-styleable>

</resources>