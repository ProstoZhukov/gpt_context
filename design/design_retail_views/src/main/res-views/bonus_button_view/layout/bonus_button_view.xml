<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <merge
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
        tools:theme="@style/RetailViewsBonusButtonStyle.Light">

        <ru.tensor.sbis.design.sbis_text_view.SbisTextView
            android:id="@+id/retail_views_bonus_emblem"
            style="@style/MobileFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/small_delimiter_height"
            android:background="@drawable/bonus_button_bg_btn"
            android:gravity="center"
            android:paddingHorizontal="?offset_st"
            android:text="@string/design_mobile_icon_bonus_null"
            android:textColor="@color/bonus_button_icon_selector"
            android:textSize="?iconSize_4xl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/retail_views_bonus_count_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute"/>

        <EditText
            android:id="@+id/retail_views_bonus_count_input"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bonus_button_bg_edit"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:paddingHorizontal="?offset_st"
            android:singleLine="true"
            android:textColor="@color/bonus_button_text_selector"
            android:textColorHint="@color/bonus_button_text_selector"
            android:textSize="?fontSize_2xl_scaleOff"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/retail_views_bonus_emblem"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill,LabelFor,SpUsage,TextFields"/>

        <ru.tensor.sbis.design.sbis_text_view.SbisTextView
            android:id="@+id/retail_views_bonus_count"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/small_delimiter_height"
            android:background="@drawable/bonus_button_bg_edit"
            android:focusable="false"
            android:gravity="center"
            android:paddingHorizontal="?offset_st"
            android:singleLine="true"
            android:textColor="@color/bonus_button_text_selector"
            android:textSize="?fontSize_2xl_scaleOff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/retail_views_bonus_emblem"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill,LabelFor,SpUsage,UnusedAttribute"/>

    </merge>

</layout>
