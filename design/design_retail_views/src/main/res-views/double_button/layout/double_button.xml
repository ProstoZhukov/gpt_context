<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    tools:background="@drawable/retail_views_double_button_root_background"
    tools:gravity="center_vertical"
    tools:ignore="ResourceName"
    tools:layout_height="74dp"
    tools:layout_width="150dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    tools:theme="@style/RetailViewsDoubleButtonBaseStyle.Pink">

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/txt_btn_icon"
        style="@style/MobileFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/retail_views_double_button_icon_background_ripple"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingHorizontal="?offset_m"
        android:textColor="@color/retail_views_double_button_icon"
        android:textSize="?iconSize_3xl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage"
        tools:layout_height="74dp"
        tools:text="\uE919"
        tools:textColor="#000000"
        tools:textSize="42dp"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/txt_btn_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingHorizontal="?offset_s"
        android:textColor="@color/retail_views_double_button_title"
        android:textSize="?fontSize_3xl_scaleOff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_btn_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage"
        tools:layout_height="74dp"
        tools:text="Картой и под ЗПп вап"
        tools:textColor="#000000"
        tools:textSize="30dp"/>

    <EditText
        android:id="@+id/edit_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/retail_views_double_button_edit_field_background"
        android:digits="0123456789."
        android:gravity="center"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:paddingHorizontal="?offset_xs"
        android:scrollbars="none"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="?textColor"
        android:textColorHint="?textColor"
        android:textSize="?fontSize_3xl_scaleOff"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_btn_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,SpUsage"
        tools:text="125 354"
        tools:textColor="#000000"
        tools:textSize="24dp"/>

</merge>