<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Атрибуты компонента [DoubleButton]. -->
    <declare-styleable name="RetailViewsDoubleButtonAttrs">
        <!-- Кастомный стиль компонента [DoubleButton]. -->
        <attr name="retail_views_double_button_style" format="reference"/>

        <!-- Внешние скругления кнопки. Глобально для DoubleButton. (По аналогии с 'sbisButtonCornerRadius'). -->
        <attr name="retail_views_double_button_corner_radius" format="reference|dimension"/>

        <!-- Внутренние скругления кнопки. Глобально для DoubleButton. -->
        <attr name="retail_views_double_button_inner_corner_radius" format="reference|dimension"/>

        <!--#region Обязательные атрибуты-->
        <attr name="retail_views_double_button_initial_mode" format="enum">
            <!-- "Режим обычной кнопки". -->
            <enum name="button_mode" value="0"/>
            <!-- "Стандартный режим редактирования" -->
            <enum name="edit_mode" value="1"/>
            <!-- "Заблокированный режим редактирования" -->
            <enum name="edit_mode_locked" value="2"/>
        </attr>

        <!-- Title кнопки. -->
        <attr name="retail_views_double_button_title" format="reference|string"/>
        <!--#endregion-->

        <!--#region Features-->
        <!-- Можно ли отображать системную клавиатуру при получении фокуса на поле ввода. -->
        <attr name="retail_views_double_button_use_soft_keyboard" format="reference|boolean"/>
        <!--#endregion-->

        <!--#region Background color-->
        <!-- Основной цвет "Двойной кнопки". -->
        <attr name="retail_views_double_button_root_view_background_color" format="reference|color"/>
        <!-- Цвет "Двойной кнопки" в режиме редактирования. -->
        <attr name="retail_views_double_button_edit_mode_background_color" format="reference|color"/>
        <!-- Цвет кнопки с иконкой. -->
        <attr name="retail_views_double_button_icon_view_background_color" format="reference|color"/>
         <!--#endregion-->

    </declare-styleable>

</resources>