<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?colorControlHighlight">

    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="?sbisButtonContrastBackgroundColorDisabled"/>
                    <corners
                        android:bottomLeftRadius="?retail_views_double_button_corner_radius"
                        android:bottomRightRadius="?retail_views_double_button_inner_corner_radius"
                        android:topRightRadius="?retail_views_double_button_inner_corner_radius"
                        android:topLeftRadius="?retail_views_double_button_corner_radius"/>
                </shape>
            </item>

            <item android:state_activated="true">
                <shape android:shape="rectangle">
                    <solid android:color="?retail_views_double_button_icon_view_background_color"/>
                    <corners
                        android:bottomLeftRadius="?retail_views_double_button_corner_radius"
                        android:bottomRightRadius="?retail_views_double_button_inner_corner_radius"
                        android:topRightRadius="?retail_views_double_button_inner_corner_radius"
                        android:topLeftRadius="?retail_views_double_button_corner_radius"/>
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?retail_views_double_button_icon_view_background_color"/>
                    <corners
                        android:bottomLeftRadius="?retail_views_double_button_corner_radius"
                        android:bottomRightRadius="?retail_views_double_button_inner_corner_radius"
                        android:topRightRadius="?retail_views_double_button_inner_corner_radius"
                        android:topLeftRadius="?retail_views_double_button_corner_radius"/>
                </shape>
            </item>
        </selector>
    </item>

</ripple>