<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="?retail_views_double_button_root_view_background_color"/>
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="?retail_views_double_button_corner_radius"
                android:topLeftRadius="0dp"
                android:topRightRadius="?retail_views_double_button_corner_radius"/>
        </shape>
    </item>

    <item
        android:id="@android:id/background"
        android:bottom="?borderThickness_s"
        android:right="?borderThickness_s"
        android:top="?borderThickness_s">

        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="?retail_views_double_button_corner_radius"
                android:topLeftRadius="0dp"
                android:topRightRadius="?retail_views_double_button_corner_radius"/>
        </shape>
    </item>

</selector>