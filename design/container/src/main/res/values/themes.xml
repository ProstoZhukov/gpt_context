<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SbisContainerWindow" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowElevation">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/ContainerAnimation</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="SbisContainer">
        <item name="sbisHeaderViewTheme">@style/ContainerHeader</item>
        <item name="ContainerBackground">?backgroundColor</item>
        <item name="SbisContainerHeaderDividerVisibility">true</item>
    </style>

    <style name="ContainerHeader" parent="SbisHeader">
        <item name="ToolbarTabLayout_theme">@style/HeaderTabLayoutStyle</item>
        <item name="SbisHeaderTitle_theme">@style/ContainerHeaderTitleStyle</item>
        <item name="SbisContainerHeaderDivider_theme">@style/ContainerHeaderDivider</item>
        <item name="SbisRoundButton_style">success</item>
    </style>

    <style name="HeaderTabLayoutStyle" parent="ToolbarTabLayoutTheme">
        <item name="ToolbarTabLayout_titleStyle">@style/ContainerHeaderTabStile</item>
        <item name="ToolbarTabLayout_indicatorStyle">@style/ContainerHeaderIndicator</item>
    </style>

    <style name="ContainerHeaderTitleStyle" parent="HeaderTitle">
        <item name="android:textColor">?labelContrastTextColor</item>
    </style>

    <style name="SbisContainer.Retail">
        <item name="sbisHeaderViewTheme">@style/ContainerHeader.Retail</item>
    </style>

    <style name="ContainerHeader.Retail" parent="ContainerHeader">
        <item name="SbisRoundButton_size">m</item>
        <item name="SbisButton_size">m</item>
        <item name="SbisHeaderTitle_height">?attr/inlineHeight_2xl</item>
        <item name="SbisHeaderTitle_buttonOffset">?attr/offset_s</item>
    </style>
</resources>