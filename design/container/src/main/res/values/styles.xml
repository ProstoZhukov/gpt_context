<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContainerCard">
        <item name="android:background">?backgroundColor</item>
        <item name="android:paddingStart">?offset_m</item>
        <item name="android:paddingEnd">?offset_m</item>
        <item name="cardCornerRadius">?borderRadius_2xs</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ContainerHeaderTabStile" parent="ToolbarTitleText">
        <item name="android:textColor">@drawable/header_toolbar_tab_title_selector</item>
    </style>

    <style name="ContainerHeaderIndicator" parent="ToolbarTabIndicatorStyle">
        <item name="android:background">@drawable/header_toolbar_tab_indicator_selector</item>
        <item name="android:layout_height">?borderThickness_m</item>
    </style>

    <style name="ContainerHeaderDivider">
        <item name="android:background">?borderColor</item>
    </style>

    <style name="ContainerAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/container_fade_out</item>
    </style>
</resources>