<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    стиль с large темой БЕЗ чекбоксов     -->
    <style name="MarksComponentLargeHeaderTheme" parent="MarksComponentLargeThemeParams">
        <item name="sbisHeaderViewTheme">@style/MarksComponentHeaderLargeTheme</item>
    </style>

    <style name="MarksComponentHeaderLargeTheme" parent="SbisHeader">
        <item name="SbisHeaderTitle_theme">@style/MarksComponentHeaderTitleLarge</item>
        <item name="SbisHeaderTitle_buttonOffset">?offset_2xs</item>
        <item name="SbisHeaderTitle_height">?inlineHeight_s</item>
        <item name="SbisRoundButton_size">s</item>
    </style>

    <style name="MarksComponentHeaderTitleLarge" parent="HeaderTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:textSize">?fontSize_3xl_scaleOff</item>
        <item name="android:layout_marginStart">?offset_xl</item>
    </style>


    <!--    стиль с large темой С чекбоксами     -->
    <style name="MarksComponentLargeHeaderThemeCheckBox" parent="MarksComponentLargeThemeParams">
        <item name="sbisHeaderViewTheme">@style/MarksComponentHeaderLargeThemeCheckbox</item>
    </style>

    <style name="MarksComponentHeaderLargeThemeCheckbox" parent="MarksComponentHeaderLargeTheme">
        <item name="SbisHeaderTitle_theme">@style/MarksComponentHeaderTitleLargeCheckbox</item>
    </style>

    <style name="MarksComponentHeaderTitleLargeCheckbox" parent="MarksComponentHeaderTitleLarge">
        <item name="android:layout_marginStart">?inlineHeight_2xs</item>
    </style>

    <!--    параметры large темы    -->
    <style name="MarksComponentLargeThemeParams">
        <item name="marksComponentHeaderItemsHeight">?inlineHeight_s</item>
        <item name="marksComponentHeaderCancelButtonEndPadding">?offset_2xs</item>
        <item name="marksComponentElementHeight">?inlineHeight_xl</item>
        <item name="marksComponentElementVerticalPadding">?offset_2xs</item>
        <item name="marksComponentIconSpaceStartPadding">?offset_m</item>
        <item name="marksComponentIconSpaceHeight">?inlineHeight_m</item>
        <item name="marksComponentIconSpaceWidth">?inlineHeight_m</item>
        <item name="marksComponentTitleSpaceStartPadding">?offset_2xs</item>
        <item name="marksComponentTitleSpaceEndPadding">?offset_m</item>
        <item name="marksComponentTitleSpaceHeight">?inlineHeight_m</item>
        <item name="marksComponentTitleFontSize">?fontSize_l_scaleOff</item>
        <item name="marksComponentTitleFontColor">?textColor</item>
        <item name="marksComponentIconFontSize">?iconSize_7xl</item>
        <item name="marksComponentIconFontColor">?primaryIconColor</item>
        <item name="marksComponentColorCircleSize">?iconSize_m</item>
        <item name="marksComponentMarkerWidth">4dp</item>
        <item name="marksComponentMarkerHeight">?inlineHeight_5xs</item>
        <item name="marksComponentMarkerBorderRadius">?borderRadius_2xs</item>
        <item name="marksComponentMarkerColor">?markerColor</item>
        <item name="marksComponentCheckboxSpaceHeight">?inlineHeight_m</item>
        <item name="marksComponentCheckboxSpaceVerticalPadding">?offset_2xs</item>
        <item name="marksComponentCheckboxSpaceHorizontalPadding">?offset_s</item>
    </style>

</resources>