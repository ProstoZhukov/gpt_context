<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/communicator_pinned_chat_message_holder"
    android:layout_width="match_parent"
    android:layout_height="?inlineHeight_s"
    android:background="?warningSameBackgroundColor"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:clickable="true"
    android:visibility="gone"
    tools:visibility="visible">

    <View
        android:id="@+id/communicator_pinned_chat_message_break"
        style="@style/MobileFontStyle"
        android:layout_width="@dimen/block_separator_size"
        android:layout_height="?inlineHeight_2xs"
        android:layout_marginStart="@dimen/communicator_document_name_icon_padding_end"
        android:background="?warningBorderColor"
        app:layout_constraintBottom_toBottomOf="@+id/communicator_pinned_chat_message_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/communicator_pinned_chat_message_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="?secondaryTextColor"
        android:textSize="?fontSize_xs_scaleOff"
        android:layout_marginStart="@dimen/communicator_document_name_icon_padding_end"
        android:text=""
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/communicator_pinned_chat_guideline"
        app:layout_constraintEnd_toStartOf="@+id/communicator_pinned_chat_message_time"
        app:layout_constraintStart_toEndOf="@+id/communicator_pinned_chat_message_break"
        tools:text="@tools:sample/full_names"
        tools:ignore="SpUsage"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/communicator_pinned_chat_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="?unaccentedTextColor"
        android:textSize="?fontSize_3xs_scaleOff"
        android:layout_marginStart="@dimen/communicator_document_name_icon_padding_end"
        android:text=""
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/communicator_pinned_chat_guideline"
        app:layout_constraintEnd_toStartOf="@+id/communicator_pinned_chat_message_clear_button"
        app:layout_constraintStart_toEndOf="@+id/communicator_pinned_chat_message_author"
        tools:text="@tools:sample/date/hhmm"
        tools:ignore="SpUsage"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/communicator_pinned_chat_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/communicator_pinned_chat_message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="?textColor"
        android:alpha="0.6"
        android:textSize="?fontSize_3xs_scaleOff"
        android:layout_marginStart="@dimen/communicator_document_name_icon_padding_end"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/communicator_pinned_chat_message_clear_button"
        app:layout_constraintStart_toEndOf="@+id/communicator_pinned_chat_message_break"
        app:layout_constraintTop_toBottomOf="@+id/communicator_pinned_chat_guideline"
        tools:text="@tools:sample/lorem/random"
        tools:ignore="SpUsage"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/communicator_pinned_chat_message_clear_button"
        style="@style/CommunicatorPinnedChatMessageClearButton"
        android:layout_width="@dimen/communicator_pinned_chat_clear_button_width"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"/>

    <View
        android:id="@+id/communicator_pinned_chat_message_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/block_separator_size"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?warningBorderColor"
        android:alpha="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>