<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/communicator_message_attachment_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/communicator_dual_message_item_incoming_body_margin_left"
    android:paddingEnd="?offset_s">

    <TextView
        android:id="@+id/communicator_message_materials_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingEnd="?offset_2xs"
        android:singleLine="true"
        android:textColor="?unaccentedTextColor"
        android:textSize="?fontSize_xs_scaleOff"
        tools:text="3 июля"
        tools:ignore="RtlSymmetry,SpUsage"/>

    <TextView
        android:id="@+id/communicator_message_materials_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/communicator_message_materials_item_date"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="?offset_m"
        android:gravity="end"
        android:includeFontPadding="false"
        android:paddingEnd="?offset_2xs"
        android:textColor="@color/text_color_black_3"
        android:textSize="@dimen/size_caption1_scaleOff"
        tools:text="12:09"
        tools:ignore="RtlSymmetry,SpUsage"/>

    <ru.tensor.sbis.design.cloud_view.content.MessageBlockView
        android:id="@+id/communicator_service_message_materials_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/communicator_message_materials_item_time"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="?offset_st"
        android:layout_toStartOf="@+id/communicator_message_materials_item_time"
        android:paddingBottom="@dimen/communicator_message_item_body_padding_bottom"/>

</RelativeLayout>