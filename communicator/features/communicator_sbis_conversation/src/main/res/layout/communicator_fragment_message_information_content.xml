<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/communicator_message_info_read_status_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?unaccentedAdaptiveBackgroundColor"
        android:layout_below="@+id/communicator_message_info_toolbar">

        <ru.tensor.sbis.communicator.common.view.ScrollViewWithTouchDownDetection
            android:id="@+id/communicator_message_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/communicator_message_info_holder_padding_bottom"
            android:paddingStart="@dimen/communicator_read_status_list_item_padding_start"
            android:background="?unaccentedAdaptiveBackgroundColor"
            app:layout_constraintBottom_toTopOf="@+id/communicator_message_info_guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constrainedHeight="true"
            tools:layout_height="365dp"
            tools:ignore="RtlSymmetry"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/communicator_message_info_guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <ru.tensor.sbis.communicator.sbis_conversation.ui.messageinfo.read_status_list.ReadStatusListView
            android:id="@+id/communicator_read_status_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?unaccentedAdaptiveBackgroundColor"
            app:layout_constraintTop_toBottomOf="@id/communicator_message_holder"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>