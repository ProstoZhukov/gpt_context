<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ru.tensor.sbis.design.SbisMobileIcon.Icon"/>

        <variable
            name="viewModel"
            type="ru.tensor.sbis.communicator.sbis_conversation.ui.messageinfo.read_status_list.content.holders.vm.ReadStatusVM"/>

    </data>

    <merge tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

        <TextView
            android:id="@+id/communicator_read_status_unread_icon"
            style="@style/MobileFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/palette_color_orange8"
            android:textSize="@dimen/size_body1_scaleOff"
            app:layout_constraintBaseline_toBaselineOf="@+id/communicator_read_status_contact_title"
            app:layout_constraintEnd_toEndOf="parent"
            bind:mobileIcon="@{Icon.smi_VisibilityOff}"
            bind:visibleOrGone="@{!viewModel.model.read}"
            tools:ignore="SpUsage"
            tools:text="&#xeaf4;"
            tools:textSize="@dimen/size_body1_scaleOff"/>

        <ru.tensor.sbis.common_views.date.DateHeaderView
            android:id="@+id/communicator_read_status_date_header"
            style="@style/RegularStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/communicator_universal_one_dip"
            app:layout_constraintBaseline_toBaselineOf="@+id/communicator_read_status_contact_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:wrap_vertically="true"
            app:wrap_horizontally="true"
            bind:date="@{viewModel.model.readDateTime}"
            bind:visibleOrGone="@{viewModel.model.read}"
            bind:ignore="RtlSymmetry"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/communicator_read_status_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="communicator_read_status_date_header, communicator_read_status_unread_icon"/>

    </merge>

</layout>