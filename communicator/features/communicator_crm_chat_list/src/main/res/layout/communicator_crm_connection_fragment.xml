<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.tensor.sbis.design.view.input.searchinput.SearchInput
        android:id="@+id/crm_connection_search_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:baseColor="?backgroundColor"
        app:hasFilter="false"
        app:bottomDividerVisible="true"
        app:bottomDividerColor="?separatorColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ru.tensor.sbis.crud3.ListComponentView
        android:id="@+id/crm_connection_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:ListComponentView_forceBackgroundColor="white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crm_connection_search_input"/>

</androidx.constraintlayout.widget.ConstraintLayout>