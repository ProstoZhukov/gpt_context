<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.tensor.sbis.design.topNavigation.view.SbisTopNavigationView
        android:id="@+id/crm_reassign_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:SbisTopNavigation_showBackButton="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ru.tensor.sbis.design.topNavigation.view.SbisTopNavigationView>

    <ru.tensor.sbis.design.view.input.searchinput.SearchInput
        android:id="@+id/crm_reassign_search_filter_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:baseColor="?backgroundColor"
        app:hasFilter="false" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/crm_reassign_header_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="crm_reassign_search_filter_panel, crm_reassign_toolbar"/>

    <ru.tensor.sbis.design.breadcrumbs.CurrentFolderView
        android:id="@+id/crm_reassign_current_folder_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crm_reassign_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/crm_reassign_list"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/crm_reassign_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="crm_reassign_current_folder_view, crm_reassign_header_barrier"/>

    <ru.tensor.sbis.crud3.ListComponentView
        android:id="@+id/crm_reassign_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusable="true"
        app:ListComponentView_forceBackgroundColor="white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/crm_reassign_barrier"/>

</androidx.constraintlayout.widget.ConstraintLayout>