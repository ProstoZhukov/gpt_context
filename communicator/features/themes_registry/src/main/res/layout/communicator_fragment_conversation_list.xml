<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/communicator_dialog_list_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?backgroundColor"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ru.tensor.sbis.design.topNavigation.view.SbisTopNavigationView
        android:id="@+id/communicator_sbis_toolbar"
        style="@style/CommunicatorToolbarStyle"
        android:layout_width="match_parent"
        android:visibility="gone"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/communicator_dialog_list_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/communicator_sbis_toolbar">

        <!-- scrollable content and headers -->
        <ru.tensor.sbis.communicator.themes_registry.ui.communication.conversations.ConversationListView
            android:id="@+id/communicator_dialog_list_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:progressDelayMillis="@integer/progressShowingDefaultDelay"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <ru.tensor.sbis.design.list_header.HeaderDateView
            android:id="@+id/communicator_dialog_list_header_date"
            style="@style/ThemesRegistryDateHeaderDateViewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="?offset_2xs"
            app:HeaderDateView_dateViewMode="dateOnly"/>

        <!-- folder title panel -->
        <ru.tensor.sbis.design.breadcrumbs.CurrentFolderView
            android:id="@+id/communicator_dialog_list_folder_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:visibility="gone"
            app:CurrentFolderView_backgroundColor="?unaccentedAdaptiveBackgroundColor"/>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/communicator_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/input_view_appbar_with_dynamic_elevation_behavior"
            app:scrollview_id="@id/communicator_dialog_list_list_view"
            app:pinned_view_id="@id/communicator_dialog_list_folder_title_layout">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/communicator_collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?unaccentedBackgroundColor"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <ru.tensor.sbis.design.person_suggest.input.PersonInputLayout
                    android:id="@+id/communicator_person_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ru.tensor.sbis.design.view.input.searchinput.SearchInput
                        android:id="@+id/search_filter_panel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:inputDelay="0"/>

                </ru.tensor.sbis.design.person_suggest.input.PersonInputLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <ru.tensor.sbis.design.toolbar.SbisButtonToolbarView
            android:id="@+id/communicator_dialog_check_panel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_actions_panel_height"
            android:layout_gravity="bottom"
            android:visibility="gone"
            app:closeButtonVisible="true"
            app:height="@dimen/bottom_actions_panel_height"
            app:hideTextForTablet="false"
            app:panelTheme="light"/>

        <include
            android:id="@+id/communicator_conversation_filter_container"
            layout="@layout/design_dialogs_simple_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@id/communicator_app_bar"
            app:layout_anchorGravity="bottom"/>

        <ru.tensor.sbis.design.person_suggest.suggest.PersonSuggestView
            android:id="@+id/communicator_person_suggest_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_anchor="@id/communicator_dialog_list_list_view"
            app:layout_anchorGravity="bottom"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>