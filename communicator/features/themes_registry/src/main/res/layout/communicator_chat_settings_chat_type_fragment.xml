<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <import type="ru.tensor.sbis.communicator.themes_registry.ui.communication.conversations.chats.settings.chat_types.ChatSettingsTypeOptions"/>

        <variable
            name="currentType"
            type="ru.tensor.sbis.communicator.themes_registry.ui.communication.conversations.chats.settings.chat_types.ChatSettingsTypeOptions"/>

        <variable
            name="changingListener"
            type="ru.tensor.sbis.communicator.themes_registry.ui.communication.conversations.chats.settings.chat_types.ChatSettingsTypeChangingListener"/>

    </data>

    <LinearLayout
        android:id="@+id/communicator_chat_settings_chat_type_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chat_type_open"
            style="@style/CommunicatorChatSettingsTypeItem"
            android:onClick="@{() -> changingListener.onChatTypeChanged(ChatSettingsTypeOptions.OPEN)}">

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                android:id="@+id/chat_type_open_title"
                style="@style/CommunicatorChatSettingsTypeItemTitle"
                android:paddingTop="?offset_2xs"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/chat_type_open_barrier"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/communicator_chat_type_open"/>

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                android:id="@+id/chat_type_open_subtitle"
                style="@style/CommunicatorChatSettingsTypeItemSubtitle"
                app:layout_constraintTop_toBottomOf="@+id/chat_type_open_title"
                app:layout_constraintEnd_toStartOf="@+id/chat_type_open_barrier"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/communicator_chat_type_open_subtitle"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/chat_type_open_barrier"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                app:barrierDirection="start"
                app:constraint_referenced_ids="chat_type_open_icon"/>

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                android:id="@+id/chat_type_open_icon"
                style="@style/CommunicatorChatSettingsTypeItemIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="@{currentType == ChatSettingsTypeOptions.OPEN ? View.VISIBLE : View.GONE}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View style="@style/CommunicatorChatSettingsTypeDivider"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chat_type_private"
            style="@style/CommunicatorChatSettingsTypeItem"
            android:onClick="@{() -> changingListener.onChatTypeChanged(ChatSettingsTypeOptions.PRIVATE)}">

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                android:id="@+id/chat_type_private_title"
                style="@style/CommunicatorChatSettingsTypeItemTitle"
                android:paddingTop="?offset_s"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/chat_type_private_barrier"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/communicator_chat_type_private"/>

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                android:id="@+id/chat_type_private_subtitle"
                style="@style/CommunicatorChatSettingsTypeItemSubtitle"
                app:layout_constraintTop_toBottomOf="@+id/chat_type_private_title"
                app:layout_constraintEnd_toStartOf="@+id/chat_type_private_barrier"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/communicator_chat_type_private_subtitle"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/chat_type_private_barrier"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                app:barrierDirection="start"
                app:constraint_referenced_ids="chat_type_private_icon"/>

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                android:id="@+id/chat_type_private_icon"
                style="@style/CommunicatorChatSettingsTypeItemIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="@{currentType == ChatSettingsTypeOptions.PRIVATE ? View.VISIBLE : View.GONE}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>