<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <import type="ru.tensor.sbis.communicator.themes_registry.ui.communication.conversations.chats.settings.chat_types.ChatSettingsParticipationTypeOptions"/>

        <variable
            name="currentType"
            type="ru.tensor.sbis.communicator.themes_registry.ui.communication.conversations.chats.settings.chat_types.ChatSettingsParticipationTypeOptions"/>

        <variable
            name="changingListener"
            type="ru.tensor.sbis.communicator.themes_registry.ui.communication.conversations.chats.settings.chat_types.ChatSettingsTypeChangingListener"/>

    </data>

    <LinearLayout
        android:id="@+id/communicator_chat_settings_participant_type_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/participant_type_all"
            style="@style/CommunicatorChatSettingsTypeItem"
            android:onClick="@{() -> changingListener.onChatParticipationTypeChanged(ChatSettingsParticipationTypeOptions.FOR_ALL)}">

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                android:id="@+id/participant_type_all_title"
                style="@style/CommunicatorChatSettingsTypeItemTitle"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/participant_type_all_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/communicator_chat_participant_type_all"/>

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                android:id="@+id/participant_type_all_icon"
                style="@style/CommunicatorChatSettingsTypeItemIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="@{currentType == ChatSettingsParticipationTypeOptions.FOR_ALL ? View.VISIBLE : View.GONE}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View style="@style/CommunicatorChatSettingsTypeDivider"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/participant_type_only_employees"
            style="@style/CommunicatorChatSettingsTypeItem"
            android:onClick="@{() -> changingListener.onChatParticipationTypeChanged(ChatSettingsParticipationTypeOptions.ONLY_EMPLOYEES)}">

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                android:id="@+id/participant_type_only_employees_title"
                style="@style/CommunicatorChatSettingsTypeItemTitle"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/participant_type_only_employees_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/communicator_chat_participant_type_only_employees"/>

            <ru.tensor.sbis.design.sbis_text_view.SbisTextView
                android:id="@+id/participant_type_only_employees_icon"
                style="@style/CommunicatorChatSettingsTypeItemIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="@{currentType == ChatSettingsParticipationTypeOptions.ONLY_EMPLOYEES ? View.VISIBLE : View.GONE}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>