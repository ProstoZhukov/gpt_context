<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="?backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/communicator_chat_settings_header_avatar_photo"
        android:layout_width="?size_m_image"
        android:layout_height="?size_m_image"
        android:layout_gravity="center"
        android:layout_marginStart="?offset_s"
        android:layout_marginTop="?offset_s"
        android:layout_marginEnd="?offset_s"
        android:layout_marginBottom="?offset_s"
        android:clickable="true"
        android:focusable="true"
        app:actualImageUri="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/communicator_chat_settings_header_text_input"
        app:layout_constraintBottom_toTopOf="@+id/communicator_chat_settings_header_first_divider"
        app:layout_constraintStart_toStartOf="parent"/>

    <ru.tensor.sbis.design.view.input.text.TextInputView
        android:id="@+id/communicator_chat_settings_header_text_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="?offset_m"
        android:layout_marginBottom="?offset_st"
        app:inputView_placeholder="@string/communicator_channel_name"
        app:inputView_placeholderTextColor="?placeholderColorInputText"
        app:inputView_valueSize="?fontSize_m_scaleOff"
        app:inputView_titleTextSize="?fontSize_3xs_scaleOn"
        app:inputView_titleTextSizeAccent="?fontSize_3xs_scaleOn"
        app:errorEnabled="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/communicator_chat_settings_header_first_divider"
        app:layout_constraintStart_toEndOf="@+id/communicator_chat_settings_header_avatar_photo" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/communicator_chat_settings_header_name_photo_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="communicator_chat_settings_header_avatar_photo, communicator_chat_settings_header_text_input"/>

    <View
        android:id="@+id/communicator_chat_settings_header_first_divider"
        android:layout_width="0dp"
        android:layout_height="?offset_s"
        android:background="?unaccentedAdaptiveBackgroundColor"
        app:layout_constraintTop_toBottomOf="@id/communicator_chat_settings_header_name_photo_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/communicator_chat_settings_header_person_list_title"
        style="@style/MediumStyle"
        android:layout_width="0dp"
        android:layout_height="?inlineHeight_xs"
        android:layout_marginStart="?offset_st"
        android:gravity="center_vertical"
        android:text="@string/communicator_chat_participants"
        android:textColor="?primaryTextColor"
        android:textSize="?fontSize_xl_scaleOn"
        app:layout_constraintTop_toBottomOf="@+id/communicator_chat_settings_header_first_divider"
        app:layout_constraintEnd_toStartOf="@+id/communicator_chat_settings_header_add_person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        fresco:ignore="SpUsage"/>

    <Button
        style="@style/MobileFontStyle"
        android:id="@+id/communicator_chat_settings_header_add_person"
        android:background="@drawable/communicator_chat_settings_add_person_bg"
        android:layout_width="?inlineHeight_5xs"
        android:layout_height="?inlineHeight_5xs"
        android:layout_marginEnd="?offset_m"
        android:text="@string/design_mobile_icon_action_add"
        android:textAlignment="center"
        android:textSize="?iconSize_s"
        android:textColor="?iconColor"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/communicator_chat_settings_header_first_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/communicator_chat_settings_header_person_list_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>