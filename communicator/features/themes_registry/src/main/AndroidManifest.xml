<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Доступ в интернет для контроллера -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- Доступ к камере для возможности делать снимок аватаркой чата -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- Доступ на регистрацию и получение сообщений от Google Cloud Messaging -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>

    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false"/>

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false"/>

    <application
        android:allowBackup="false">

        <activity
            android:name=".ui.communication.conversations.chats.settings.ChatSettingsActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Swipe.Back"
            android:windowSoftInputMode="adjustPan"
            android:exported="false"/>

        <activity
            android:name=".ui.chatrecipientselection.ChatRecipientSelectionActivity"
            android:theme="@style/AppTheme.Swipe.Back"
            android:windowSoftInputMode="adjustPan"
            android:exported="false"/>

        <activity
            android:name=".ui.conversationparticipants.ConversationParticipantsActivity"
            android:theme="@style/AppTheme.Swipe.Back"
            android:windowSoftInputMode="adjustPan"/>

    </application>

</manifest>