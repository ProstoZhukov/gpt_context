<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/movable_panel_layout_offset_12"
    android:paddingEnd="@dimen/movable_panel_layout_offset_12">

    <TextView
        android:id="@+id/communicator_import_contacts_confirmation_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/communicator_contacts_import_title"
        android:textSize="@dimen/size_title2_scaleOn"
        android:textColor="@color/palette_color_black1"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/communicator_import_contacts_confirmation_message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_body1_scaleOn"
        android:textColor="@color/palette_color_black2"
        android:gravity="center"
        android:layout_marginTop="@dimen/modalwindows_alert_dialog_padding_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/communicator_import_contacts_confirmation_title_text"
        />

    <Button
        android:id="@+id/communicator_import_contacts_confirmation_decline_button"
        style="@style/FloatingBtnStyle.Standard"
        android:layout_width="0dp"
        android:layout_height="@dimen/modalwindows_alert_dialog_button_height"
        android:text="@string/communicator_contacts_import_decline"
        android:textColor="@color/text_color_accent_1"
        android:textSize="@dimen/size_title2_scaleOn"
        android:layout_marginEnd="@dimen/movable_panel_layout_offset_6"
        android:layout_marginTop="@dimen/communicator_import_contacts_button_top_padding"
        android:layout_marginBottom="@dimen/movable_panel_layout_offset_12"
        android:background="@drawable/communicator_import_contacts_decline_btn_bg"
        android:stateListAnimator="@null"
        app:layout_constraintWidth_max="@dimen/communicator_import_contacts_button_width"
        app:layout_constraintEnd_toStartOf="@+id/communicator_import_contacts_confirmation_confirm_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/communicator_import_contacts_confirmation_message_text"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/communicator_import_contacts_confirmation_confirm_button"
        style="@style/FloatingBtnStyle.Primary"
        android:layout_width="0dp"
        android:layout_height="@dimen/modalwindows_alert_dialog_button_height"
        android:text="@string/communicator_contacts_import_next"
        android:textColor="@color/text_color_black_2"
        android:textSize="@dimen/size_title2_scaleOn"
        android:layout_marginStart="@dimen/movable_panel_layout_offset_6"
        android:layout_marginTop="@dimen/communicator_import_contacts_button_top_padding"
        android:layout_marginBottom="@dimen/movable_panel_layout_offset_12"
        android:stateListAnimator="@null"
        app:layout_constraintWidth_max="@dimen/communicator_import_contacts_button_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/communicator_import_contacts_confirmation_decline_button"
        app:layout_constraintTop_toBottomOf="@+id/communicator_import_contacts_confirmation_message_text"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>