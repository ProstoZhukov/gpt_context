<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CommunicatorConversationDateHeaderDateViewTheme"
        parent="ItemDateHeaderDateViewDefaultTheme">
        <item name="android:textSize">?fontSize_xs_scaleOff</item>
    </style>

    <style name="CommunicatorCRMQuickReplyListTheme">
        <item name="list_theme">@style/CommunicatorCRMQuickReplyStyle</item>
    </style>

    <style name="CommunicatorCRMQuickReplyStyle" parent="List">
        <item name="list_content_background">?infoSameBackgroundColor</item>
        <item name="list_content_dark_background">?infoSameBackgroundColor</item>
    </style>

    <style name="CommunicatorCRMQuickReplyCurrentFolderTheme">
        <item name="currentFolderViewTheme">@style/CommunicatorCRMQuickReplyCurrentFolderViewTheme</item>
    </style>

    <style name="CommunicatorCRMQuickReplyCurrentFolderViewTheme">
        <item name="CurrentFolderView_titleStyle">@style/CommunicatorCRMQuickReplyCurrentFolderTitleStyle</item>
        <item name="CurrentFolderView_iconStyle">@style/CommunicatorCRMQuickReplyCurrentFolderBackIconStyle</item>
        <item name="CurrentFolderView_backgroundColor">?infoSameBackgroundColor</item>
        <item name="CurrentFolderView_dividerColor">?infoActiveBackgroundColor</item>
    </style>

    <style name="CommunicatorCRMQuickReplyCurrentFolderTitleStyle" parent="DefaultCurrentFolderViewTitleStyle">
        <item name="android:textColor">?primaryTextColor</item>
    </style>

    <style name="CommunicatorCRMQuickReplyCurrentFolderBackIconStyle" parent="DefaultCurrentFolderViewBackIconStyle">
        <item name="android:textColor">?primaryTextColor</item>
    </style>

    <style name="CommunicatorReassignCommentEditText" parent="SbisInputFieldEditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/common_enter_message</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:minHeight">?inlineHeight_2xs</item>
        <item name="android:paddingStart">?offset_m</item>
        <item name="android:paddingTop">@dimen/message_panel_input_text_drawable_stroke_width</item>
        <item name="android:paddingEnd">?offset_m</item>
        <item name="android:paddingBottom">@dimen/message_panel_input_text_drawable_stroke_width</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:textColorHint">?labelTextColor</item>
        <item name="android:textSize">?fontSize_m_scaleOn</item>
        <item name="android:textCursorDrawable">@drawable/message_panel_cursor_drawable</item>
        <item name="android:theme">@style/HighlightControlsColor</item>
    </style>
</resources>