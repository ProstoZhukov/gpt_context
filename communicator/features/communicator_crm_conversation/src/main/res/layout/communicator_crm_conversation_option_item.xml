<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/conversation_option_item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?offset_m"
        android:layout_marginBottom="?offset_m"
        android:orientation="horizontal">

        <ru.tensor.sbis.design.sbis_text_view.SbisTextView
            android:id="@+id/communicator_crm_conversation_menu_icon"
            style="@style/MobileFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="?offset_m"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="?labelContrastTextColor"
            android:textSize="?fontSize_4xl_scaleOff"
            tools:text="@string/design_mobile_icon_message_with_arrow"
            tools:ignore="SpUsage"/>

        <ru.tensor.sbis.design.sbis_text_view.SbisTextView
            android:id="@+id/communicator_crm_conversation_menu_item_text"
            style="@style/RegularStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="?offset_m"
            android:layout_marginEnd="?offset_m"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="?fontSize_2xl_scaleOff"
            tools:ignore="SpUsage"
            tools:text="Преобразовать в чат"/>
    </LinearLayout>

    <View
        android:id="@+id/communicator_crm_conversation_option_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_separator_size"
        android:background="?separatorColor"/>

</LinearLayout>