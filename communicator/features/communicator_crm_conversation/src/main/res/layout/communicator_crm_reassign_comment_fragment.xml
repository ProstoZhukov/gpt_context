<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="ru.tensor.sbis.design.theme.HorizontalAlignment" />
    </data>

    <LinearLayout
        android:id="@+id/crm_reassign_comment_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?unaccentedAdaptiveBackgroundColor"
        android:orientation="vertical">

        <ru.tensor.sbis.design.text_span.SbisEditText
            android:id="@+id/crm_reassign_comment"
            style="@style/CommunicatorReassignCommentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:layout_marginHorizontal="?offset_xs"
            android:background="@drawable/design_message_panel_common_input_field_drawable"
            android:hint="@string/communicator_crm_reassign_to_operator_edit_hint"
            android:minHeight="?inlineHeight_2xs"/>

        <ru.tensor.sbis.design.buttons.SbisButton
            android:id="@+id/crm_reassign_button"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="?offset_xs"
            android:layout_marginTop="?offset_m"
            android:layout_marginBottom="?offset_s"
            app:SbisButton_backgroundType="contrast"
            app:SbisButton_contrastBackgroundColor="?backgroundColor"
            app:SbisButton_contrastBackgroundColorPressed="?backgroundColor"
            app:SbisButton_title="@string/communicator_crm_reassign_to_group_option"
            app:SbisButton_titleContrastColor="?textColor"
            app:SbisButton_titlePosition="right"
            app:SbisButton_titleSize="x2l"
            app:align="@{HorizontalAlignment.LEFT}"/>
    </LinearLayout>
</layout>