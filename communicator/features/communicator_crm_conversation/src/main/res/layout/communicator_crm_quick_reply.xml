<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/CommunicatorCRMQuickReplyListTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ru.tensor.sbis.design.view.input.searchinput.SearchInput
        android:id="@+id/communicator_crm_quick_reply_search_input"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/communicator_crm_quick_reply_folder_title_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:baseColor="?infoSameBackgroundColor"
        app:hasFilter="false"/>

    <ru.tensor.sbis.design.breadcrumbs.CurrentFolderView
        android:id="@+id/communicator_crm_quick_reply_folder_title_layout"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:theme="@style/CommunicatorCRMQuickReplyCurrentFolderTheme"
        app:layout_constraintTop_toBottomOf="@+id/communicator_crm_quick_reply_search_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/communicator_crm_quick_reply_coordinator_layout"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/communicator_crm_quick_reply_coordinator_layout"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="@dimen/match_constraint"
        app:layout_constraintTop_toBottomOf="@+id/communicator_crm_quick_reply_folder_title_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ru.tensor.sbis.crud3.ListComponentView
            android:id="@+id/communicator_crm_quick_reply_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/communicator_crm_quick_reply_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/input_view_appbar_with_dynamic_elevation_behavior"
            app:scrollview_id="@+id/communicator_crm_quick_reply_list" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>