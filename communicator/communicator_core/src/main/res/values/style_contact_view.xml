<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContactViewStyle"/>

    <style name="ContactTitleStyle" parent="@style/MessagesListItem.HeaderText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?textColor</item>
    </style>

    <style name="ContactSubtitleStyle">
        <item name="android:textColor">?readonlyTextColor</item>
        <item name="android:textSize">?fontSize_m_scaleOn</item>
    </style>

    <style name="ContactSubtitleSecondStyle" parent="ContactSubtitleStyle"/>

    <style name="ContactRoleIconStyle" parent="@style/MobileFontStyle">
        <item name="android:textColor">?unaccentedIconColor</item>
        <item name="android:textSize">?iconSize_m</item>
    </style>

    <style name="ContactIconStyle" parent="@style/MobileFontStyle">
        <item name="android:textColor">?secondaryIconColor</item>
        <item name="android:textSize">?iconSize_2xl</item>
        <item name="android:paddingStart">?offset_m</item>
    </style>

    <style name="ContactConversationIconStyle" parent="@style/ContactIconStyle">
        <item name="android:text">@string/design_mobile_icon_message_contour</item>
    </style>

    <style name="ContactVideoCallIconStyle" parent="@style/ContactIconStyle">
        <item name="android:text">@string/design_mobile_icon_video</item>
    </style>

</resources>