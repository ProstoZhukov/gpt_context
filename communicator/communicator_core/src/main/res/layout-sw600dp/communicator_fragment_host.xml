<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/communicator_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palette_color_white1"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <View
        android:theme="?globalToolbarStyle"
        android:id="@+id/communicator_toolbar_placeholder"
        style="?Toolbar_container_style"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_height="@dimen/input_view_recipient_selection_toolbar_height"/>

    <FrameLayout
        android:id="@+id/communicator_master_fragment_container"
        android:layout_width="@dimen/design_tablet_master_width"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_width="@dimen/design_tablet_master_width"/>

    <FrameLayout
        android:id="@+id/communicator_details_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/palette_color_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/communicator_content_container_separator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ru.tensor.sbis.design.stubview.StubView
            android:id="@+id/communicator_details_fragment_stub"
            android:layout_width="wrap_content"
            android:paddingHorizontal="?offset_m"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

    <View
        android:id="@+id/communicator_content_container_separator"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="?separatorColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/communicator_master_fragment_container"
        app:layout_constraintTop_toTopOf="parent"/>

    <ru.tensor.sbis.design.buttons.SbisRoundButton
        android:id="@+id/communicator_navigation_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/communicator_master_fragment_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/communicator_host_fragment_fab_margin"
        android:layout_marginBottom="@dimen/communicator_host_fragment_fab_margin"
        android:elevation="@dimen/fab_elevation"
        android:visibility="invisible"
        app:SbisRoundButton_icon="@string/design_mobile_icon_action_add"
        app:SbisRoundButton_style="navigation"
        app:layout_behavior="@string/navigation_fab_behavior_with_bottom_navigation"/>

</androidx.constraintlayout.widget.ConstraintLayout>