<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/communicator_message_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/communicator_dual_message_item_incoming_body_margin_left"
    android:paddingEnd="?offset_s">

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/communicator_message_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingEnd="?offset_2xs"
        android:singleLine="true"
        android:textColor="?unaccentedTextColor"
        android:textSize="?fontSize_xs_scaleOff"
        tools:text="3 июля"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/communicator_message_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:includeFontPadding="false"
        android:layout_alignBaseline="@id/communicator_service_message_text"
        android:paddingEnd="?offset_2xs"
        android:textColor="?unaccentedTextColor"
        android:textSize="?fontSize_3xs_scaleOff"
        tools:text="12:09"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/communicator_service_message_icon"
        style="@style/MobileFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/communicator_message_item_time"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="?offset_2xs"
        android:minHeight="@dimen/communicator_message_item_body_min_height"
        android:paddingBottom="?offset_3xs"
        android:scrollbars="none"
        android:textColor="?unaccentedTextColor"
        android:textSize="?fontSize_m_scaleOff"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="@string/design_mobile_icon_arrow_down"/>

    <!-- Не заменять на SbisTextView, т.к. movementMethod не поддержан -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/communicator_service_message_text"
        style="@style/RegularStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?offset_s"
        android:layout_below="@id/communicator_message_item_date"
        android:layout_toStartOf="@+id/communicator_message_item_time"
        android:layout_toEndOf="@id/communicator_service_message_icon"
        android:includeFontPadding="false"
        android:minHeight="@dimen/communicator_message_item_body_min_height"
        android:paddingBottom="?offset_3xs"
        android:scrollbars="none"
        android:textColor="?unaccentedTextColor"
        android:textColorLink="?linkTextColor"
        android:textSize="?fontSize_m_scaleOff"
        tools:text="ААААА"/>

</RelativeLayout>