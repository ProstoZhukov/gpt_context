<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.widget.FrameLayout"
    tools:showIn="@layout/attachments_container_item"
    tools:ignore="ResourceName">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/attachments_container_image_preview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        fresco:failureImage="@drawable/attachment_preview_image"
        fresco:placeholderImage="@drawable/attachment_preview_image"
        fresco:retryImage="@drawable/attachment_preview_image"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:id="@+id/attachments_container_file_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            style="@style/MobileFontStyle"
            android:id="@+id/attachments_container_file_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/attachment_file_type_icon_size"
            tools:text="@string/design_mobile_icon_file_format_word"
            tools:ignore="SpUsage"/>

        <TextView
            android:id="@+id/attachments_container_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/attachments_container_item_default_margin"
            android:layout_marginRight="@dimen/attachments_container_item_default_margin"
            android:layout_marginTop="@dimen/attachments_container_item_default_margin"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/text_color_black_1"
            android:textSize="@dimen/size_caption1_scaleOn"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/remove_button"
        android:layout_width="@dimen/common_attachments_container_item_close_button_size"
        android:layout_height="@dimen/common_attachments_container_item_close_button_size"
        android:layout_gravity="top|end"
        android:padding="@dimen/attachments_container_item_default_margin"
        android:src="@drawable/delete_file"
        tools:ignore="ContentDescription"/>

    <FrameLayout
        android:id="@+id/attachment_item_certificate_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginStart="@dimen/attachments_container_item_default_margin"
        android:layout_marginTop="@dimen/attachments_container_item_default_margin"
        android:background="@drawable/image_attachment_badge_background"
        android:padding="@dimen/common_attachments_certificate_container_padding"
        android:visibility="gone">

        <TextView
            style="@style/MobileFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:text="@string/design_mobile_icon_certificate_badge"
            android:textColor="@color/text_orange_color"
            android:textSize="@dimen/common_attachments_certificate_icon_size"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/attachment_progress"
        android:layout_width="@dimen/attachments_container_item_progress_size"
        android:layout_height="@dimen/attachments_container_item_progress_size"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:ignore="ContentDescription"/>

</merge>