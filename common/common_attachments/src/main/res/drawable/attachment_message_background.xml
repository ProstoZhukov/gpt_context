<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid android:color="@color/palette_colorMessage"/>

            <corners android:radius="@dimen/attachments_item_message_corner_radius"/>

            <stroke
                android:width="@dimen/attachment_preview_stroke_width"
                android:color="@color/palette_color_black5"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <solid android:color="?infoBackgroundColor"/>

            <corners android:radius="@dimen/attachments_item_message_corner_radius"/>

            <stroke
                android:width="@dimen/attachment_preview_stroke_width"
                android:color="@color/palette_color_black5"/>
        </shape>
    </item>
</selector>