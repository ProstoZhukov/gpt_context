<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/application_tools_debug_info_item_padding_left"
    android:paddingTop="@dimen/application_tools_debug_info_item_padding_top"
    android:paddingEnd="@dimen/application_tools_debug_info_item_padding_right"
    android:paddingBottom="@dimen/application_tools_debug_info_item_padding_bottom">

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/debug_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/application_tools_debug_info_item_title_margin_bottom"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="?textColor"
        android:textSize="@dimen/application_tools_debug_info_item_title_size"
        tools:text="Device Info"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/debug_info_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?textColor"
        android:textSize="@dimen/application_tools_debug_info_item_data_size"
        tools:text="Manufacturer: motorola"/>

</LinearLayout>