<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Selection window -->
    <style name="SelectionWindowItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/selection_window_item_height</item>
        <item name="android:paddingLeft">@dimen/selection_window_normal_margin</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">
            @dimen/selection_window_normal_margin
        </item>
        <item name="android:paddingRight">@dimen/selection_window_normal_margin</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/selection_window_normal_margin
        </item>
    </style>

    <style name="SelectionWindowHeader_Title" parent="MediumStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?primaryTextColor</item>
        <item name="android:textSize">?fontSize_2xl_scaleOff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SelectionWindowHeader.Icon" parent="MobileFontStyle">
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/size_title1_scaleOff</item>
    </style>

    <style name="SelectionWindowBackButton" parent="SelectionWindowHeader.Icon">
        <item name="android:textColor">@color/text_color_accent_4</item>
        <item name="android:text">@string/design_mobile_icon_btn_back</item>
        <item name="android:textSize">@dimen/size_title1_scaleOff</item>
    </style>

    <style name="SelectionWindowAcceptButton">
        <item name="android:layout_width">@dimen/selection_window_button_accept_size</item>
        <item name="android:layout_height">@dimen/selection_window_button_accept_size</item>
        <item name="android:src">@drawable/ic_done_green</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="SelectionWindowItem_Title" parent="RegularStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_title2_scaleOff</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SbisCheckbox" parent="SelectionWindowButton.Circle">
        <item name="android:layout_width">@dimen/design_view_ext_sbis_checkbox_size</item>
        <item name="android:layout_height">@dimen/design_view_ext_sbis_checkbox_size</item>
        <item name="android:textSize">@dimen/design_view_ext_sbis_checkbox_icon_size</item>
        <item name="checkIconColor">?markerColor</item>
    </style>

    <style name="SelectionWindowButton.Circle">
        <item name="android:layout_width">32dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">
            0dp
        </item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">
            0dp
        </item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:fontFamily">@font/sbis_mobile_icons</item>
        <item name="android:textColor">@color/text_color_success</item>
        <item name="android:textSize">@dimen/size_title1_scaleOff</item>
        <item name="android:background">@drawable/selection_window_circle_button_background</item>
    </style>

    <style name="SelectionWindowButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">
            @dimen/selection_window_normal_margin
        </item>
        <item name="android:paddingLeft">@dimen/selection_window_normal_margin</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/selection_window_normal_margin
        </item>
        <item name="android:paddingRight">@dimen/selection_window_normal_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_body2_scaleOff</item>
        <item name="android:textColor">@color/selection_window_button_text_color_selector</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/selection_window_button_background</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="ConversationMessagePanel">
        <item name="android:background">?contrastBackgroundColor</item>
    </style>

    <!-- MoneyView -->
    <style name="MoneyViewDecimalPartStyle" parent="MediumStyle">
        <item name="android:textSize">@dimen/size_body1_scaleOff</item>
        <item name="android:textColor">@color/palette_color_black3</item>
    </style>

</resources>