<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Базовая тема для экрана блокировки. Использовать производные от нее. -->
    <style name="BaseAppComponentsErrorScreenTheme" parent="AppTheme">
        <item name="base_app_components_error_screen_background">@color/palette_color_transparent
        </item>
        <item name="android:windowBackground">?attr/base_app_components_error_screen_background
        </item>
        <item name="android:statusBarColor">?attr/base_app_components_error_screen_background</item>
        <item name="android:navigationBarColor">?attr/base_app_components_error_screen_background
        </item>

        <item name="base_app_components_error_screen_title_text_color">@color/palette_color_black2
        </item>
        <item name="base_app_components_error_screen_comment_text_color">
            @color/palette_color_black3
        </item>
    </style>

    <!-- Светлая тема для экрана блокировки при отсутствии памяти  (стандартная тема) -->
    <style name="BaseAppComponentsErrorScreenTheme.Light">
        <item name="base_app_components_error_screen_background">@color/palette_color_white0</item>
        <item name="base_app_components_error_screen_title_text_color">@color/palette_color_black2
        </item>
        <item name="unaccentedSbisButtonTheme">@style/SbisButtonDefaultUnaccentedTheme</item>
    </style>

    <!-- Светло-красная тема для экрана блокировки при отсутствии памяти (МП SabyGet и Бренды) -->
    <style name="BaseAppComponentsErrorScreenTheme.LightRed">
        <item name="base_app_components_error_screen_background">@color/palette_color_white0</item>
        <item name="base_app_components_error_screen_title_text_color">@color/palette_color_black2
        </item>

        <item name="primarySbisButtonTheme">@style/BaseAppComponentsContrastSabyClientsButton</item>
        <item name="unaccentedSbisButtonTheme">
            @style/BaseAppComponentsContrastUnaccentedSabyClientsButton
        </item>
    </style>

    <!-- Темная тема для экрана блокировки при отсутствии памяти (МП Presto, Официант) -->
    <style name="BaseAppComponentsErrorScreenTheme.Dark">
        <item name="base_app_components_error_screen_background">@color/palette_color_blue26</item>
        <item name="base_app_components_error_screen_title_text_color">
            @color/palette_color_dark_blue6
        </item>

        <item name="primarySbisButtonTheme">@style/BaseAppComponentsContrastPrimaryButton</item>
        <item name="unaccentedSbisButtonTheme">@style/BaseAppComponentsContrastUnaccentedButton
        </item>
    </style>
</resources>