<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:theme="?attr/BaseAppComponentsErrorScreen"
    tools:theme="@style/BaseAppComponentsErrorScreenTheme.Light">

    <ru.tensor.sbis.design.stubview.StubView
        android:id="@+id/stub_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:StubView_backgroundColor="?attr/base_app_components_error_screen_background"
        app:StubView_detailsColor="?attr/base_app_components_error_screen_comment_text_color"
        app:StubView_messageColor="?attr/base_app_components_error_screen_title_text_color"
        app:StubView_mode="dens"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_max="500dp"/>

    <ru.tensor.sbis.design.buttons.SbisButton
        android:id="@+id/no_memory_button_close"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:SbisButton_style="primary"
        app:SbisButton_title="@string/app_init_no_memory_button_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stub_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>