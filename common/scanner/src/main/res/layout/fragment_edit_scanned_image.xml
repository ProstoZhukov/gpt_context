<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="Presenter"
            type="ru.tensor.sbis.scanner.ui.editimage.EditImageContract.Presenter"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <RelativeLayout
            android:id="@+id/edit_image_toolbar"
            style="@style/SbisToolbarCommon"
            android:background="@android:color/black"
            android:padding="@dimen/document_scanner_toolbar_padding"
            tools:layout_height="48dp">

            <TextView
                style="@style/ScannerToolbarButton.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:onClick="@{() -> Presenter.onCancelButtonClick()}"
                android:text="@string/scanner_edit_image_cancel"/>

            <TextView
                style="@style/ScannerToolbarButton.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="@{() -> Presenter.onDoneButtonClick(documentImage.getDraweeRotation(), documentImage.getFinderCoordinatesInOriginalOrientation())}"
                android:text="@string/scanner_edit_image_done"/>

        </RelativeLayout>

        <ru.tensor.sbis.scanner.view.documentfinder.DocumentImageView
            android:id="@+id/document_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_container"
            android:layout_below="@id/edit_image_toolbar"/>

        <FrameLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/document_scanner_bottom_content_padding"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <TextView
                style="@style/ScannerToolbarButton.Icon"
                android:layout_gravity="center"
                android:onClick="@{() -> Presenter.onRotateButtonClick()}"
                android:text="@string/design_mobile_icon_arrow_counter_cw"/>

        </FrameLayout>

    </RelativeLayout>

</layout>