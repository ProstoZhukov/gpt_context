<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true">

    <TextureView
        android:id="@+id/camera_texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ru.tensor.sbis.scanner.view.documentfinder.DocumentFinderView
        android:id="@+id/finder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:finder_mode="display"/>

    <RelativeLayout
        android:id="@+id/scanner_toolbar"
        style="@style/SbisToolbarCommon"
        android:background="@color/palette_alpha_color_black4"
        android:paddingStart="@dimen/document_scanner_toolbar_padding"
        android:paddingLeft="@dimen/document_scanner_toolbar_padding"
        android:paddingEnd="@dimen/document_scanner_toolbar_padding"
        android:paddingRight="@dimen/document_scanner_toolbar_padding"
        tools:layout_height="48dp">

        <TextView
            android:id="@+id/close_button"
            style="@style/ScannerToolbarButton.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/scanner_close_screen"
            tools:ignore="SpUsage"/>

        <TextView
            android:id="@+id/next_page"
            style="@style/CurrentPageTextStyle"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/flash_switch"
            android:layout_toEndOf="@id/close_button"
            tools:text="2 страница"/>

        <ru.tensor.sbis.scanner.view.FlashSwitchView
            android:id="@+id/flash_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"/>

    </RelativeLayout>

    <ru.tensor.sbis.design.view_ext.SbisProgressBar
        android:id="@+id/snapshot_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scanner_toolbar"
        android:indeterminate="true"
        android:max="100"
        android:progress="0"
        android:visibility="gone"/>

    <FrameLayout
        android:background="@color/palette_alpha_color_black4"
        android:id="@+id/snapshot_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>