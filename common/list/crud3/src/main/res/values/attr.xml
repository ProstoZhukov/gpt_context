<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="ListComponentView" tools:ignore="ResourceName">
        <!-- Должнен ли список иметь горизонтальную ориентацию, по умолчанию false -->
        <attr name="ListComponentView_isHorizontal" format="boolean"/>
        <!-- Должен ли быть включен SwipeRefreshLayout, по умолчанию true -->
        <attr name="ListComponentView_isUsedSwipeRefreshLayout" format="boolean"/>
        <!-- Нужно ли прокручивать список к началу при получении новой коллекции элементов, по умолчанию true -->
        <attr name="ListComponentView_forceScrollToInitialPosition" format="boolean"/>
        <!-- Устанавливать ли фон списка не зависимо от количества секций -->
        <attr name="ListComponentView_forceBackgroundColor" format="enum">
            <!-- Не устанавливать, фон будет зависеть от количества секций -->
            <enum name="none" value="0"/>
            <!-- Установить темный фон независимо -->
            <enum name="dark" value="1"/>
            <!-- Установить светлый фон -->
            <enum name="white" value="2"/>
        </attr>
    </declare-styleable>
</resources>