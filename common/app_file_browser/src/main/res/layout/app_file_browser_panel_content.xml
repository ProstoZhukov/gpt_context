<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ru.tensor.sbis.design.breadcrumbs.CurrentFolderView
        android:id="@+id/app_file_browser_current_folder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:CurrentFolderView_showDivider="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ru.tensor.sbis.crud3.ListComponentView
        android:id="@+id/app_file_browser_list_component"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:ListComponentView_isUsedSwipeRefreshLayout="false"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_file_browser_current_folder"/>
</androidx.constraintlayout.widget.ConstraintLayout>