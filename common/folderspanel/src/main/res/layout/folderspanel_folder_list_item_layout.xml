<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.tensor.sbis.folderspanel.FolderViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_popup_menu_item_bg"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="@dimen/folder_panel_padding"
        android:paddingEnd="@dimen/folder_panel_padding"
        android:paddingBottom="@dimen/folder_panel_padding"
        app:onClick="@{viewModel::onClick}"
        tools:ignore="RtlSymmetry">

        <View
            android:id="@+id/folderspanel_selection_mark"
            android:layout_width="@dimen/folder_panel_selection_mark_width"
            android:layout_height="@dimen/folder_panel_selection_mark_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/text_color_accent_4"
            android:visibility="gone"
            app:isVisible="@{viewModel.selectableVm.selected}"
            tools:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/folderspanel_folder_name_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/folder_panel_padding"
            android:layout_toStartOf="@+id/folderspanel_counters"
            android:paddingEnd="@dimen/folder_panel_icon_padding_horizontal"
            app:folderLevel="@{viewModel.level}"
            app:paddingForLevel="@{@dimen/folder_panel_level_padding}">

            <TextView
                android:id="@+id/folderspanel_folder_name"
                style="@style/RegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingStart="@dimen/folder_panel_item_padding"
                android:ellipsize="end"
                android:gravity="fill_horizontal|start"
                android:maxLines="1"
                android:text="@{viewModel.title}"
                android:textAlignment="gravity"
                android:textColor="@color/text_color_black_1"
                android:textSize="@dimen/size_title2_scaleOff"
                tools:ignore="SpUsage"
                tools:text="Рабочая папка"/>

            <TextView
                android:id="@+id/folderspanel_status_icon"
                style="@style/MobileFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/folderspanel_folder_name"
                android:layout_toEndOf="@+id/folderspanel_folder_name"
                android:paddingStart="@dimen/folder_panel_icon_padding_horizontal"
                android:paddingBottom="@dimen/folder_panel_icon_padding_bottom"
                android:textColor="@color/text_color_black_2"
                android:textSize="@dimen/size_title1_scaleOff"
                app:resId="@{viewModel.statusIcon}"
                tools:ignore="RtlSymmetry,SpUsage"
                tools:text="icon"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/folderspanel_counters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/folderspanel_counters_baseline_source"
                style="@style/RegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:text="@{viewModel.title}"
                android:textAlignment="gravity"
                android:textSize="@dimen/size_title2_scaleOff"
                android:visibility="invisible"
                tools:ignore="SpUsage"
                tools:text="123123123"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/folderspanel_total_count"
                style="@style/RegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/folderspanel_counters_baseline_source"
                android:layout_alignEnd="@+id/folderspanel_longest_total_count"
                android:layout_alignRight="@+id/folderspanel_longest_total_count"
                android:textColor="@color/text_color_black_3"
                android:textSize="@dimen/size_body1_scaleOff"
                app:formattedCount="@{viewModel.totalCount}"
                app:visibilityEqualsGone="@{viewModel.showTotalCount}"
                tools:ignore="SpUsage"
                tools:text="3"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/folderspanel_longest_total_count"
                style="@style/RegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/folderspanel_counters_baseline_source"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/folderspanel_unread_count"
                android:text="@{viewModel.longestTotalCount}"
                android:textColor="@color/text_color_black_3"
                android:textSize="@dimen/size_body1_scaleOff"
                app:invisibleOrGone="@{viewModel.showUnreadCount}"
                tools:ignore="SpUsage"
                tools:text="333"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/folderspanel_unread_count"
                style="@style/RegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/folderspanel_counters_baseline_source"
                android:layout_alignParentTop="true"
                android:paddingEnd="@dimen/folder_panel_item_padding"
                android:textColor="@color/text_color_accent_3"
                android:textSize="@dimen/size_body1_scaleOff"
                app:formattedCount="@{viewModel.unreadCount}"
                app:visibilityEqualsGone="@{viewModel.showUnreadCount}"
                tools:ignore="RtlSymmetry,SpUsage"
                tools:text="123"
                tools:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>

</layout>