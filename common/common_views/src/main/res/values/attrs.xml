<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CommonViewsDateHeaderView">
        <attr name="wrap_vertically" format="boolean"/>
        <attr name="wrap_horizontally" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CommonViewsDocumentIconView">
        <attr name="DocumentIconView_iconSize" format="dimension"/>
        <attr name="DocumentIconView_iconColor" format="color"/>
        <attr name="DocumentIconView_extension" format="string"/>
    </declare-styleable>

    <declare-styleable name="CommonViewsMotivationTopDivider">
        <attr name="positive" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CommonViewsNotificationHeaderView">
        <attr name="NotificationHeaderView_iconType" format="enum">
            <enum name="none" value="0"/>
            <enum name="text" value="1"/>
            <enum name="image" value="2"/>
            <enum name="static_image" value="3"/>
        </attr>
        <attr name="NotificationHeaderView_headerText" format="string"/>
        <attr name="NotificationHeaderView_iconText" format="string"/>
        <attr name="NotificationHeaderView_iconColor" format="color"/>
        <attr name="NotificationHeaderView_iconUrl" format="string"/>
    </declare-styleable>

    <declare-styleable name="CommonViewsDateDividerView">
        <attr name="CommonViewsDateDividerView_textSize" format="reference|dimension"/>
        <attr name="CommonViewsDateDividerView_textColor" format="reference|color"/>
        <attr name="CommonViewsDateDividerView_background" format="reference|color"/>
    </declare-styleable>

</resources>
