<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?backgroundColor">

    <TextView
        android:id="@+id/local_feature_toggle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/local_feature_toggle_padding"
        android:ellipsize="end"
        android:paddingTop="@dimen/local_feature_toggle_padding"
        android:paddingBottom="@dimen/local_feature_toggle_padding"
        android:textColor="?textColor"
        android:textSize="?fontSize_m_scaleOn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/local_feature_toggle_switch_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Switch Title"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/local_feature_toggle_switch_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/local_feature_toggle_padding"
        android:paddingTop="@dimen/local_feature_toggle_padding"
        android:paddingBottom="@dimen/local_feature_toggle_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?separatorColor"
        app:layout_constraintTop_toBottomOf="@id/local_feature_toggle_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>