    <style name="BaseBusinessTheme">
        <item name="business_background_color">@color/business_background_color</item>
        <item name="business_list_item_background_color">@drawable/selectable_item_bg_white</item>
        <item name="business_recycler_view_background_color">@color/business_recycler_view_background_color</item>
        <item name="business_item_tablet_right_container_width">@dimen/business_item_tablet_right_container_width</item>
    </style>

    <!-- Тема для тестов. Применять в launchFragment() для фрагментов -->
