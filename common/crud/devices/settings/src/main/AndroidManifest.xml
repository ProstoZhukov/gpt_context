<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Для работы с bluetooth. Для получения информации об активности bluetooth
       и списка подключенных устройств. Нужно, чтобы подключиться к конкретному устройству (например,
       сопряжение кассы и принтера), при настройке рабочего места. -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>

    <application
        android:allowBackup="false"
        android:supportsRtl="true">
    </application>
</manifest>