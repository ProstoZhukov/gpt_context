    <!-- Тема тура онбординга по умолчанию (на глобальных темизации и производных от нее тем). -->
    <style name="OnboardingTourDefaultTheme">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">?backgroundColor</item>
        <item name="android:statusBarColor">?backgroundColor</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:navigationBarColor">?backgroundColor</item>
        <item name="sbisButtonCornerRadius">50dp</item>
        <item name="onboardingTourBackgroundColor">?backgroundColor</item>
        <item name="onboardingTourImageColor">?iconColor</item>
        <item name="onboardingTourTitleColor">?textColor</item>
        <item name="onboardingTourDescriptionColor">?labelContrastTextColor</item>
        <item name="onboardingTourTermsColor">?labelContrastTextColor</item>
        <item name="onboardingTourCloseIconColor">?labelIconColor</item>
        <item name="onboardingTourNavigationMarkerAccentedColor">?brandColor</item>
        <item name="onboardingTourNavigationMarkerUnaccentedColor">?contrastIconColor</item>
    </style>

    <!-- {@deprecated Устаревшее название. Использовать OnboardingTourDefaultTheme и OnboardingButtonConfiguration.style} -->
    <style name="OnboardingTourTheme.Primary"
        parent="@style/OnboardingTourDefaultTheme">
        <item name="SbisButton_style">primary</item>
    </style>

    <!--deprecated использовать OnboardingTourDefaultTheme-->
    <style name="OnboardingTourLightTheme"
        parent="OnboardingTourDefaultTheme"/>

    <!-- Тема для тестов. Применять в launchFragment() для фрагментов. -->
    <style name="OnboardingTourTestAppTheme"
        parent="AppTheme">
        <item name="onboardingTourTheme">@style/OnboardingTourDefaultTheme</item>
    </style>
</resources>