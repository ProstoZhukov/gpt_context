<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Атрибуты вью индикации-->
    <declare-styleable name="IndicatorsView" tools:ignore="ResourceName">
        <!--Отступы между индикаторами-->
        <attr name="IndicatorsView_offset" format="dimension"/>
        <!--Величина индикатора-->
        <attr name="IndicatorsView_size" format="dimension|reference"/>
        <!-- Цвет выделенного индикатора -->
        <attr name="IndicatorsView_selectedColor" format="color|reference"/>
        <!-- Цвет индикатора -->
        <attr name="IndicatorsView_unselectedColor" format="color|reference"/>
    </declare-styleable>

    <!--Стили Логотипа-->
    <style name="OnboardingTourLogoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?iconSize_5xl</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="OnboardingTourTitleStyle" parent="MediumStyle">
        <item name="android:textSize">?fontSize_3xl_scaleOff</item>
    </style>

    <style name="OnboardingTourDescriptionStyle">
        <item name="android:textSize">?fontSize_m_scaleOff</item>
        <item name="android:layout_marginTop">?offset_s</item>
    </style>
</resources>