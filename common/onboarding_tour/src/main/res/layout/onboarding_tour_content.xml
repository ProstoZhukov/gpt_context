<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/onboarding_tour_fragment">

    <!--
    Обходное решение для нормализации анимации свайпа в MotionLayout.
    Пустая вью с match_parent по ширине позволяет удерживать занятым все доуступное пространство родителя.
    Иначе возможнга ситуация когда во время анимации вью с "коротким" текстом будут изменять свою ширину сдвигая при этом текст по строкам.
    -->
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/onboarding_tour_content_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/onboarding_tour_content_guideline_percent"/>

    <ImageView
        android:id="@+id/onboarding_tour_main_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="?offset_3xl"
        android:layout_marginEnd="?offset_3xl"
        android:layout_marginBottom="?offset_st"
        android:adjustViewBounds="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/onboarding_tour_content_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.6"
        app:tint="?onboardingTourImageColor"
        tools:ignore="ContentDescription"
        tools:src="@drawable/design_profile_company_placeholder_opaque"
        tools:visibility="visible"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/onboarding_tour_title"
        style="@style/OnboardingTourTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?offset_st"
        android:ellipsize="end"
        android:maxLines="@integer/onboarding_tour_content_title_max_lines"
        android:includeFontPadding="false"
        android:paddingStart="?offset_3xl"
        android:paddingEnd="?offset_3xl"
        android:textColor="?onboardingTourTitleColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboarding_tour_content_separator"
        app:layout_constraintWidth_max="@dimen/onboarding_tour_max_text_width"
        tools:text="Подготовьте устройство для подключений"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/onboarding_tour_message"
        style="@style/OnboardingTourDescriptionStyle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:includeFontPadding="false"
        android:letterSpacing="0.005"
        android:paddingStart="?offset_3xl"
        android:textColor="?onboardingTourDescriptionColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_tour_title"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_max="@dimen/onboarding_tour_max_text_width"
        tools:text="Потребуется несколько разрешений, это займет пару минут"/>

</androidx.constraintlayout.widget.ConstraintLayout>