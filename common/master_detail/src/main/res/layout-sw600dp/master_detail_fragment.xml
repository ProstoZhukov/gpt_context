<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/master_container"
        android:layout_width="@dimen/design_tablet_master_width"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/list_master_detail_divider"
        android:layout_width="0.5dp"
        android:layout_height="wrap_content"
        android:background="?separatorColor"
        app:layout_constraintEnd_toEndOf="@+id/master_container"
        app:layout_constraintTop_toBottomOf="@+id/detail_container_toolbar"/>

    <View
        android:theme="?globalToolbarStyle"
        android:id="@+id/detail_container_toolbar"
        style="?Toolbar_container_style"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/master_container"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/detail_container_toolbar_divider"
        style="@style/ToolbarDividerStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_divider_height"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/detail_container_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/master_container"/>

    <FrameLayout
        android:id="@+id/detail_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/master_container"
        app:layout_constraintTop_toTopOf="@+id/detail_container_toolbar"/>

    <ru.tensor.sbis.design.stubview.StubView
        android:id="@+id/detail_container_stub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="?offset_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/detail_container"
        app:layout_constraintStart_toStartOf="@id/detail_container"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>