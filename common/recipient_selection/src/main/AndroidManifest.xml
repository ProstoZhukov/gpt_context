<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="false">

        <activity
            android:name="ru.tensor.sbis.recipient_selection.profile.ui.RecipientSelectionActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.Swipe.Back"
            android:exported="false">
            <intent-filter>
                <action android:name="${applicationId}.RECIPIENTS_SELECTION_ACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".employee.EmployeeSelectionActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/EmployeeSelectionTheme"
            android:exported="false">
            <intent-filter>
                <action android:name="${applicationId}.EMPLOYEE_RECIPIENT_SELECTION_ACTIVITY"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>