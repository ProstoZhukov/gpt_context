<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:minHeight="@dimen/recipients_employee_selection_folder_list_item_height"
    android:paddingStart="@dimen/recipients_employee_selection_list_item_margin_start"
    android:paddingTop="@dimen/recipients_employee_selection_list_item_margin_top"
    android:paddingEnd="@dimen/recipients_employee_selection_list_item_margin_end">

    <TextView
        android:id="@+id/employee_department_title"
        style="@style/RegularStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/palette_color_black1"
        android:textSize="@dimen/size_title2_scaleOn"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/employee_department_arrow"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Разработка"/>

    <TextView
        android:id="@+id/employee_department_arrow"
        style="@style/MobileFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/recipients_employee_selection_department_arrow_margin_start"
        android:layout_marginTop="@dimen/recipients_employee_selection_department_arrow_margin_top"
        android:text="@string/design_mobile_icon_btn_forward"
        android:textColor="@color/text_color_accent_3"
        android:textSize="@dimen/size_caption1_scaleOn"
        app:layout_constraintBottom_toBottomOf="@id/employee_department_title"
        app:layout_constraintEnd_toStartOf="@id/checkbox_container"
        app:layout_constraintStart_toEndOf="@id/employee_department_title"
        app:layout_constraintTop_toTopOf="@id/employee_department_title"/>

    <TextView
        android:id="@+id/employee_department_subtitle"
        style="@style/RegularStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recipients_employee_selection_list_item_margin_top"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_color_black_3"
        android:textSize="@dimen/size_body2_scaleOn"
        app:layout_constraintEnd_toStartOf="@id/checkbox_container"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/employee_department_title"
        tools:text="Новиков Д. В. (1115)"/>

    <FrameLayout
        android:id="@+id/checkbox_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/recipients_selection_big_margin"
        android:paddingEnd="@dimen/recipients_selection_big_margin"
        android:paddingBottom="@dimen/recipients_selection_person_checkbox_bottom_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/employee_department_title">

        <ImageView
            android:id="@+id/checkbox"
            android:layout_width="@dimen/recipients_selection_item_checkbox_width"
            android:layout_height="@dimen/recipients_selection_item_checkbox_height"
            android:contentDescription="@null"
            android:visibility="visible"
            tools:src="@drawable/plus_checkbox_icon"/>

    </FrameLayout>

    <View
        android:id="@+id/employee_department_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipients_employee_selection_list_item_separator_line_height"
        android:background="@color/palette_color_gray3"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>