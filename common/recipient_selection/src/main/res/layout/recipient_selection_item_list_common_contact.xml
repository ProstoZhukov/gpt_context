<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_item_bg_white"
    android:paddingTop="@dimen/recipients_selection_item_padding">

    <ru.tensor.sbis.design.profile.person.PersonView
        android:id="@+id/person_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?offset_xs"
        android:layout_marginStart="?offset_xs"
        app:layout_constraintBottom_toTopOf="@+id/common_contact_item_separator"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:PersonView_size="m"
        tools:ignore="ContentDescription"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_height="@dimen/recipients_selection_person_photo_size"
        tools:layout_width="@dimen/recipients_selection_person_photo_size"
        tools:src="@drawable/ellipsized_photo_placeholder"/>

    <ru.tensor.sbis.common_views.HighlightedTextView
        style="@style/MessagesListItem.HeaderText"
        android:id="@+id/contact_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/recipients_selection_big_margin"
        android:layout_marginStart="@dimen/list_person_photo_view_margin_right"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/text_color_accent_1"
        app:layout_constraintLeft_toRightOf="@id/person_photo"
        app:layout_constraintRight_toLeftOf="@+id/contact_side_attribute"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Фамилия Имя Фамилия Имя Фамилия Имя Фамилия Имя"/>

    <TextView
        style="@style/RegularStyle"
        android:id="@+id/contact_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/recipients_selection_big_margin"
        android:layout_marginLeft="@dimen/list_person_photo_view_margin_right"
        android:layout_marginRight="@dimen/recipients_selection_big_margin"
        android:layout_marginStart="@dimen/list_person_photo_view_margin_right"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_color_black_3"
        android:textSize="@dimen/size_body1_scaleOn"
        app:layout_constraintLeft_toRightOf="@id/person_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contact_title"
        tools:text="Должность Должность Должность Должность Должность"/>

    <TextView
        style="@style/RegularStyle"
        android:id="@+id/contact_subtitle_second_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/recipients_selection_big_margin"
        android:layout_marginLeft="@dimen/list_person_photo_view_margin_right"
        android:layout_marginRight="@dimen/recipients_selection_big_margin"
        android:layout_marginStart="@dimen/list_person_photo_view_margin_right"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_color_black_3"
        android:textSize="@dimen/size_body1_scaleOn"
        app:layout_constraintLeft_toRightOf="@id/person_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_subtitle"
        tools:text="Отдел Отдел Отдел Отдел Отдел Отдел Отдел Отдел"/>

    <TextView
        style="@style/RegularStyle"
        android:id="@+id/contact_side_attribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recipients_selection_item_padding"
        android:layout_marginEnd="@dimen/recipients_selection_big_margin"
        android:layout_marginLeft="@dimen/list_person_photo_view_margin_right"
        android:layout_marginRight="@dimen/recipients_selection_big_margin"
        android:layout_marginStart="@dimen/list_person_photo_view_margin_right"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/chat_admin"
        android:textColor="@color/text_color_secondary"
        android:textSize="@dimen/size_caption1_scaleOn"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/contact_title"
        app:layout_constraintBottom_toBottomOf="@+id/contact_title"
        app:layout_constraintLeft_toRightOf="@+id/contact_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contact_title"
        tools:visibility="visible"/>

    <View
        android:id="@+id/common_contact_item_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_separator_size"
        android:layout_marginTop="@dimen/recipients_selection_item_padding"
        android:background="@color/palette_alpha_color_black1"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/contact_subtitle_second_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>