<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <attr name="employeeSelectionTheme" format="reference"/>

    <style name="Custom.AppTheme.Swipe.Back" parent="@style/AppTheme.Swipe.Back">
        <item name="Toolbar_theme">@style/SbisToolbar</item>
        <item name="Toolbar_titleStyle">@style/RecipientSelectionMediumStyle</item>
        <item name="Toolbar_iconStyle">@style/RecipientSelectionMobileFontStyle</item>
        <item name="android:statusBarColor">@color/palette_colorHeader</item>
    </style>

    <style name="RecipientSelectionMobileFontStyle" parent="@style/MobileFontStyle">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/size_title1_scaleOff</item>
        <item name="android:text">@string/design_mobile_icon_btn_back</item>
    </style>

    <style name="RecipientSelectionMediumStyle" parent="@style/MediumStyle">
        <item name="android:textColor">@color/palette_color_white2</item>
        <item name="android:textSize">@dimen/size_title1_scaleOff</item>
        <item name="android:layout_marginStart">26dp</item>
    </style>

    <style name="EmployeeSelectionTheme" parent="AppTheme.Swipe.Back">
        <item name="android:statusBarColor">?unaccentedAdaptiveBackgroundColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="p">true</item>
        <item name="android:navigationBarColor">?unaccentedAdaptiveBackgroundColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

</resources>