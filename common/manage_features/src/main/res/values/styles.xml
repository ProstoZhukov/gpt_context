<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ManageFeaturesToolbarIcons" parent="MobileFontStyle">
        <item name="android:textColor">?iconColor</item>
        <item name="android:layout_width">@dimen/size_title1_scaleOff</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">?iconSize_2xl</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ManageFeaturesGroupTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/manage_features_group_height</item>
        <item name="android:layout_marginStart">?offset_l</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textSize">?fontSize_m_scaleOff</item>
        <item name="android:textColor">?textColor</item>
    </style>

    <style name="ManageFeaturesGroupValue" parent="ManageFeaturesGroupTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:layout_marginStart">?offset_l</item>
        <item name="android:layout_marginEnd">?offset_l</item>
    </style>
</resources>