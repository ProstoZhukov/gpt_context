<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isInitialProgress"
            type="java.lang.Boolean"/>
    </data>

    <ru.tensor.sbis.design.progress.SbisLoadingIndicator
        android:id="@+id/initial_loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:SbisLoadingIndicator_delayedShowing="true"
        app:isVisible="@{safeUnbox(isInitialProgress)}"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
        tools:showIn="@layout/list_view"
        tools:visibility="visible"/>

</layout>
