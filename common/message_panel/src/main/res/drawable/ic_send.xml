<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <item android:drawable="@drawable/ic_send_disabled_for_selector"
          android:state_activated="false"
          tools:src="@drawable/ic_send_disabled"/>

    <item android:drawable="@drawable/ic_send_pressed_for_selector"
          android:state_pressed="true"
          tools:src="@drawable/ic_send_enabled"/>

    <item android:drawable="@drawable/ic_send_enabled_for_selector"
          tools:src="@drawable/ic_send_enabled"/>

</selector>