<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/up_stroke_height"
        android:background="@color/palette_alpha_color_black2"/>

    <ru.tensor.sbis.design.message_panel.common.view.recipients.MessagePanelRecipientsView
        android:id="@id/message_panel_recipients_view"
        android:layout_width="match_parent"
        android:layout_height="?inlineHeight_4xs"
        android:layout_below="@id/topLine"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ru.tensor.sbis.design.message_panel.common.view.quote.MessagePanelQuoteView
        android:id="@id/message_panel_quote_view"
        android:layout_width="match_parent"
        android:layout_height="?inlineHeight_s"
        android:layout_below="@id/message_panel_recipients_view"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@id/message_panel_attach_button_view"
        style="@style/MessagePanelTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/message_panel_message_container_view"
        android:layout_alignParentStart="true"
        android:paddingHorizontal="?offset_s"
        android:text="@string/design_mobile_icon_attach"
        android:textSize="?iconSize_3xl"
        tools:ignore="SpUsage"/>

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@id/message_panel_sign_button"
        style="@style/MessagePanelTextButton"
        android:paddingTop="?offset_m"
        android:paddingStart="?offset_st"
        android:paddingEnd="?offset_st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/design_mobile_icon_certificate_badge"
        android:textSize="?iconSize_3xl"
        android:visibility="gone"
        android:layout_below="@id/message_panel_quote_view"
        android:layout_alignParentEnd="true"
        tools:ignore="SpUsage"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@id/message_panel_message_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/design_message_panel_common_input_field_drawable"
        android:outlineProvider="background"
        android:layout_marginTop="?offset_xs"
        android:layout_marginBottom="?offset_xs"
        android:layout_below="@id/message_panel_quote_view"
        android:layout_toStartOf="@id/message_panel_send_button_view"
        android:layout_toEndOf="@id/message_panel_attach_button_view">

        <ru.tensor.sbis.design.message_panel.view.layout.MessagePanelEditText
            android:id="@id/message_panel_edit_text_view"
            style="@style/MessagePanelEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:importantForAutofill="noExcludeDescendants"
            android:focusableInTouchMode="true"/>

        <!--
        Важны минимальные отступы по краям и снизу равные message_panel_input_text_drawable_stroke_width,
        чтобы не было наездов вложений на границу. Отступы по краям регулируются в контейнере вложения
        так как они должны быть только у первого и последнего элемента
        -->
        <ru.tensor.sbis.attachments.ui.view.register.AttachmentsView
            android:id="@id/message_panel_attachments_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?offset_xs"
            android:layout_marginBottom="?offset_xs"
            android:paddingStart="?offset_xs"
            android:paddingEnd="?offset_xs"
            android:visibility="gone"
            app:AttachmentsView_mode="message"
            tools:layout_height="@dimen/attachments_item_height_message"
            tools:listitem="@layout/attachment_message_item"
            tools:layout_marginStart="4dp"
            tools:visibility="visible"/>

    </LinearLayout>

    <ru.tensor.sbis.design.buttons.SbisRoundButton
        android:id="@+id/message_panel_send_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/message_panel_message_container_view"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="?offset_xs"
        android:layout_marginEnd="?offset_xs"
        app:SbisRoundButton_icon="@string/design_mobile_icon_bt_arrow"
        app:SbisRoundButton_size="s"
        app:SbisRoundButton_style="primary"/>

    <FrameLayout
        android:id="@id/message_panel_recorder_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/message_panel_message_container_view"
        android:layout_alignBottom="@id/message_panel_message_container_view"
        android:clipChildren="false"
        android:visibility="gone"/>
</merge>