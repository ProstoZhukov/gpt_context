<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.tensor.sbis.design_dialogs.movablepanel.MovablePanel
        android:id="@+id/versioning_version_movable_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:clickable="true"
        android:focusable="true"
        app:MovablePanel_background="?backgroundColor"
        app:MovablePanel_contentContainerId="@+id/versioning_movable_content_view_container_id"
        app:MovablePanel_panelWidth="CENTER_HALF"/>

</FrameLayout>