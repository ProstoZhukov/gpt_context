<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--Отображение кнопки с акцентным фоном-->
    <item android:state_activated="true" android:state_pressed="true">
        <shape>
            <corners android:radius="24dp"/>
            <padding android:bottom="12dp" android:left="14dp" android:right="14dp" android:top="12dp"/>
            <solid android:color="?attr/primaryActiveColor"/>
        </shape>
    </item>
    <item android:state_activated="true" android:state_pressed="false">
        <shape>
            <corners android:radius="24dp"/>
            <padding android:bottom="12dp" android:left="14dp" android:right="14dp" android:top="12dp"/>
            <solid android:color="?attr/primaryColor" tools:color="#E44766"/>
        </shape>
    </item>

    <!--Отображение кнопки с белым фоном-->
    <item android:state_activated="false" android:state_pressed="true">
        <shape>
            <corners android:radius="24dp"/>
            <padding android:bottom="12dp" android:left="14dp" android:right="14dp" android:top="12dp"/>
            <solid android:color="?activeBackgroundColor" tools:android="#E9E9E9"/>
        </shape>
    </item>
    <item android:state_activated="false" android:state_pressed="false">
        <shape>
            <corners android:radius="24dp"/>
            <padding android:bottom="12dp" android:left="14dp" android:right="14dp" android:top="12dp"/>
            <solid android:color="?backgroundColor" tools:color="#F9F9F9"/>
        </shape>
    </item>
</selector>