<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/share_menu_host_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?unaccentedAdaptiveBackgroundColor">

    <ru.tensor.sbis.share_menu.ui.view.header.ShareHeaderView
        android:id="@+id/share_menu_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/share_menu_content_container" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/share_menu_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:nestedScrollingEnabled="true"
        android:minHeight="@dimen/share_menu_min_content_height"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintTop_toBottomOf="@+id/share_menu_header_view"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/share_menu_tab_panel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/share_menu_tab_panel_shadow"
            android:layout_width="match_parent"
            android:layout_height="?borderThickness_3xl"
            android:background="@drawable/tab_panel_shadow"
            android:alpha="0.15"/>

        <ru.tensor.sbis.design.tab_panel.TabPanelView
            android:id="@+id/design_tab_panel_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?backgroundColor"
            app:TabPanelView_itemTitleMaxWidth="@dimen/share_menu_tab_panel_item_title_max_width"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>