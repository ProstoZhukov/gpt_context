<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- устанавливает тему Активности onboarding -->
    <attr name="onboardingTheme" format="reference"/>
    <!-- устанавливает тему Хоста (телефон/планшет/тв) onboarding -->
    <attr name="onboardingHostTheme" format="reference"/>
    <attr name="onboardingHostDialogTheme" format="reference"/>
    <attr name="onboardingHostTvTheme" format="reference"/>
    <!-- устанавливает тему Экрана Фичи (телефон/планшет/тв) onboarding -->
    <attr name="onboardingFeatureTheme" format="reference"/>
    <attr name="onboardingFeatureDialogTheme" format="reference"/>
    <attr name="onboardingFeatureTvTheme" format="reference"/>

    <!-- стиль Хоста контейнера (пейджера) onboarding -->
    <attr name="onboardingPagerStyle" format="reference"/>
    <!-- стиль Контейнера экрана фичи onboarding -->
    <attr name="onboardingFeatureContainerStyle" format="reference"/>

    <!-- стиль Заголовка баннера onboarding -->
    <attr name="onboardingTitleStyle" format="reference"/>
    <!-- стиль Кнопки закрытия в заголовке баннера onboarding -->
    <attr name="onboardingCloseIconStyle" format="reference"/>
    <!-- стиль Логотипа в заголовке баннера onboarding -->
    <attr name="onboardingLogoStyle" format="reference"/>
    <!-- стиль Описания фичи onboarding -->
    <attr name="onboardingDescriptionStyle" format="reference"/>
    <!-- стиль Кнопки фичи onboarding -->
    <attr name="onboardingButtonStyle" format="reference"/>
    <!-- стиль Изображения фичи onboarding -->
    <attr name="onboardingImageStyle" format="reference"/>
    <!-- стиль липкого Индикатора onboarding -->
    <attr name="onboardingIndicatorStyle" format="reference"/>
    <!-- цвета стандартного липкого Индикатора onboarding -->
    <attr name="onboardingIndicatorActiveColor" format="reference|color"/>
    <attr name="onboardingIndicatorInactiveColor" format="reference|color"/>

</resources>