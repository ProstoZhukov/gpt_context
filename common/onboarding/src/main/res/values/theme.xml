<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Тема Активности onboarding -->
    <style name="OnboardingTheme" parent="AppTheme">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">?backgroundColor</item>
        <item name="android:statusBarColor">?backgroundColor</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="onboardingHostTheme">@style/HostTheme</item>
        <item name="onboardingHostDialogTheme">@style/HostTheme.Dialog</item>
        <item name="onboardingFeatureTheme">@style/FeatureTheme</item>
        <item name="onboardingFeatureDialogTheme">@style/FeatureTheme.Dialog</item>
    </style>

    <!-- Базовая Тема onboarding с атрибутами стилей вьюх по-умолчанию -->
    <style name="OnboardingBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
        <item name="onboardingTitleStyle">@style/OnboardingTitleStyle</item>
        <item name="onboardingLogoStyle">@style/OnboardingLogoStyle</item>
        <item name="onboardingCloseIconStyle">@style/OnboardingCloseIconStyle</item>
        <item name="onboardingDescriptionStyle">@style/OnboardingDescriptionStyle</item>
        <item name="onboardingIndicatorStyle">@style/OnboardingIndicatorStyle</item>
        <item name="onboardingImageStyle">@style/OnboardingImageStyle</item>
    </style>

    <!-- Хост тема onboarding со связанными стилями для вьюх -->
    <style name="HostTheme" parent="OnboardingBaseTheme">
        <item name="onboardingIndicatorActiveColor">?secondaryColor</item>
        <item name="onboardingIndicatorInactiveColor">?unaccentedContrastBackgroundColor</item>
        <item name="onboardingFeatureContainerStyle">?backgroundColor</item>
        <item name="onboardingPagerStyle">@style/PagerStyle</item>
    </style>

    <!-- Хост тема onboarding для планшета -->
    <style name="HostTheme.Dialog">
        <item name="onboardingPagerStyle">@style/PagerStyle.Dialog</item>
    </style>

    <!-- Хост тема onboarding для телевизора -->
    <style name="HostTheme.Tv">
        <item name="android:screenOrientation">landscape</item>
    </style>

    <!-- Тема Экрана Фичи onboarding со связанными стилями для вьюх -->
    <style name="FeatureTheme" parent="OnboardingBaseTheme">
        <item name="onboardingFeatureContainerStyle">@style/FeatureContainerStyle</item>
        <item name="onboardingButtonStyle">@style/OnboardingFinishButton</item>
    </style>

    <!-- Тема Экрана Фичи для планшета -->
    <style name="FeatureTheme.Dialog">
        <item name="onboardingFeatureContainerStyle">@style/FeatureContainerStyle.Dialog</item>
    </style>

    <!-- Тема Экрана Фичи для телевизора -->
    <style name="FeatureTheme.Tv">
        <item name="android:screenOrientation">landscape</item>
    </style>

</resources>