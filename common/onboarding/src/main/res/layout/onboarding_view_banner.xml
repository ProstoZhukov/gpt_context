<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.tensor.sbis.onboarding.ui.banner.BannerVM"/>

        <variable
            name="visibility"
            type="java.lang.Integer"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <!-- Базовые линии текста и иконки закрытия выравниваются относительно нижнего края логотипа -->
        <ImageView
            android:id="@+id/onboarding_logo"
            style="?attr/onboardingLogoStyle"
            android:layout_marginStart="?offset_2xl"
            android:layout_marginTop="?offset_l"
            android:visibility="@{visibility}"
            app:imageResource="@{viewModel.logoRes}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_sbis_logo"
            tools:layout_width="50dp"
            tools:background="#BCBCBC"
            tools:visibility="visible"/>

        <ru.tensor.sbis.design.sbis_text_view.SbisTextView
            android:id="@+id/onboarding_title"
            style="?attr/onboardingTitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?offset_m"
            android:includeFontPadding="false"
            android:visibility="@{visibility}"
            app:compressState="@{viewModel.compressed}"
            app:compressText="@{viewModel.titleRes}"
            app:layout_constraintBottom_toBottomOf="@+id/onboarding_logo"
            app:layout_constraintStart_toEndOf="@+id/onboarding_logo"
            app:layout_constraintTop_toTopOf="@+id/onboarding_logo"
            tools:text="СБИС"/>

        <ru.tensor.sbis.design.sbis_text_view.SbisTextView
            android:id="@+id/onboarding_close_button"
            style="?attr/onboardingCloseIconStyle"
            android:layout_marginEnd="?offset_l"
            app:isVisible="@{viewModel.isButtonShown}"
            app:layout_constraintTop_toTopOf="@id/onboarding_logo"
            app:layout_constraintBottom_toBottomOf="@+id/onboarding_logo"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="SpUsage"/>

        <ru.tensor.sbis.design.sbis_text_view.SbisTextView
            android:id="@+id/close_button_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/onboarding_close_button"
            app:layout_constraintEnd_toEndOf="@+id/onboarding_close_button"
            app:layout_constraintStart_toStartOf="@+id/onboarding_close_button"
            app:layout_constraintTop_toTopOf="@+id/onboarding_close_button"
            app:onClick="@{viewModel::onCloseClick}"
            app:onClickTV="@{viewModel::onCloseClick}"
            tools:ignore="SpUsage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>