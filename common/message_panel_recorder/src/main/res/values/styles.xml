<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RecorderView"/>

    <style name="RecorderView.Icon" parent="MobileFontStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_title1_scaleOff</item>
        <item name="android:textColor">@color/palette_color_gray4</item>
    </style>

    <style name="RecorderView.Icon.RightDoubleArrow">
        <item name="android:text">@string/design_mobile_icon_double_arrow_left</item>
    </style>

    <style name="RecorderView.Icon.RecordDot">
        <item name="android:text">@string/design_mobile_icon_marker_dot</item>
        <item name="android:textSize">@dimen/recorder_view_icon_dot_size</item>
        <item name="android:textColor">@color/palette_color_red1</item>
    </style>

    <style name="RecorderView.Icon.Microphone">
        <item name="android:text">@string/design_mobile_icon_microphone_null</item>
        <item name="android:textColor">@drawable/recorder_view_mic_button_background</item>
    </style>

    <style name="RecorderView.Text">
        <item name="android:textSize">@dimen/size_body1_scaleOff</item>
    </style>

    <style name="RecorderView.Text.CancelLabel">
        <item name="android:textColor">@color/palette_color_gray4</item>
    </style>

    <style name="RecorderView.Text.RecordTime">
        <item name="android:textColor">@color/text_color_black_1</item>
    </style>
</resources>
