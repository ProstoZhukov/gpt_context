<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?backgroundColor"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="?offset_2xl"
    android:paddingTop="?offset_l"
    android:paddingEnd="?offset_2xl"
    android:paddingBottom="?offset_l">

    <ru.tensor.sbis.design.sbis_text_view.SbisTextView
        android:id="@+id/base_components_progress_dialog_title"
        style="@style/RegularStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?offset_l"
        android:textColor="?textColor"
        android:textSize="?fontSize_2xl_scaleOn"
        tools:text="Сохранение изменений" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ru.tensor.sbis.design.progress.SbisLoadingIndicator
            android:id="@+id/base_components_progress_dialog_loading_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:SbisLoadingIndicator_progressSize="s" />

        <ru.tensor.sbis.design.sbis_text_view.SbisTextView
            android:id="@+id/base_components_progress_dialog_message"
            style="@style/RegularStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="?offset_xl"
            android:textColor="?unaccentedTextColor"
            android:textSize="?fontSize_xs_scaleOn"
            tools:text="Пожалуйста, подождите" />

    </LinearLayout>

</LinearLayout>


