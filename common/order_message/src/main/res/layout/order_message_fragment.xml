<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_message_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palette_alpha_color_black7"
    android:clickable="true"
    android:focusable="true"
    tools:ignore="SpUsage">

    <androidx.cardview.widget.CardView
        android:id="@+id/order_message_card_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="20dp"
        android:maxHeight="@dimen/match_parent"
        app:cardBackgroundColor="@color/palette_color_white1"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_message_cross"
                style="@style/MobileFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:text="@string/design_mobile_icon_close_for_nav_panel"
                android:textColor="@color/palette_color_gray4"
                android:textSize="14dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_message_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <ru.tensor.sbis.design.buttons.SbisButton
                android:id="@+id/order_message_button"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:SbisButton_backgroundType="border_only"
                app:SbisButton_size="s"
                app:SbisButton_style="primary"
                app:SbisButton_title="@string/common_catalog_items_design_default_error_ok_button"
                app:SbisButton_titleTransparentColor="@color/palette_color_black1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>

