        <attr name="SwipeableLayout_sendIconColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="SwipeMenuItemView">
        <!-- Цвет иконки стандартного элемента меню -->
        <attr name="SwipeMenuItemView_iconTextColor" format="color|reference"/>
        <!-- Размер текста иконки стандартного элемента меню -->
        <attr name="SwipeMenuItemView_iconTextSize" format="dimension|reference"/>

        <!-- Цвет надписи у стандартного элемента меню -->
        <attr name="SwipeMenuItemView_labelTextColor" format="color|reference"/>
        <!-- Размер текста надписи стандартного элемента меню -->
        <attr name="SwipeMenuItemView_labelTextSize" format="dimension|reference"/>
        <!-- Размер горизонтальных отступов надписи от контейнера стандартного элемента меню -->
        <attr name="SwipeMenuItemView_labelHorizontalMargin" format="dimension|reference"/>
        <!-- Размер верхнего отступа от надписи до иконки стандартного элемента меню -->
        <attr name="SwipeMenuItemView_labelTopMargin" format="dimension|reference"/>

    </declare-styleable>
