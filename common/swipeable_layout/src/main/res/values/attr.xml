        <attr name="SwipeableLayout_moveToFolderIcon" format="string|reference"/>
        <attr name="SwipeableLayout_moveToFolderIconColor" format="color|reference"/>

        <attr name="SwipeableLayout_adminIcon" format="string|reference"/>
        <attr name="SwipeableLayout_adminIconColor" format="color|reference"/>

        <attr name="SwipeableLayout_adminOffIcon" format="string|reference"/>
        <attr name="SwipeableLayout_adminOffIconColor" format="color|reference"/>

        <attr name="SwipeableLayout_renameIcon" format="string|reference"/>
        <attr name="SwipeableLayout_renameIconColor" format="color|reference"/>

