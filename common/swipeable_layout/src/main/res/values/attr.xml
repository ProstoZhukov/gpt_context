<resources>

    <attr name="swipeableLayoutTheme" format="reference"/>

    <declare-styleable name="SwipeableLayout">
        <attr name="dismissMessage" format="string"/>

        <!-- Определяет наличие разделителей пунктов меню. По умолчанию true -->
        <attr name="SwipeableLayout_hasMenuItemDividers" format="boolean"/>
        <!-- Цвет фона при смахивании ячейки с меню -->
        <attr name="SwipeableLayout_menuDismissMessageBackground" format="color|reference"/>
        <!-- Цвет текста сообщения об удалении при смахивании ячейки с меню -->
        <attr name="SwipeableLayout_menuDismissMessageTextColor" format="color|reference"/>
        <!-- Цвет текста сообщения об удалении при смахивании содержимого ячейки -->
        <attr name="SwipeableLayout_contentDismissMessageTextColor" format="color|reference"/>
        <!-- Цвет иконки стандартного меню -->
        <attr name="SwipeableLayout_iconTextColor" format="color|reference"/>
        <!-- Цвет надписи у стандартного меню -->
        <attr name="SwipeableLayout_labelTextColor" format="color|reference"/>
        <!-- Цвет надписи у текстового элемента -->
        <attr name="SwipeableLayout_textItemTextColor" format="color|reference"/>

        <!-- Стили фона пунктов меню с иконкой, предусмотренные в стандарте -->
        <attr name="SwipeableLayout_itemBackgroundOrange" format="color|reference"/>
        <attr name="SwipeableLayout_itemBackgroundBlue" format="color|reference"/>
        <attr name="SwipeableLayout_itemBackgroundGreen" format="color|reference"/>
        <attr name="SwipeableLayout_itemBackgroundRed" format="color|reference"/>
        <attr name="SwipeableLayout_itemBackgroundGrey" format="color|reference"/>
        <attr name="SwipeableLayout_itemBackgroundPink" format="color|reference"/>

        <!-- Стили фона пунктов меню с текстом, предусмотренные в стандарте -->
        <attr name="SwipeableLayout_textItemBackgroundDefault" format="color|reference"/>
        <attr name="SwipeableLayout_textItemBackgroundDanger" format="color|reference"/>

        <attr name="SwipeableLayout_deleteIcon" format="string|reference"/>
        <attr name="SwipeableLayout_deleteIconColor" format="color|reference"/>

        <attr name="SwipeableLayout_videoCallIcon" format="string|reference"/>
        <attr name="SwipeableLayout_videoCallIconColor" format="color|reference"/>

        <attr name="SwipeableLayout_messageIcon" format="string|reference"/>
