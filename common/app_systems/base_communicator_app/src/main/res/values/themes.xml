<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseCommunicatorAppTheme" parent="AppTheme">
        <item name="swipeableLayoutTheme">@style/ColorfulSwipeableLayoutTheme</item>
        <item name="motivationTheme">@style/MotivationCommonLight</item>
        <item name="loginSettingsTheme">@style/LoginSettingsThemeWhite</item>
    </style>

    <!--region Временный набор стилей для коммуникатора исключающий наследование от глобальной темы, нужен пока все приложения не перейдут на общую темизацию-->
    <style name="GlobalBaseCommunicatorAppTheme">
        <item name="swipeableLayoutTheme">@style/ColorfulSwipeableLayoutTheme</item>
        <item name="motivationTheme">@style/MotivationCommonLight</item>
        <item name="Toolbar_container_style">@style/SbisCommunicatorToolbar</item>
        <item name="loginSettingsTheme">@style/LoginSettingsThemeWhite</item>
        <item name="android:actionBarSize">?inlineHeight_l</item>
        <item name="actionBarSize">?inlineHeight_l</item>
    </style>
    <!--endregion -->

    <style name="SbisCommunicatorToolbar" parent="SbisToolbar">
        <item name="android:background">?unaccentedAdaptiveBackgroundColor</item>
    </style>

    <style name="CommunicatorDefaultLightTheme" parent="FeatureDefaultLightTheme">
        <item name="globalToolbarStyle">@style/CommunicatorDefaultLightTheme</item>
        <item name="headerBackgroundColor">?unaccentedAdaptiveBackgroundColor</item>
        <item name="lightStatusBar">true</item>
        <item name="android:actionBarSize">?inlineHeight_l</item>
        <item name="actionBarSize">?inlineHeight_l</item>
