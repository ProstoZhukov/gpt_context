<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/period_picker_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/period_picker"
            layout="@layout/date_picker_layout"
            android:layout_width="@dimen/date_picker_width"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/date_picker_fragment_left_right_margin"
            android:layout_marginTop="@dimen/date_picker_fragment_top_bottom_margin"
            android:layout_marginRight="@dimen/date_picker_fragment_left_right_margin"
            android:layout_marginBottom="@dimen/date_picker_fragment_top_bottom_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="@dimen/date_picker_vertical_percent"
            app:layout_constraintLeft_toRightOf="@+id/guideline_left"
            app:layout_constraintRight_toLeftOf="@+id/guideline_right"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/date_picker_guideline_left_percent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/date_picker_guideline_right_percent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>